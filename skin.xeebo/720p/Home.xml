<window id="0">
	<defaultcontrol always="true">9212</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<include condition="IsEmpty(Skin.String(HomeList_1)) + !Window.Previous(StartUp)">Home_Setup</include>
	<onload condition="StringCompare(Skin.String(HomeList_1),Home_Random_List) | StringCompare(Skin.String(HomeList_2),Home_Random_List) | StringCompare(Skin.String(HomeList_3),Home_Random_List) | StringCompare(Skin.String(HomeList_4),Home_Random_List)">RunScript(script.randomitems,limit=6&amp;unplayed=True&amp;albums=True)</onload>
	<onload condition="IsEmpty(Window(Home).Property(Watchlist_Running))">RunScript(script.watchlist,movies=true&amp;episodes=true&amp;albums=true&amp;limit=10)</onload>
	<controls>
		<include>Common_Background</include>
		<include condition="!Skin.HasSetting(AltHomeStyle)">DefaultHomeStyle</include>
		<include condition="Skin.HasSetting(AltHomeStyle)">AltHomeStyle</include>
	</controls>
</window>
