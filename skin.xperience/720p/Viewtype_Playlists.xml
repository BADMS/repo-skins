		</control>

						<!--Scrollbar-->

						<control type="scrollbar" id="70">
								<description>Scrollbar</description>
								<posx>1057</posx>
								<posy>50</posy>
								<width>98</width>
								<height>520</height>
								<visible>true</visible>
								<onleft>50</onleft>
								<onright>50</onright>
								<textureslidernib>views/list/other/scrollbar_bar.png</textureslidernib>
