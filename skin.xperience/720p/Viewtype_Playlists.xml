<includes>

		<!-- list id="50" -->

		<include name="Viewtype-Playlists">

			<control type="group">
			<include>CommonViewAnimations</include>

			<control type="image">
					<description>Back Panel</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>1280</width>
					<height>720</height>
					<texture>views/thumb/panels/back.png</texture>
					<aspectratio>stretch</aspectratio>
			</control>

			<control type="list" id="50">
                <posx>150</posx>
                <posy>90</posy>
                <height>438</height>
                <width>1000</width>
				<pagecontrol>70</pagecontrol>
				<onleft>9010</onleft>
				<onright>70</onright>
				<onup>50</onup>
				<ondown>50</ondown>
				<viewtype label="Playlists Panel">Now Playing View (edit currently playing items)</viewtype>
				<scrolltime>0</scrolltime>
				<itemlayout height="70">
					<control type="label">
						<posx>120</posx>
						<posy>0</posy>
						<width>740</width>
						<height>70</height>
						<font>Mediumhack</font>
                  		<align>left</align>
						<label>[B]$INFO[ListItem.Label][/B]</label>
						<textcolor>white</textcolor>
						<scroll>false</scroll>
					</control>
                    <!-- File info under title left side -->
					<control type="label">
						<posx>120</posx>
						<posy>30</posy>
						<width>200</width>
						<height>70</height>
						<font>Listviewhack</font>
                        <align>left</align>
						<label>$INFO[ListItem.Duration]</label>
						<textcolor>white</textcolor>
						<scroll>false</scroll>
                        <visible>!IsEmpty(ListItem(num).filename)</visible>
					</control>
                    <!-- File info under title left side Folder level -->
					<control type="label">
						<posx>120</posx>
						<posy>30</posy>
						<width>839</width>
						<height>70</height>
						<font>Listviewhack</font>
                        <align>left</align>
						<label>$INFO[listitem.path]</label>
						<textcolor>white</textcolor>
						<scroll>false</scroll>
                        <visible>IsEmpty(ListItem(num).filename)</visible>
					</control>
                    <!-- Thumb left side -->
					<control type="image">
						<posx>40</posx>
						<posy>18</posy>
						<width>64</width>
						<height>64</height>
						<texture background="true">$INFO[listitem.thumb]</texture>
						<aspectratio>keep</aspectratio>
						<fadetime>300</fadetime>
						<visible>!IsEmpty(ListItem.Thumb)</visible>
					</control>
					<control type="image">
						<posx>40</posx>
						<posy>18</posy>
						<width>64</width>
						<height>64</height>
						<texture>$INFO[listitem.actualicon]</texture>
						<aspectratio>keep</aspectratio>
						<fadetime>300</fadetime>
						<visible>IsEmpty(ListItem.Thumb)</visible>
					</control>
					<control type="image">
						<posx>15</posx>
						<posy>15</posy>
						<width>950</width>
						<height>1</height>
						<texture>views/list/other/list_line.png</texture>
