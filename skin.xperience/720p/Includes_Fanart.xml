<includes>

		<!-- Info Panels Music View -->
		
		<include name="InfoPanelMusicfanart">
			<control type="largeimage">
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>720</height>
				<info>Listitem.Property(Fanart_Image)</info>
                <aspectratio scalediffuse="false">stretch</aspectratio>
                <texture background="true" diffuse="views/music panel/diffuse/panel-diffuse.png" />
                <fadetime>300</fadetime>
				<colordiffuse>11FFFFFF</colordiffuse>
				<visible>!Skin.HasSetting(Fanart)</visible>
			</control>
		</include>

		<!-- List Panel Views -->
		
		<include name="ListPanelfanart">
			<control type="image">
				<description>List Panel fanart</description>
				<posx>36</posx>
				<posy>36</posy>
				<width>561</width>
				<height>576</height>
				<info>Listitem.Property(Fanart_Image)</info>
				<texture background="true" diffuse="views/poster/diffuse/list_fanart-diffuse.png" />
				<aspectratio align="center" aligy="center" scalediffuse="false">scale</aspectratio>
				<fadetime>300</fadetime>
				<colordiffuse>11FFFFFF</colordiffuse>
				<visible>!Skin.HasSetting(Fanart)</visible>
			</control>
		</include>
		
		<!-- Info Panels Views -->
		
		<include name="InfoPanelfanart">
			<control type="largeimage">
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>720</height>
                <aspectratio scalediffuse="false">stretch</aspectratio>
				<info>Listitem.Property(Fanart_Image)</info>
                <texture background="true" diffuse="views/info panel/diffuse/panel-diffuse.png" />
                <fadetime>300</fadetime>
				<colordiffuse>11FFFFFF</colordiffuse>
				<visible>!Skin.HasSetting(Fanart) | !Control.IsVisible(67)</visible>
			</control>
		</include>
		
		<include name="InfoPanelfanartTvshow">
			<control type="largeimage">
                <posx>0</posx>
                <posy>0</posy>
                <width>1280</width>
                <height>720</height>
				<info>Listitem.Property(Fanart_Image)</info>
                <aspectratio scalediffuse="false">stretch</aspectratio>
                <texture background="true" diffuse="views/info panel/diffuse/panel-diffuse.png" />
                <fadetime>300</fadetime>
				<visible>!Skin.HasSetting(Fanart)</visible>
			</control>
		</include>
		
		<!-- FileView Fanart -->
		
		<include name="Filefanart">
			<control type="largeimage">
				<description>Panel fanart</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>720</height>
				<info>Listitem.Property(Fanart_Image)</info>
				<texture background="true" diffuse="views/thumb/diffuse/diffuse.png" />
				<aspectratio align="center" scalediffuse="false">stretch</aspectratio>
				<fadetime>300</fadetime>
				<colordiffuse>11FFFFFF</colordiffuse>
				<visible>!Skin.HasSetting(Fanart)</visible>
			</control>
		</include>
		
		<!-- Poster View Fanart -->
		<include name="posterviewfanart">
			<control type="largeimage">
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>720</height>
				<info>Listitem.Property(Fanart_Image)</info>
				<texture background="true" diffuse="views/poster/diffuse/stagediffuse.png" />
				<aspectratio>stretch</aspectratio>
				<colordiffuse>FF26303e</colordiffuse>
				<fadetime>300</fadetime>
				<visible>!Skin.HasSetting(Fanart)</visible>
				<include>OpenCloseAnimation</include>
			</control>
		</include>
		
		<!-- Banner View -->
		<include name="BannerviewfanartTvshow">
			<control type="largeimage">
				<posx>189</posx>
				<posy>0</posy>
				<width>902</width>
				<height>720</height>
				<info>Listitem.Property(Fanart_Image)</info>
                <aspectratio scalediffuse="false">scale</aspectratio>
                <texture background="true" diffuse="views/banner/diffuse/fanart.png" />
                <fadetime>300</fadetime>
				<colordiffuse>11FFFFFF</colordiffuse>
				<visible>!Skin.HasSetting(Fanart)</visible>
			</control>
		</include>
</includes>