<window id="147">
	<defaultcontrol>61</defaultcontrol>
	<controls>
		<control type="group">
			<include>OpenCloseAnimation</include>
			<include>AddonFade</include>
				<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>720</height>
				<texture>dialogs/content/pluginbg.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image">
				<posx>309</posx>
				<posy>154</posy>
				<width>662</width>
				<height>362</height>
				<texture>dialogs/content/bghighlight3.png</texture>
				<aspectratio>stretch</aspectratio>
			<animation type="visible">
				<effect type="fade" start="0" end="100" time="300" reversible="false" />
			</animation>
			<animation type="hidden">
				<effect type="fade" start="100" end="0" time="300" reversible="false" />
			</animation>
			</control>
			<control type="image">
				<posx>327</posx>
				<posy>199</posy>
				<width>625</width>
				<height>340</height>
				<texture>dialogs/other/filebroswerlines.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
				<control type="label" id="1">
				<description>Heading</description>
				<posx>330</posx>
				<posy>165</posy>
				<width>620</width>
				<font>Medium</font>
				<textcolor>white</textcolor>
				<align>center</align>
			</control>
			<control type="image">
				<description>Large Icon Image</description>
				<posx>680</posx>
				<posy>210</posy>
				<width>256</width>
				<height>256</height>
				<texture diffuse="dialogs/other/filebrowser-diffuse.png">$INFO[ListItem.Icon]</texture>
				<aspectratio align="center" aligny="bottom" keepdiffuse="false">keep</aspectratio>
				<visible>!Window.isVisible(AddonSettings) + !Window.IsActive(TextViewer)</visible>
			</control>
			<control type="image">
				<description>Large Icon Reflection</description>
				<posx>680</posx>
				<posy>465</posy>
				<width>256</width>
				<height>256</height>
				<texture flipy="true" diffuse="dialogs/other/icondiffuse.png">$INFO[Listitem.Icon]</texture>
				<colordiffuse>66ffffff</colordiffuse>
				<aspectratio align="center" aligny="top" keepdiffuse="false">keep</aspectratio>
				<visible>!Window.isVisible(AddonSettings) + !Window.IsActive(TextViewer)</visible>
			</control>
			<control type="textbox" id="5">
				<description>Text Area</description>
				<posx>325</posx>
				<posy>210</posy>
				<width>315</width>
				<height>300</height>
				<textcolor>white</textcolor>
				<font>Small</font>
				<autoscroll delay="3000" time="1000" repeat="10000">true</autoscroll>
				<pagecontrol>61</pagecontrol>
			</control>
			<control type="button">
				<description>Fake Close Window button</description>
				<onclick>Window.Previous(146)</onclick>
			</control>
		</control>
		<!-- Debug Info -->
		<include>debug</include>
	</controls>
</window>
