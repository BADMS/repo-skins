<window id="122">
		<defaultcontrol>2</defaultcontrol>
		<allowoverlay>no</allowoverlay>
		<controls>

		<control type="group">
				<posx>330</posx>
				<posy>180</posy>
				<include>NowPlayingFullscreen</include>

			<control type="image">
				<posx>10</posx>
				<posy>10</posy>
				<width>600</width>
				<height>410</height>
				<texture>osd/fullscreen/osdsettings.png</texture>
				<aspectratio>stretch</aspectratio>
				<colordiffuse>FFFFFFFF</colordiffuse>
			</control>

			<control type="list" id="2">
				<posx>35</posx>
				<posy>80</posy>
				<width>600</width>
				<height>290</height>
				<pagecontrol>60</pagecontrol>
				<onleft>2</onleft>
				<onright>60</onright>
				<onup>2</onup>
				<ondown>2</ondown>
			<itemlayout height="32">
			<control type="label">
				<posx>10</posx>
				<width>530</width>
				<height>30</height>
				<info>ListItem.Label</info>
				<textcolor>bluegrey</textcolor>
				<scroll>false</scroll>
			</control>
			</itemlayout>
			<focusedlayout height="32">
			<control type="image">
				<width>550</width>
				<height>30</height>
				<texture>windows/common/list_fo.png</texture>
			</control>
			<control type="label">
				<posx>10</posx>
				<width>530</width>
				<height>30</height>
				<info>ListItem.Label</info>
				<textcolor>white</textcolor>
			</control>
			</focusedlayout>
			</control>
			
			<control type="image">
				<posx>10</posx>
				<posy>75</posy>
				<width>600</width>
				<height>1</height>
				<texture>osd/fullscreen/line.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="label" id="3">
				<description>Visualisation label</description>
				<posx>65</posx>
				<posy>40</posy>
				<width>720</width>
				<height>30</height>
				<textcolor>white</textcolor>
				<font>Medium</font>
				<align>left</align>
				<aligny>-</aligny>
			</control>
			<control type="label" id="4">
				<description>No Visualisations</description>
				<posx>300</posx>
				<posy>190</posy>
				<label>13389</label>
				<font>Medium</font>
				<textcolor>white</textcolor>
				<align>center</align>
			</control>
			<control type="label">
				<description>number files and pages</description>
				<posx>560</posx>
				<posy>38</posy>
				<width>300</width>
				<label>($INFO[Container(2).NumItems]) ($INFO[Container(2).CurrentPage]/$INFO[Container(2).NumPages])</label>	
				<font>Small</font>
				<align>right</align>
				<textcolor>white</textcolor>
				<scroll>false</scroll>
				<animation effect="slide" time="100" end="-55,0" condition="Control.HasFocus(60)">Conditional</animation>
			</control>
			<control type="spincontrol" id="60">
				<description>page button</description>
				<posx>510</posx>
				<posy>50</posy>
				<height>10</height>
				<width>25</width>
				<font>-</font>
				<align>-</align>
				<subtype>page</subtype>
				<onleft>2</onleft>
				<onright>2</onright>
				<ondown>2</ondown>
				<onup>2</onup>
				<visible allowhiddenfocus="true">Control.HasFocus(60)</visible>
				<animation effect="fade" delay="150" time="100">Focus</animation>
				<animation effect="fade" delay="150" time="100">UnFocus</animation>
			</control>
			</control>

	<!-- Debug Info -->
	<include>debug</include>

	</controls>
</window>