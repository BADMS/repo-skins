<?xml version="1.0" encoding="UTF-8"?>
<addon
	id="skin.kover"
	version="0.60.2"
	name="KOver"
	provider-name="Jayz2K">
	<requires>
		<import addon="xbmc.gui" version="5.10.0"/>
		<import addon="script.skinshortcuts" version="0.6.5" />
		<import addon="script.skin.helper.service" version="1.0.23"/>
		<import addon="service.skin.widgets" version="0.0.30"/>
	</requires>
	<extension point="xbmc.gui.skin" defaultthemename="Textures.xbt" effectslowdown="1.00" debugging="false">
		<res width="1920" height="1080" aspect="16:9" default="true" folder="16x9" />
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">KOver [Kodi Overlay]. A customizable skin. Build your own views and color sets.</summary>
		<disclaimer lang="en">Mouse and Touch device not supported</disclaimer>
		<description lang="en"></description>
	</extension>
</addon>