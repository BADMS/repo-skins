<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype_Poster_Large">
		<control type="group">
			<visible>Control.IsVisible(551)</visible>
			<!-- Browser -->
			<control type="wraplist" id="551">
				<viewtype label="31430">bigwrap</viewtype>
				<posx>-100</posx>
				<posy>40</posy>
				<height>500</height>
				<width>1500</width>
				<include condition="!Skin.HasSetting(ViewLockdown)">OnUp7000</include>
				<ondown>60</ondown>
				<onleft>550</onleft>
				<onright>550</onright>
				<orientation>horizontal</orientation>
				<focusposition>1</focusposition>
				<scrolltime>200</scrolltime>
				<!-- XXX: Causes left-most item to 'blink' out instead of smoothly scrolling off (sometimes...)
				<preloaditems>2</preloaditems>
				-->
				<pagecontrol>60</pagecontrol>
				<include>Animation_FadedByMenu</include>
				<include>Animation_OpenCloseFade</include>
				<include>Animation_HiddenByInfo</include>
				<visible>!Skin.HasSetting(NoViewPosterLarge)</visible>
				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons)</visible>
				<itemlayout width="300" height="420">
					<control type="group">
						<posx>-30</posx>
						<posy>9</posy>
						<!-- Unfocused Item - Poster -->
						<control type="image">
							<posx>20</posx>
							<posy>21</posy>
							<width>236</width>
							<height>362</height>
							<texture background="true" fallback="DefaultThumb.png">$VAR[PosterThumb]</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!IsEmpty(ListItem.Title)</visible>
						</control>
						<control type="image">
							<posx>20</posx>
							<posy>21</posy>
							<width>236</width>
							<height>362</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio scalediffuse="false">keep</aspectratio>
							<visible>IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Unfocused Item - Frame -->
						<control type="image">
							<posx>20</posx>
							<posy>21</posy>
							<width>236</width>
							<height>362</height>
							<texture>frames/ClassicFrameGlass_Vertical.png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<colordiffuse>GlassDiffuse</colordiffuse>
							<visible>!IsEmpty(ListItem.Title)</visible>
						</control>
						<control type="image">
							<width>285</width>
							<height>408</height>
							<texture>frames/ClassicFrame_PosterSmall.png</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Unfocused Item - Watched Overlay -->
						<control type="image">
							<posx>220</posx>
							<posy>341</posy>
							<width>32</width>
							<height>32</height>
							<fadetime>400</fadetime>
							<texture>$INFO[ListItem.Overlay]</texture>
							<colordiffuse>WatchedOverlay</colordiffuse>
							<visible>!ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
						</control>
						<!-- Unfocused Item - Watched Overlay for In-Progress Items -->
						<control type="image">
							<posx>216</posx>
							<posy>336</posy>
							<width>43</width>
							<height>43</height>
							<texture>flags/Progress/$INFO[ListItem.PercentPlayed].png</texture>
							<colordiffuse>WatchedOverlay</colordiffuse>
							<visible>ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
						</control>
					</control>
				</itemlayout>
				<focusedlayout width="370" height="420">
					<!-- Focused Item Poster -->
					<control type="group">
						<animation type="Focus" reversible="false">
							<effect type="zoom" center="100,0" start="88" end="100" time="250" tween="sine" easing="inout" delay="200" />
						</animation>
						<posx>-15</posx>
						<!-- Focused Item - Poster -->
						<control type="image">
							<posx>13</posx>
							<posy>27</posy>
							<width>290</width>
							<height>443</height>
							<texture background="true" fallback="DefaultThumb.png">$VAR[PosterThumb]</texture>
							<aspectratio scalediffuse="false">stretch</aspectratio>
							<visible>!IsEmpty(ListItem.Title)</visible>
						</control>
						<control type="image">
							<posx>13</posx>
							<posy>27</posy>
							<width>290</width>
							<height>443</height>
							<texture background="true">$INFO[ListItem.Icon]</texture>
							<aspectratio scalediffuse="false">keep</aspectratio>
							<visible>IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Focused Item - Poster Frame -->
						<control type="image">
							<posx>-2</posx>
							<posy>6</posy>
							<width>321</width>
							<height>485</height>
							<texture>frames/ClassicFrame_PosterMedium.png</texture>
							<aspectratio>stretch</aspectratio>
							<visible>!IsEmpty(ListItem.Title)</visible>
						</control>
						<!-- Focused Item - Watched Overlay -->
						<control type="image">
							<posx>260</posx>
							<posy>423</posy>
							<width>32</width>
							<height>32</height>
							<fadetime>400</fadetime>
							<texture>$INFO[ListItem.Overlay]</texture>
							<colordiffuse>WatchedOverlay</colordiffuse>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>!ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
						</control>
						<!-- Focused Item - Watched Overlay for In-Progress Items -->
						<control type="image">
							<posx>256</posx>
							<posy>418</posy>
							<width>43</width>
							<height>43</height>
							<texture>flags/Progress/$INFO[ListItem.PercentPlayed].png</texture>
							<colordiffuse>WatchedOverlay</colordiffuse>
							<animation type="Focus" reversible="false">
								<effect type="fade" start="0" end="100" time="300" />
							</animation>
							<visible>ListItem.IsResumable + [[[Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideMovieWatchedOverlays)] | [![Container.Content(movies) | Container.Content(sets)] + !Skin.HasSetting(HideTVWatchedOverlays)]]</visible>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="group">
				<include>Animation_FadedByMenu</include>
				<include>Animation_HiddenByInfo</include>
				<include>Animation_OpenCloseFade</include>
				<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons)</visible>
				<control type="group">
					<posx>520</posx>
					<posy>450</posy>
					<!-- Title -->
					<control type="fadelabel">
						<width>730</width>
						<height>50</height>
						<aligny>center</aligny>
						<scrollout>false</scrollout>
						<pauseatend>400</pauseatend>
						<font>METF_TitleTextLarge</font>
						<textcolor>TitleText</textcolor>
						<label>$VAR[ListItemTitle]</label>
					</control>
					<!-- Details -->
					<control type="grouplist">
						<posy>42</posy>
						<width>1200</width>
						<height>30</height>
						<itemgap>10</itemgap>
						<orientation>horizontal</orientation>
						<include>ViewDetailsGenreYearDurEpsUnwatched</include>
						<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons)</visible>
						<include>VisibleIfNotMovieSet</include>
					</control>
					<control type="label">
						<posy>42</posy>
						<width>800</width>
						<height>30</height>
						<font>METF_MediaDetailsSmall</font>
						<textcolor>MediaDetailsGenre</textcolor>
						<label>$LOCALIZE[31313]</label>
						<include>VisibleIfMovieSet</include>
					</control>
				</control>
			</control>
			<include>ScrollBar_Horizontal</include>
		</control>
	</include>
</includes>
