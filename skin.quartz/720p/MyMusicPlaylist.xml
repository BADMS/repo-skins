<window id="500">
  <defaultcontrol always="true">50</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <include>OpenClose</include>
  <controls>
    <control type="label">
      <include>DialogID</include>
      <label>MyMusicPlaylist.xml</label>
    </control>
    <control type="label" description="Heading">
      <include>HeadingR</include>
      <label>$LOCALIZE[559] $INFO[Container.NumItems,(,)]</label>
    </control>
    <control type="group">
      <posx>0</posx>
      <posy>0</posy>
      <control type="group" description="50 fatList">
        <visible>Control.IsVisible(50)</visible>
        <control type="group" description="Album thumbs">
          <posx>-4</posx>
          <posy>178</posy>
          <animation effect="rotatey" start="0" end="-9" center="260," time="0" reversible="false" condition="true">Conditional</animation>
          <control type="group" description="Squares">
            <control type="image" description="Thumb Reflection">
              <posx>130</posx>
              <posy>440</posy>
              <width>400</width>
              <height>440</height>
              <include>Icon_Fade</include>
              <texture background="true" diffuse="img/Reflection1.png" flipy="true">$INFO[ListItem.Icon]</texture>
              <aspectratio>stretch</aspectratio>
            </control>
            <control type="image" description="Thumb">
              <posx>130</posx>
              <posy>0</posy>
              <width>400</width>
              <height>440</height>
              <include>Icon_Fade</include>
              <texture diffuse="img/Diffuse1.png" background="true">$INFO[ListItem.Icon]</texture>
              <aspectratio>stretch</aspectratio>
            </control>
            <control type="image" description="Thumb">
              <posx>130</posx>
              <posy>0</posy>
              <width>400</width>
              <height>440</height>
              <include>Icon_Fade</include>
              <texture border="4">img/CoverOverlay1.png</texture>
              <aspectratio>stretch</aspectratio>
            </control>
          </control>
        </control>
        <control type="group" description="Slider and List">
          <animation effect="slide" start="0,0" end="0,-222" time="0" condition="StringCompare(Container.NumItems,1)">conditional</animation>
          <animation effect="slide" start="0,0" end="0,-148" time="0" condition="StringCompare(Container.NumItems,2)">conditional</animation>
          <animation effect="slide" start="0,0" end="0,-148" time="0" condition="StringCompare(Container.NumItems,3)">conditional</animation>
          <animation effect="slide" start="0,0" end="0,-74" time="0" condition="StringCompare(Container.NumItems,4)">conditional</animation>
          <animation effect="slide" start="0,0" end="0,-74" time="0" condition="StringCompare(Container.NumItems,5)">conditional</animation>
          <posx>680</posx>
          <posy>94</posy>
          <control type="fixedlist" id="50">
            <posx>0</posx>
            <posy>0</posy>
            <width>535</width>
            <height>592</height>
            <onleft condition="!Skin.HasSetting(ViewOptions_Hide)">9000</onleft>
            <onright condition="Skin.HasSetting(Scrollbars_Active)">60</onright>
            <onright condition="![Skin.HasSetting(Scrollbars_Active) | Skin.HasSeting(ViewOptions_Hide)">9000</onright>
            <onup>50</onup>
            <ondown>50</ondown>
            <pagecontrol>60</pagecontrol>
            <viewtype label="535">List</viewtype>
            <focusposition>3</focusposition>
            <movement>4</movement>
            <preloaditems>4</preloaditems>
            <scrolltime tween="sine" easing="inout">280</scrolltime>
            <itemlayout width="535" height="74">
              <include>ListBG</include>
              <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <height>74</height>
                <width>74</width>
                <bordersize>6</bordersize>
                <texture background="true">$INFO[ListItem.Icon]</texture>
                <aspectratio>scale</aspectratio>
              </control>
              <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <height>74</height>
                <width>74</width>
                <bordersize>6</bordersize>
                <texture border="3">img/CoverOverlay0.png</texture>
              </control>
              <control type="label" description="Main Label">
                <scroll>false</scroll>
                <textcolor>White</textcolor>
                <include>51MainLabel</include>
                <label>$INFO[ListItem.Label]</label>
              </control>
              <control type="label" description="Label2">
                <scroll>false</scroll>
                <textcolor>Grey</textcolor>
                <include>51Label2</include>
                <label>$INFO[ListItem.Label2]</label>
              </control>
              <control type="image" description="playing">
                <visible>Player.HasAudio</visible>
                <visible>StringCompare(ListItem.Title,MusicPlayer.Title)</visible>
                <posx>500</posx>
                <posy>0</posy>
                <height>74</height>
                <width>24</width>
                <aspectratio>keep</aspectratio>
                <texture>img/NowPlayingNF.png</texture>
              </control>
            </itemlayout>
            <focusedlayout width="535" height="74">
              <include>ListBG</include>
              <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <height>74</height>
                <width>74</width>
                <bordersize>6</bordersize>
                <texture background="true">$INFO[ListItem.Icon]</texture>
                <aspectratio>scale</aspectratio>
              </control>
              <control type="image">
                <posx>0</posx>
                <posy>0</posy>
                <height>74</height>
                <width>74</width>
                <bordersize>6</bordersize>
                <texture border="3">img/CoverOverlay0.png</texture>
              </control>
              <control type="label" description="Main Label">
                <include>51MainLabel</include>
                <textcolor>White2</textcolor>
                <label>$INFO[ListItem.Label]</label>
              </control>
              <control type="label" description="Label2">
                <include>51Label2</include>
                <textcolor>Grey</textcolor>
                <label>$INFO[ListItem.Label2]</label>
              </control>
              <control type="image" description="playing">
                <visible>Player.HasAudio</visible>
                <visible>StringCompare(ListItem.Title,MusicPlayer.Title)</visible>
                <animation effect="fade" start="50" end="100" time="100" delay="200">Focus</animation>
                <posx>500</posx>
                <posy>0</posy>
                <height>74</height>
                <width>24</width>
                <aspectratio>keep</aspectratio>
                <texture>img/NowPlayingFO.png</texture>
              </control>
            </focusedlayout>
          </control>
          <control type="group" description="Slider">
            <animation condition="Control.HasFocus(60)" effect="slide" start="0,0" end="640,360" time="300" reversible="true">Conditional</animation>
            <animation condition="Control.HasFocus(60)" effect="zoom" start="100" end="0" time="300" reversible="true">Conditional</animation>
            <include>Slider5</include>
            <animation condition="Container(50).Position(0)" effect="slide" start="0,0" end="0,-222"
					time="180" easing="inout" reversible="true">Conditional</animation>
            <animation condition="Container(50).Position(1)" effect="slide" start="0,0" end="0,-148"
					time="180" easing="inout" reversible="true">Conditional</animation>
            <animation condition="Container(50).Position(2)" effect="slide" start="0,0" end="0,-74"
					time="180" easing="inout" reversible="true">Conditional</animation>
            <animation condition="Container(50).Position(3)" effect="slide" start="0,0" end="0,0"
					time="180" easing="inout" reversible="true">Conditional</animation>
            <animation condition="Container(50).Position(4)" effect="slide" start="0,0" end="0,74"
					time="180" easing="inout" reversible="true">Conditional</animation>
            <animation condition="Container(50).Position(5)" effect="slide" start="0,0" end="0,148"
					time="180" easing="inout" reversible="true">Conditional</animation>
            <animation condition="Container(50).Position(6)" effect="slide" start="0,0" end="0,222"
					time="180" easing="inout" reversible="true">Conditional</animation>
            <animation condition="Container(50).Position(7)" effect="slide" start="0,0" end="0,296"
					time="180" easing="inout" reversible="true">Conditional</animation>
            <animation condition="Container(50).Position(8)" effect="slide" start="0,0" end="0,370"
					time="180" easing="inout" reversible="true">Conditional</animation>
          </control>
        </control>
        <control type="image">
          <visible>Container.HasPrevious</visible>
          <animation effect="fade" time="200">VisibleChange</animation>
          <posx>670</posx>
          <posy>90</posy>
          <height>54</height>
          <width>555</width>
          <texture flipy="true">img/DefaultGradient.png</texture>
          <aspectratio>stretch</aspectratio>
        </control>
        <control type="image">
          <animation effect="fade" time="200">VisibleChange</animation>
          <visible>Container.HasNext</visible>
          <posx>670</posx>
          <posy>642</posy>
          <height>54</height>
          <width>555</width>
          <texture>img/DefaultGradient.png</texture>
          <aspectratio>stretch</aspectratio>
        </control>
        <control type="scrollbar" id="60">
          <posx>34r</posx>
          <posy>90</posy>
          <height>580</height>
          <onleft>50</onleft>
          <onright>-</onright>
        </control>
      </control>
      <control type="group" description="Side menu 9000 group">
        <include>9000Commons</include>
        <control type="grouplist" id="9000">
          <include>9000GrouplistParameters</include>
          <control type="radiobutton" id="20" description="Shuffle">
            <include>9000Buttons</include>
            <label>191</label>
          </control>
          <control type="button" id="21" description="Save">
            <include>9000Buttons</include>
            <label>190</label>
          </control>
          <control type="button" id="22" description="Clear">
            <include>9000Buttons</include>
            <label>192</label>
          </control>
          <control type="button" id="23" description="Play">
            <include>9000Buttons</include>
            <label>208</label>
          </control>
          <control type="button" id="26" description="Repeat">
            <include>9000Buttons</include>
            <label>-</label>
          </control>
        </control>
      </control>
    </control>
    <include>Debug_Grid</include>
  </controls>
</window>
