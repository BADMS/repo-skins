        </control>
        <control type="image">
          <description>separator</description>
          <posx>20</posx>
          <posy>75</posy>
          <width>360</width>
          <height>1</height>
          <texture>img/LineST.png</texture>
        </control>
      </control>
      <control type="button" id="2">
        <description>Exit button</description>
        <width>400</width>
        <height>50</height>
        <textcolor>Grey2</textcolor>
        <focusedcolor>White2</focusedcolor>
        <align>center</align>
        <textwidth>290</textwidth>
        <texturenofocus border="25,5,25,5">img/DialogMid.png</texturenofocus>
        <texturefocus border="25,5,25,5">img/DialogMidFO.png</texturefocus>
        <onclick>XBMC.Quit()</onclick>
        <pulseonselect>no</pulseonselect>
        <font>Normal</font>
        <label>13009</label>
        <visible>System.ShowExitButton</visible>
      </control>
