      <visible>![Window.IsActive(home) | Window.IsActive(LoginScreen.xml)]</visible>
      <control type="label" description="Clock other windows">
        <visible>Skin.HasSetting(ShowClock)</visible>
        <posx>75</posx>
        <posy>2</posy>
        <width>130</width>
        <height>50</height>
        <align>left</align>
        <aligny>center</aligny>
        <font>Clock</font>
        <textcolor>Grey</textcolor>
        <label>$INFO[System.Time]</label>
      </control>
      <control type="label" description="Content Debug">
        <visible>Skin.HasSetting(DebugInfo)</visible>
        <posx>200</posx>
        <posy>4</posy>
        <width>1280</width>
        <height>50</height>
        <align>left</align>
        <aligny>center</aligny>
        <font>Clock</font>
        <textcolor>Red</textcolor>
