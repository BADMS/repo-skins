  <include name="MediaHeader">
    <control type="group">
      <control type="label" description="Clock other windows">
        <visible>Skin.HasSetting(ShowClock)</visible>
        <visible>![Control.IsVisible(501) | Control.IsVisible(53) | Control.IsVisible(55)]</visible>
        <posx>75</posx>
        <posy>2</posy>
        <width>130</width>
        <height>50</height>
        <align>left</align>
        <aligny>center</aligny>
        <font>Clock</font>
        <textcolor>Grey</textcolor>
        <label>$INFO[System.Time]</label>
      </control>
      <control type="label" description="Content Debug">
        <visible>Skin.HasSetting(DebugInfo)</visible>
        <posx>200</posx>
        <posy>4</posy>
        <width>1280</width>
        <height>50</height>
        <align>left</align>
        <aligny>center</aligny>
        <font>Clock</font>
        <textcolor>Red</textcolor>
        <label>[B]$VAR[RowPosition] - $VAR[ContentType][/B]</label>
      </control>
    </control>
    <control type="grouplist">
      <visible>![Control.IsVisible(53) | Control.IsVisible(501) | Control.IsVisible(55)]</visible>
      <animation condition="Control.IsVisible(56) | Control.IsVisible(57) | Control.IsVisible(58) | Control.IsVisible(59)" effect="slide" start="0,0" end="0,-40" time="0" reversible="true">Conditional</animation>
      <posx>640</posx>
      <posy>40</posy>
      <width>620</width>
      <height>50</height>
      <align>center</align>
      <aligny>bottom</aligny>
      <orientation>horizontal</orientation>
      <control type="label" id="7777" description="Heading">
        <width min="40" max="620">auto</width>
        <height>50</height>
        <font>Heading</font>
        <textcolor>White2</textcolor>
        <scroll>false</scroll>
        <label>$VAR[GlobalHeadings]</label>
      </control>
      <control type="label" description="Number of files">
        <visible>!IsEmpty(Control.GetLabel(7777))</visible>
        <width min="40" max="80">auto</width>
        <height>54</height>
        <font>XXSmall</font>
        <textcolor>Grey</textcolor>
        <label>$INFO[Container.NumItems,  (,)]</label>
      </control>
    </control>
    <control type="grouplist">
      <visible>Control.IsVisible(501)</visible>
      <posx>320</posx>
      <posy>30</posy>
      <width>640</width>
      <height>50</height>
      <align>center</align>
      <aligny>bottom</aligny>
      <orientation>horizontal</orientation>
      <control type="label" id="7777" description="Heading">
        <width min="40" max="640">auto</width>
        <height>50</height>
        <font>Heading</font>
        <textcolor>White2</textcolor>
        <scroll>false</scroll>
        <label>$VAR[GlobalHeadings]</label>
      </control>
      <control type="label" description="Number of files">
        <visible>!IsEmpty(Control.GetLabel(7777))</visible>
        <width min="40" max="80">auto</width>
        <height>54</height>
        <font>XXSmall</font>
        <textcolor>Grey</textcolor>
        <label>$INFO[Container.NumItems,  (,)]</label>
      </control>
    </control>
    <control type="group" description="Scroll letter">
