<includes>

	<include name="PosterMediaFlagsVars">
		<posy>644</posy>
		<width>89</width>
		<height>59</height>
		<colordiffuse>FF474747</colordiffuse>
	</include>

	<include name="MediaInfo">

		<control type="group">
			<visible>!IsEmpty(ListItem.Title) | [!ListItem.IsFolder + Container.Content(movies)]</visible>

			<control type="group">
				<posx>45</posx>
				<visible>[Container.Content(movies) | Container.Content(episodes)] + !system.platform.xbox</visible>
				<control type="group">
					<posx>809</posx>
					<control type="image">
						<include>PosterMediaFlagsVars</include>
						<texture fallback="flags/source/default.png">$INFO[ListItem.VideoCodec,flags/videocodec/,.png]</texture>
						<visible>!substring(listitem.filename,hdtv) + !substring(listitem.filename,web-dl) + !substring(listitem.filename,dvd) + !substring(listitem.filename,bluray) + !substring(listitem.filename,blu-ray) + !substring(listitem.filename,bdrip) + !substring(listitem.filename,.iso,Right) + !substring(listitem.filename,.ifo,Right) + !substring(listitem.filename,divx) + !substring(listitem.filename,sdtv) + !substring(listitem.filename,.img,Right) + !substring(listitem.filename,hddvd) + !substring(listitem.filename,hd-dvd)</visible>
					</control>
					<control type="image">
						<include>PosterMediaFlagsVars</include>
						<texture>flags/source/sdtv.png</texture>
						<visible>substring(listitem.filename,sdtv)</visible>
					</control>
					<control type="image">
						<include>PosterMediaFlagsVars</include>
						<texture>flags/source/hdtv.png</texture>
						<visible>substring(listitem.filename,hdtv)</visible>
					</control>
					<control type="image">
						<include>PosterMediaFlagsVars</include>
						<texture>flags/source/webtv.png</texture>
						<visible>substring(listitem.filename,web-dl)</visible>
					</control>
					<control type="image">
						<include>PosterMediaFlagsVars</include>
						<texture>flags/source/hddvd.png</texture>
						<visible>substring(listitem.filename,hddvd) | substring(listitem.filename,hd-dvd)</visible>
					</control>
					<control type="image">
						<include>PosterMediaFlagsVars</include>
						<texture>flags/source/bluray.png</texture>
						<visible>substring(listitem.filename,bluray) | substring(listitem.filename,blu-ray) | substring(listitem.filename,bdrip)</visible>
					</control>
					<control type="image">
						<include>PosterMediaFlagsVars</include>
						<texture>flags/source/divx.png</texture>
						<visible>substring(listitem.filename,divx)</visible>
					</control>
					<control type="image">
						<include>PosterMediaFlagsVars</include>
						<texture>flags/source/dvd.png</texture>
						<visible>[substring(listitem.filename,dvd) + !substring(listitem.filename,hddvd) + !substring(listitem.filename,hd-dvd) + !substring(listitem.filename,bluray)] | [substring(listitem.filename,.iso,Right) + !substring(listitem.filename,bluray)] | substring(listitem.filename,.ifo,Right) | substring(listitem.filename,.img,Right)</visible>
					</control>				
				</control>
				<control type="group">
					<posx>914</posx>
					<control type="image">
						<include>PosterMediaFlagsVars</include>
						<texture fallback="flags/resolution/default.png">$INFO[ListItem.VideoResolution,flags/resolution/,.png]</texture>
					</control>
				</control>
				<control type="group">
					<posx>1019</posx>
					<control type="image">
						<include>PosterMediaFlagsVars</include>
						<texture fallback="flags/defaultsound.png">$INFO[ListItem.AudioCodec,flags/audio/,.png]</texture>
					</control>			
				</control>
				<control type="group">
					<posx>1019</posx>
					<control type="image">
						<include>PosterMediaFlagsVars</include>
						<texture>$INFO[ListItem.AudioChannels,flags/audio/,ch.png]</texture>
					</control>			
				</control>
			</control>

			<control type="group">
				<posx>1129</posx>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes)</visible>				
				<control type="image">
					<posy>646</posy>
					<height>54</height>
					<aspectratio aligny="center">keep</aspectratio>
					<colordiffuse>FF474747</colordiffuse>
					<texture fallback="flags/default.png">flags/studios/$INFO[ListItem.Studio,,.png]</texture>
				</control>
			</control>

			<control type="image">
				<posx>718</posx>
				<posy>662</posy>
				<width>122</width>
				<height>22</height>
				<info>ListItem.StarRating</info>
				<colordiffuse>StarRatingDiffuse</colordiffuse>
				<visible>!IsEmpty(ListItem.StarRating) + [Container.Content(episodes) | Container.Content(tvshows) | Container.Content(movies)]</visible>
				<animation effect="slide" end="308,0" condition="Container.Content(tvshows) | system.platform.xbox">Conditional</animation>
			</control>
		</control>
	</include>

</includes>