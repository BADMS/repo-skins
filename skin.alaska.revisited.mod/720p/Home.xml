<window id="0">
	<backgroundcolor>0xfffffafa</backgroundcolor>
	<defaultcontrol always="true">5043</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>

		<control type="button" id="5043">
			<description>visible after library update has finished</description>
			<posx>-20</posx>
			<posy>-20</posy>
			<width>1</width>
			<height>1</height>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
			<onfocus>XBMC.RunScript(script.recentlyadded,limit=10&amp;albums=True&amp;unplayed=True&amp;totals=True)</onfocus>
			<onfocus>Skin.Reset(LibraryUpdated)</onfocus>
			<onfocus>SetFocus(300)</onfocus>
			<visible>Skin.HasSetting(LibraryUpdated) + !Window.IsActive(musicscan) + !Window.IsActive(videoscan)</visible>
		</control>

		<control type="button" id="5043">
			<description>visible in all other cases</description>
			<posx>-20</posx>
			<posy>-20</posy>
			<width>1</width>
			<height>1</height>
			<texturenofocus>-</texturenofocus>
			<texturefocus>-</texturefocus>
			<onfocus>SetFocus(300)</onfocus>
			<visible>!Skin.HasSetting(LibraryUpdated) | [Skin.HasSetting(LibraryUpdated) + [Window.IsActive(musicscan) | Window.IsActive(videoscan)]]</visible>
		</control>

		<control type="multiimage">
			<include>Dimensions_Fullscreen</include>
			<randomize>true</randomize>
			<timeperimage>12000</timeperimage>
			<fadetime>1000</fadetime>
			<pauseatend>0</pauseatend>
			<loop>true</loop>
			<aspectratio background="true" aligny="top">scale</aspectratio>
			<imagepath background="true">$INFO[Container(300).ListItem.Thumb]</imagepath>
			<include>Animation_CommonFade</include>
			<visible>Skin.HasSetting(HomeBackgrounds) + [Skin.HasSetting(HomeHorizontal) | Skin.HasSetting(HomeVertical)]</visible>
		</control>			

		<include>Global_Filter</include>

		<include condition="![Skin.HasSetting(HomeIcon) | Skin.HasSetting(HomeHorizontal) | Skin.HasSetting(HomeVertical)]">HomeDefault</include>
		<include condition="Skin.HasSetting(HomeIcon)">HomeIcon</include>
		<include condition="Skin.HasSetting(HomeHorizontal) | Skin.HasSetting(HomeVertical)">HomeList</include>

		<include>Global_ContextFilter</include>

		<include>Global_Time</include>
		<include>Global_RSS</include>

		<include condition="Skin.HasSetting(DebugGrid)">Object_DebugGrid</include>
		<include condition="Skin.HasSetting(DebugMode)">Debug</include>

	</controls>
</window>
