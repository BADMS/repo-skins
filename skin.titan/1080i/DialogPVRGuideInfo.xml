<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="601">
    <defaultcontrol always="true">8000</defaultcontrol>
	<include>animation_window_open_close</include>
    <controls>
        <!--Dialog Overlay-->
		<include condition="!skin.hastheme(classic)">GlobalBackground</include>
		<include condition="!skin.hastheme(classic)">DialogOverlay</include>
		<include condition="skin.hastheme(classic)">DialogOverlayExtra</include>
        <!--Dialog PVR Guid Info-->
        <control type="group">
            <visible>!Window.IsVisible(yesnodialog)</visible>
            <!--Panel-->
            <control type="image">
                <posx>526</posx>
                <posy>100</posy>
                <width>868</width>
                <height>850</height>
                <texture border="39">dialogs/default/bg.png</texture>
            </control>
            <!--Header-->
            <control type="label">
                <description>Heading</description>
                <posx>560</posx>
                <posy>135</posy>
                <width>800</width>
                <label>$INFO[ListItem.Title]</label>
                <include>DialogHeader</include>
                <align>center</align>
            </control>
            <control type="group">
                <posx>560</posx>
                <posy>234</posy>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>800</width>
                    <height>241</height>
                    <texture border="5">dialogs/default/inner.png</texture>
                </control>
                <control type="button">
                    <description>Time</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <include condition="!Skin.HasTheme(classic)">DialogLabelAlt</include>
                    <include condition="Skin.HasTheme(classic)">DialogLabel</include>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[142]</label>
                    <label2>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ] ($INFO[ListItem.StartDate])</label2>
                    <enable>false</enable>
                </control>
                <control type="button">
                    <description>Duration</description>
                    <posx>0</posx>
                    <posy>59</posy>
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <include condition="!Skin.HasTheme(classic)">DialogLabelAlt</include>
                    <include condition="Skin.HasTheme(classic)">DialogLabel</include>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[180]</label>
                    <label2>$INFO[ListItem.Duration]</label2>
                    <enable>false</enable>
                </control>
                <control type="button">
                    <description>Channel</description>
                    <posx>0</posx>
                    <posy>118</posy>
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <include condition="!Skin.HasTheme(classic)">DialogLabelAlt</include>
                    <include condition="Skin.HasTheme(classic)">DialogLabel</include>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[19148]</label>
                    <label2>$INFO[ListItem.ChannelName]</label2>
                    <enable>false</enable>
                </control>
                <control type="button">
                    <description>Genre</description>
                    <posx>0</posx>
                    <posy>177</posy>
                    <width>800</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <include condition="!Skin.HasTheme(classic)">DialogLabelAlt</include>
                    <include condition="Skin.HasTheme(classic)">DialogLabel</include>
                    <texturenofocus>-</texturenofocus>
                    <label>$LOCALIZE[135]</label>
                    <label2 fallback="161">$INFO[ListItem.Genre]</label2>
                    <enable>false</enable>
                </control>
            </control>
            <control type="image">
                <posx>560</posx>
                <posy>486</posy>
                <width>800</width>
                <height>360</height>
                <texture border="5">dialogs/default/inner.png</texture>
            </control>
            <control type="textbox" id="400">
                <description>Plot value</description>
                <posx>580</posx>
                <posy>506</posy>
                <width>760</width>
                <height>310</height>
                <align>justify</align>
                <include condition="!Skin.HasTheme(classic)">DialogLabelAlt</include>
                <include condition="Skin.HasTheme(classic)">DialogLabel</include>
                <pagecontrol>60</pagecontrol>
                <autoscroll delay="10000" time="3000" repeat="6000">!Control.HasFocus(60) + !Skin.HasSetting(AutoScroll.Disable)</autoscroll>
                <label fallback="161">$INFO[ListItem.Plot]</label>
            </control>
            <control type="scrollbar" id="60">
                <posx>1346</posx>
                <posy>509</posy>
                <width>60</width>
                <height>314</height>
                <onleft>8000</onleft>
                <onright>8000</onright>
                <ondown>60</ondown>
                <onup>60</onup>
                <showonepage>false</showonepage>
                <orientation>vertical</orientation>
                <animation effect="fade" start="75" end="0" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(60)">Conditional</animation>
            </control>
            <!--Button Group-->
            <control type="grouplist" id="8000">
                <posx>565</posx>
                <posy>855</posy>
				<orientation>horizontal</orientation>
				<itemgap>20</itemgap>
                <defaultcontrol>5</defaultcontrol>
                
                <control type="button" id="5">
                    <!--Switch-->
                    <width>250</width>
                    <align>center</align>
                    <label>$LOCALIZE[19165]</label>
                    <onleft>7</onleft>
                    <onright>6</onright>
                    <onup>60</onup>
                    <ondown>60</ondown>
					<font>Reg26</font>
                </control>
                <control type="button" id="6">
                    <!--Record-->
                    <width>250</width>
                    <label>-</label>
                    <align>center</align>
                    <onleft>5</onleft>
                    <onright>7</onright>
                    <onup>60</onup>
                    <ondown>60</ondown>
					<font>Reg26</font>
                </control>
				<control type="button" id="7">
                    <!--Cancel-->
                    <width>250</width>
                    <label>$LOCALIZE[222]</label>
                    <align>center</align>
                    <onleft>6</onleft>
                    <onright>5</onright>
                    <onup>60</onup>
                    <ondown>60</ondown>
					<font>Reg26</font>
                </control>
            </control>
        </control>
    </controls>
</window>