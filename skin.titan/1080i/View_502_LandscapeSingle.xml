<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <!--Default-->
    <include name="View_502_LandscapeSingle">
	
		<control type="group">
			<include>animation_view_change</include>
			<defaultcontrol always="true">502</defaultcontrol>
		    <visible>Control.IsVisible(502)</visible>
			
			<!-- movie details -->
			<control type="group">
				<visible>Skin.HasSetting(LandscapeViewShowInfo)</visible>
				<include>MovieDetails</include>
			</control>
			
			
			<control type="panel" id="502">
				<posx>60</posx>
				<width>1880</width>
				<height>370</height>
				<bottom>125</bottom>
				<onup>9000</onup>
				<ondown>60</ondown>
				<onleft>502</onleft>
				<onright>502</onright>
				<pagecontrol>60</pagecontrol>
				<viewtype label="31431">thumbnail</viewtype>
				<orientation>horizontal</orientation>
				<focusposition>-</focusposition>
				<preloaditems>4</preloaditems>
				<scrolltime tween="cubic" easing="inout">500</scrolltime>
				<visible>!Skin.HasSetting(ForcedViews.Enabled) | 
				[Container.Content(movies) + Skin.String(ForcedViews.movies,None)] | 
				[Container.Content(tvshows) + Skin.String(ForcedViews.tvshows,None)] | 
				[Container.Content(seasons) + Skin.String(ForcedViews.seasons,None)] | 
				[Container.Content(episodes) + Skin.String(ForcedViews.episodes,None)] | 
				[[Container.Content(sets) | StringCompare(Container.Folderpath,videodb://movies/sets/)] + Skin.String(ForcedViews.sets,502)] | 
				[Container.Content(movies) + Skin.String(ForcedViews.movies,502) + !substring(Container.FolderPath,videodb://movies/sets/,left)] | 
				[Container.Content(movies) + Skin.String(ForcedViews.setmovies,502) + substring(Container.FolderPath,setid=)] | 
				[Container.Content(tvshows) + Skin.String(ForcedViews.tvshows,502)] | 
				[Container.Content(seasons) + Skin.String(ForcedViews.seasons,502)] | 
				[Container.Content(episodes) + Skin.String(ForcedViews.episodes,502)] | 
				[!Container.Content(movies) + !Container.Content(tvshows) + !Container.Content(seasons) + !Container.Content(episodes) + !Container.Content(sets)]
				</visible>
					
				<itemlayout width="620" height="350">
					<include>BannerViewImagesNormal</include>
				</itemlayout>
				<focusedlayout width="620" height="350">
					
					<control type="group">
						<control type="image">
						<!--cdart image-->
						<width>530</width>
						<height>530</height>
						<posy>10</posy>
						<posx>20</posx>
						<texture background="true" diffuse="diffuse/halfcd.png" fallback="diffuse/halfcd.png">$VAR[VideoDiscArtImage]</texture>
						<aspectratio scalediffuse="false" align="center" aligny="top">scale</aspectratio>
						<animation effect="slide" start="0" end="0,-230" tween="cubic" easing="inout" time="1200" delay="1200">Focus</animation>
						<animation effect="fade" start="0" end="100" delay="800" time="1200" pulse="false">Focus</animation>
						<visible>Skin.HasSetting(View502_ShowCDart) + !IsEmpty(ListItem.Art(poster))</visible>
					</control>
					
						<include>BannerViewOverlayFocusNormal</include>
					</control>
					
				</focusedlayout>
			</control>

		
			<!--horizontal Scrollbar-->
			<control type="group">
				<control type="scrollbar" id="60">
					<visible>Control.IsVisible(502)</visible>
					<left>60</left>
					 <bottom>140</bottom>
					<width>1800</width>
					<height>15</height>
					<onup>502</onup>
					<onleft>60</onleft>
					<onright>60</onright>
					<orientation>horizontal</orientation>
					<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
					<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
				</control>
			</control>
			
		</control>
	</include>
</includes>