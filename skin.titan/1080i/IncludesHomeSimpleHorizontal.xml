<?xml version="1.0" encoding="UTF-8"?>
<includes>

  <include name="simplehome_horizontal">
		<control type="group">
		  <control type="group">
			<posy>90</posy>
			<control type="group">
			 
			 <control type="image">
			    <posx>0</posx>
				<posy>670</posy>
				<width>100%</width>
				<height>180</height>
				<texture border="5">diffuse/panel.png</texture>
				<animation effect="fade" end="50" time="0" condition="true">Conditional</animation>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			  </control>

			  <control type="image">
				<posx>0</posx>
				<posy>710</posy>
				<width>100%</width>
				<height>100</height>
				<texture border="5">diffuse/panel.png</texture>
				<animation effect="fade" end="85" time="0" condition="true">Conditional</animation>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
			  </control>
			</control>
			<control type="fixedlist" id="300">
			  <animation effect="fade" time="200" start="100" end="25" reversible="true" condition="!Control.HasFocus(300)">Conditional</animation>
			  <posx>-338</posx>
			  <width>3069</width>
			  <posy>725</posy>
			  <height>72</height>
			  <onleft>300</onleft>
			  <onright>300</onright>
			  <ondown>4444</ondown>
			  <onup>510</onup>
			  <pagecontrol>-</pagecontrol>
			  <focusposition>2</focusposition>
			  <movement>1</movement>
			  <preloaditems>4</preloaditems>
			  <orientation>horizontal</orientation>
			  <itemlayout height="70" width="519">
				<control type="label">
				  <posx>0</posx>
				  <posy>0</posy>
				  <width>519</width>
				  <textcolor>grey</textcolor>
				  <shadowcolor>black</shadowcolor>
				  <height>70</height>
				  <align>center</align>
				  <aligny>top</aligny>
				  <textoffsety>2</textoffsety>
				  <scroll>false</scroll>
				  <label>[B][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/B]</label>
				  <font>Reg50</font>
				</control>
			  </itemlayout>
			  <focusedlayout height="70" width="519">
				<control type="label">
					  <posx>0</posx>
					  <posy>0</posy>
					  <width>519</width>
					  <textcolor>$INFO[Skin.String(HomeViewDetailsFocusColor)]</textcolor>
					  <shadowcolor>black</shadowcolor>
					  <height>70</height>
					  <align>center</align>
					  <aligny>top</aligny>
					  <textoffsety>2</textoffsety>
					  <label>[B][UPPERCASE]$INFO[ListItem.Label][/UPPERCASE][/B]</label>
					  <font>Reg50</font>
				</control>
				<control type="button">
					<visible>false</visible>
					<onfocus condition="Skin.HasSetting(UseSectionBackground)">SetProperty(SectionBackground,$INFO[Container(300).ListItem.Property(defaultID)],Home)</onfocus>
					<onfocus condition="Skin.HasSetting(UseSectionBackground) + !IsEmpty(Container(300).ListItem.Property(Background))">SetProperty(SectionBackgroundValue,$INFO[Container(300).ListItem.Property(Background)],Home)</onfocus>
					<onfocus condition="Skin.HasSetting(UseSectionBackground) + IsEmpty(Container(300).ListItem.Property(Background))">ClearProperty(SectionBackgroundValue,Home)</onfocus>			
					<onfocus condition="!Skin.HasSetting(DisableAllSubmenus)">SetProperty(menu,300,Home)</onfocus>
					<onfocus condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.HasSetting(AutoShowSubmenu) + skin.hastheme(classic)">SetFocus(4444)</onfocus>
					<onfocus condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.HasSetting(AutoShowSubmenu) + !skin.hastheme(classic)">SetProperty(submenu,show,home)</onfocus>
				</control>
			  </focusedlayout>
			  <content><include>skinshortcuts-mainmenu</include></content>
			</control>
			<control type="wraplist" id="4444">
			  <animation effect="fade" time="200" start="100" end="100" reversible="true" condition="!Control.HasFocus(4444)">Conditional</animation>
			  <visible>!Skin.HasSetting(DisableAllSubmenus)</visible>
			  <posx>-290</posx>
			  <width>3000</width>
			  <posy>803</posy>
			  <height>50</height>
			  <onleft>4444</onleft>
			  <onright>4444</onright>
			  <viewtype>list</viewtype>
			  <orientation>horizontal</orientation>
			  <focusposition>3</focusposition>
			  <movement>3</movement>
			  <onup>300</onup>
			  <itemgap>6</itemgap>
			  <onback>SetFocus(300)</onback>
			  <ondown condition="!Skin.HasSetting(DisablePowerMenu)">ActivateWindow(ShutdownMenu)</ondown>
			  <itemlayout width="350" height="50">
				<control type="label">
				  <posx>3</posx>
				  <posy>1</posy>
				  <height>50</height>
				  <width>350</width>
				  <align>center</align>
				  <aligny>center</aligny>
				  <font>Reg26</font>
				  <scroll>false</scroll>
				  <label>$INFO[ListItem.Label]</label>
				  <textcolor>black</textcolor>
				  <shadowcolor>-</shadowcolor>
				</control>
				<control type="label">
				  <posx>3</posx>
				  <posy>0</posy>
				  <height>50</height>
				  <width>350</width>
				  <align>center</align>
				  <aligny>center</aligny>
				  <font>Reg26</font>
				  <scroll>false</scroll>
				  <label>$INFO[ListItem.Label]</label>
				  <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
				  <shadowcolor>-</shadowcolor>
				</control>
			  </itemlayout>
			  <focusedlayout width="350" height="50">
				<control type="label">
				  <posx>3</posx>
				  <posy>1</posy>
				  <height>50</height>
				  <width>350</width>
				  <align>center</align>
				  <aligny>center</aligny>
				  <font>Reg26</font>
				  <label>$INFO[ListItem.Label]</label>
				  <textcolor>black</textcolor>
				  <shadowcolor>-</shadowcolor>
				</control>
				<control type="label">
				  <visible>!Control.HasFocus(4444)</visible>
				  <posx>3</posx>
				  <posy>0</posy>
				  <height>50</height>
				  <width>350</width>
				  <align>center</align>
				  <aligny>center</aligny>
				  <font>Reg26</font>
				  <label>$INFO[ListItem.Label]</label>
				  <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
				  <shadowcolor>-</shadowcolor>
				</control>
				<control type="label">
				  <visible>Control.HasFocus(4444)</visible>
				  <posx>3</posx>
				  <posy>0</posy>
				  <height>50</height>
				  <width>350</width>
				  <align>center</align>
				  <aligny>center</aligny>
				  <font>Reg26</font>
				  <label>$INFO[ListItem.Label]</label>
				  <textcolor>$INFO[Skin.String(HomeViewDetailsFocusColor)]</textcolor>
				  <shadowcolor>-</shadowcolor>
				</control>
				<control type="button">
					<label>-</label>
					<visible>false</visible>
					<onfocus>SetProperty(menu,4444,Home)</onfocus>
					<onfocus>SetProperty(submenu,show,home)</onfocus>
					<onfocus condition="Skin.HasSetting(UseSectionBackground) + !IsEmpty(Container(4444).ListItem.Property(Background))">SetProperty(SectionBackground,$INFO[Container(4444).ListItem.Property(defaultID)],Home)</onfocus>
					<onfocus condition="Skin.HasSetting(UseSectionBackground) + !IsEmpty(Container(4444).ListItem.Property(Background))">SetProperty(SectionBackgroundValue,$INFO[Container(4444).ListItem.Property(Background)],Home)</onfocus>
					<onfocus condition="Skin.HasSetting(UseSectionBackground) + IsEmpty(Container(4444).ListItem.Property(Background))">SetProperty(SectionBackground,$INFO[Container(300).ListItem.Property(defaultID)],Home)</onfocus>
					<onfocus condition="Skin.HasSetting(UseSectionBackground) + IsEmpty(Container(4444).ListItem.Property(Background))">SetProperty(SectionBackgroundValue,$INFO[Container(300).ListItem.Property(Background)],Home)</onfocus>
				</control>
			  </focusedlayout>
			  <content>
				<include condition="!Skin.HasSetting(DisableAllSubmenus)">skinshortcuts-submenu</include>
			  </content>
			</control>
		  </control>
		
		<!-- widgets -->
		<control type="group">
			<posy>420</posy>
			<posx>12</posx>
			
			<include condition="!Skin.HasSetting(DisableAllWidgets)">widgets</include>
			
			<!--change widget button -->
			<control type="group">
				<right>40</right>
				<posy>285</posy>
				<width>600</width>
				<height>45</height>
				<include>animation_fade_visible_hidden_delayed</include>
				<control type="image">
					<colordiffuse>$INFO[Skin.String(ButtonTextColor)]</colordiffuse>
					<texture flipy="true">dialogs/default/separator.png</texture>
					<visible>Control.IsVisible(511)</visible>
				</control>
				<control type="button" id="511">
					<right>0</right>
					<width>600</width>
					<height>45</height>
					<align>right</align>
					<font>Reg30</font>
					<onup>Skin.Reset(ShowWidgets)</onup>
					<onup>4444</onup>
					<ondown>300</ondown>
					<textoffsetx>90</textoffsetx>
					<label>$VAR[HomeWidgetLabel]</label>
					<texturenofocus>dialogs/default/separator.png</texturenofocus>
					<onclick>$VAR[HomeWidgetClickActions]</onclick>
					<visible allowhiddenfocus="true">!IsEmpty(Window(Home).Property(activewidget))</visible>
				</control>
				<control type="image">
					<right>5</right>
					<posy>-5</posy>
					<width>40</width>
					<height>60</height>
					<colordiffuse>$INFO[Skin.String(ButtonTextColor)]</colordiffuse>
					<texture>common/spinctrl/arrow-up-nf.png</texture>
					<visible>Control.IsVisible(511)</visible>
				</control>
				<control type="image">
					<right>45</right>
					<posy>-5</posy>
					<width>40</width>
					<height>60</height>
					<texture>common/spinctrl/arrow-down-nf.png</texture>
					<visible>Control.IsVisible(511) + !Control.HasFocus(511)</visible>
				</control>
				<control type="image">
					<right>45</right>
					<posy>-5</posy>
					<width>40</width>
					<height>60</height>
					<texture>common/spinctrl/arrow-down-fo.png</texture>
					<visible>Control.IsVisible(511) + Control.HasFocus(511)</visible>
				</control>
			</control>
			
			
			
			
		</control>
		
		</control>
	</include>

</includes>