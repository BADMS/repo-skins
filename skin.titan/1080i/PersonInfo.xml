<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">3010</defaultcontrol>
    <zorder>2</zorder>
	<controls>
	<control type="group">
		<!--Dialog Overlay-->
		<include>GlobalBackground</include>
		<include>animation_window_open_close</include>
		<control type="image">
			<animation effect="fade" time="800" start="0" end="100">WindowOpen</animation>
			<animation effect="fade" time="800" start="100" end="0">WindowClose</animation>
			<include>DimensionsFullscreen</include>
			<colordiffuse>FFFFFFFF</colordiffuse>
			<texture background="true">$INFO[ListItem.Property(Fanart_Image)]</texture>
		</control>
		<control type="image">
			<animation effect="fade" time="800" start="0" end="100">WindowOpen</animation>
			<animation effect="fade" time="800" start="100" end="0">WindowClose</animation>
			<include>DimensionsFullscreen</include>
			<colordiffuse>FFFFFFFF</colordiffuse>
			<texture background="true">$INFO[ListItem.Art(characterart)]</texture>
		</control>
		<include>DialogOverlayExtra</include>
   
        
       
		<control type="label" id="3000">
			<description>person name</description>
			<left>45</left>
			<top>30</top>
			<width>550</width>
			<height>100</height>
			<align>left</align>
			<label>-</label>
			<font>Bold30</font>
            <textcolor>white</textcolor>
		</control>    

        <control type="image" id="3009">
            <left>30</left>
            <top>120</top>
            <width>250</width>
            <height>250</height>
            <aspectratio>keep</aspectratio>
        </control>        
        
		<control type="textbox" id="3001">
			<description>text</description>
			<left>300</left>
			<top>120</top>
			<width>1400</width>
			<height>280</height>
			<align>left</align>
			<label>-</label>
			<font>Reg24</font>
            <pagecontrol>3005</pagecontrol>
		</control>
  
        

        <control type="list" id="3010">
            <left>40</left>
            <top>520</top>
            <width>940</width>
            <height>170</height>
            <onup>3005</onup>
            <ondown>3011</ondown>
            <pagecontrol>3011</pagecontrol>
            <scrolltime>200</scrolltime>
            <orientation>horizontal</orientation>
            <itemlayout width="120">
                <control type="image">
                    <left>0</left>
                    <top>0</top>
                    <width>100</width>
                    <height>150</height>
                    <texture>$INFO[Listitem.Icon]</texture>
                    <bordertexture border="5">poster_default.png</bordertexture>
                    <bordersize>5</bordersize>
                </control>
            </itemlayout>
            <focusedlayout width="120">
                <control type="image">
                    <left>0</left>
                    <top>0</top>
                    <width>100</width>
                    <height>150</height>
                    <texture>$INFO[Listitem.Icon]</texture>
                    <bordertexture border="5">poster_matte.png</bordertexture>
                    <bordersize>5</bordersize>
                </control>
                <control type="image">
                    <left>0</left>
                    <top>0</top>
                    <width>100</width>
                    <height>150</height>
                    <texture>$INFO[Listitem.Icon]</texture>
                    <bordertexture border="5">poster_matte.png</bordertexture>
                    <bordersize>5</bordersize>
                    <visible>Control.HasFocus(3010)</visible>
                </control>      
            </focusedlayout>
        </control>  
    
	</control> 	
        
	</controls>
</window>
