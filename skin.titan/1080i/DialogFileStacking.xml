<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol always="true">450</defaultcontrol>
	
    <controls>
        <!--Dialog Overlay-->
        <include>DialogOverlayExtra</include>
		<include condition="Skin.HasSetting(EnableTouchSupport)">Footer</include>
		
        <!--Dialog File Stacking-->
        <control type="group">
            <include>animation_window_open_close</include>

			<control type="image">
                <!--Panel-->
                <posx>704</posx>
                <posy>416</posy>
                <width>512</width>
                <height>320</height>
                <texture border="15">diffuse/bgpanel.png</texture>
				<animation effect="fade" end="70" time="0" condition="true">Conditional</animation>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
			<control type="image">
                <!--Panel-->
                <posx>704</posx>
                <posy>416</posy>
                <width>512</width>
                <height>320</height>
				<bordersize>10</bordersize>
                <texture border="15">diffuse/bgpanel.png</texture>
				<animation effect="fade" end="70" time="0" condition="true">Conditional</animation>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
			
            <control type="label">
                <description>Heading</description>
                <posx>791</posx>
                <posy>350</posy>
                <width>338</width>
                <label>$INFO[ListItem.Label]</label>
                <include>DialogHeader</include>
                <align>center</align>
            </control>
            <control type="group">
                <posx>738</posx>
                <posy>450</posy>
                <control type="image">
                    <posx>324</posx>
                    <posy>0</posy>
                    <width>120</width>
                    <height>181</height>
                    <texture border="5">dialogs/default/inner.png</texture>
                </control>
                <control type="image">
                    <description>Poster</description>
                    <posx>325</posx>
                    <posy>1</posy>
                    <width>118</width>
                    <height>178</height>
                    <texture>$INFO[ListItem.Icon]</texture>
                    <aspectratio>scale</aspectratio>
                </control>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>310</width>
                    <height>181</height>
                    <texture border="5">dialogs/default/inner.png</texture>
                </control>
                <control type="list" id="450">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>310</width>
                    <height>180</height>
                    <onleft>63</onleft>
                    <onright>63</onright>
                    <onup>450</onup>
                    <ondown>450</ondown>
                    <scrolltime tween="cubic" easing="out">500</scrolltime>
                    <pagecontrol></pagecontrol>
                    <itemlayout height="60">
                        <control type="image">
                            <posx>0</posx>
                            <posy>1</posy>
                            <width>270</width>
                            <height>60</height>
                            <texture>dialogs/default/separator.png</texture>
                        </control>
                        <control type="label">
                            <posx>20</posx>
                            <posy>0</posy>
                            <width>270</width>
                            <height>60</height>
                            <info>ListItem.Label</info>
                            <align>left</align>
                            <aligny>center</aligny>
                            <include>DialogListNF</include>
                            <scroll>false</scroll>
                        </control>
                    </itemlayout>
                    <focusedlayout height="60">
                        <control type="group">
                            <visible>!Control.HasFocus(450)</visible>
                            <animation effect="fade" start="0" end="100" time="300" tween="sine" easing="inout" condition="![Container(450).Scrolling | Container(450).OnScrollNext | Container(450).OnScrollPrevious]">Visible</animation>
                            <animation effect="fade" start="100" end="0" time="300" tween="sine" easing="inout" condition="![Container(450).Scrolling | Container(450).OnScrollNext | Container(450).OnScrollPrevious]">Hidden</animation>
                            <control type="image">
                                <posx>0</posx>
                                <posy>1</posy>
                                <width>270</width>
                                <height>60</height>
                                <texture>dialogs/default/separator.png</texture>
                            </control>
                            <control type="label">
                                <posx>20</posx>
                                <posy>0</posy>
                                <width>270</width>
                                <height>60</height>
                                <info>ListItem.Label</info>
                                <align>left</align>
                                <aligny>center</aligny>
                                <include>DialogListNF</include>
                                <scroll>false</scroll>
                            </control>
                        </control>
                        <control type="group">
                            <visible>Control.HasFocus(450)</visible>
                            <animation effect="fade" start="0" end="100" time="300" tween="sine" easing="inout" condition="![Container(450).Scrolling | Container(450).OnScrollNext | Container(450).OnScrollPrevious]">Visible</animation>
                            <animation effect="fade" start="100" end="0" time="300" tween="sine" easing="inout" condition="![Container(450).Scrolling | Container(450).OnScrollNext | Container(450).OnScrollPrevious]">Hidden</animation>
                            <control type="image">
                                <width>310</width>
                                <height>60</height>
                                <texture border="5">diffuse/panel.png</texture><colordiffuse>$INFO[Skin.String(ButtonFocusColor)]</colordiffuse>
                            </control>
                            <control type="image">
                                <posx>246</posx>
                                <width>64</width>
                                <height>60</height>
                                <texture border="2">dialogs/filestacking/play.png</texture>
                            </control>
                            <control type="label">
                                <posx>20</posx>
                                <posy>0</posy>
                                <width>226</width>
                                <height>60</height>
                                <info>ListItem.Label</info>
                                <include>DialogListFO</include>
                                <align>left</align>
                                <aligny>center</aligny>
                                <scrollout>false</scrollout>
                                <pauseatend>200</pauseatend>
                                <scrollspeed>20</scrollspeed>
                            </control>
                        </control>
                    </focusedlayout>
                </control>
                <control type="image" id="62">
                    <animation effect="fade" start="100" end="0" time="0" delay="1500">WindowOpen</animation>
                </control>
                <control type="image" id="61">
                    <animation effect="fade" start="0" end="100" time="0">Visible</animation>
                    <animation effect="fade" start="100" end="0" time="0">Hidden</animation>
                    <visible>Control.HasFocus(60) | !Control.IsVisible(62)</visible>
                </control>
                <control type="image" id="61">
                    <animation effect="fade" start="0" end="100" time="0">Visible</animation>
                    <animation effect="fade" start="100" end="0" time="0" delay="1000">Hidden</animation>
                    <visible>!Control.HasFocus(60) + [Container(450).Scrolling | Container(450).OnScrollNext | Container(450).OnScrollPrevious]</visible>
                </control>
            </control>
            <control type="button" id="63">
                <description>Close</description>
                <posx>725</posx>
                <posy>624</posy>
                <label>$LOCALIZE[222]</label>
                <include>DialogButtonOK</include>
                <onclick>PreviousMenu</onclick>
                <onleft>450</onleft>
                <onright>450</onright>
                <onup>450</onup>
                <ondown>450</ondown>
            </control>
        </control>
    </controls>
</window>