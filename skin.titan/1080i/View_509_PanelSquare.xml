<?xml version="1.0" encoding="UTF-8"?>
<includes>
  
  
  <include name="View_509_PanelSquare">
    <control type="group">
      <visible>Control.IsVisible(509)</visible>
      <include>animation_window_open_close</include>
	  <include>animation_fade_visible_hidden</include>
      <control type="panel" id="509">
        <viewtype label="Panel Square">Panel Square</viewtype>
        <posx>45</posx>
        <posy>175</posy>
        <width>1836</width>
        <height>761</height>
        <orientation>vertical</orientation>
        <onleft>9000</onleft>
        <onright>60</onright>
        <onup>509</onup>
        <ondown>509</ondown>
        <preloaditems>4</preloaditems>
        <pagecontrol>60</pagecontrol>
        <itemlayout height="260" width="260">
          <control type="image">
            <include>BigPanelSquareDimensions</include>
            <include>SquareThumbBG</include>
          </control>
          <control type="image">
            <include>BigPanelSquareDimensions</include>
            <include>SquareThumb</include>
          </control>
		  <control type="image">
				<!--Watched Overlay-->
				<right>5</right>
				<posy>5</posy>
				<width>60</width>
				<height>60</height>
				<texture>$VAR[WatchedImage]</texture>
				<visible>!skin.hastheme(classic) + !Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
			<control type="label">
				<!--watched label-->
				<width>50</width>
				<centerright>0</centerright>
				<posy>-10</posy>
				<align>center</align>
				<label>$VAR[WatchedLabel]</label>
				<font>Light20</font>
				<textcolor>white</textcolor>
				<visible>!Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
        </itemlayout>
        <focusedlayout height="260" width="260">
          <control type="image">
            <include>BigPanelSquareDimensions</include>
            <include>SquareThumbFO</include>
          </control>
          <control type="image">
            <include>BigPanelSquareDimensions</include>
            <include>SquareThumb</include>
          </control>
		  <control type="image">
				<!--Watched Overlay-->
				<right>5</right>
				<posy>5</posy>
				<width>60</width>
				<height>60</height>
				<texture>$VAR[WatchedImage]</texture>
				<visible>!skin.hastheme(classic) + !Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
			<control type="label">
				<!--watched label-->
				<width>50</width>
				<centerright>0</centerright>
				<posy>-10</posy>
				<align>center</align>
				<label>$VAR[WatchedLabel]</label>
				<font>Light20</font>
				<textcolor>white</textcolor>
				<visible>!Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
        </focusedlayout>
      </control>
      <control type="scrollbar" id="60">
        <animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
        <animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
        <posx>20r</posx>
        <posy>360</posy>
        <width>36</width>
        <height>700</height>
        <texturesliderbackground>-</texturesliderbackground>
        <texturesliderbar>-</texturesliderbar>
        <texturesliderbarfocus>-</texturesliderbarfocus>
        <textureslidernib border="18">OSD/ScrollbarNibNF.png</textureslidernib>
        <textureslidernibfocus border="18">OSD/ScrollbarNibFO.png</textureslidernibfocus>
        <showonepage>false</showonepage>
        <orientation>vertical</orientation>
        <onleft>509</onleft>
        <onright>9000</onright>
      </control>
    </control>
	<!-- footer bar -->
	<control type="group">
		<include>animation_window_open_close</include>
		 <include>animation_fade_visible_hidden</include>
		<visible>Control.IsVisible(509)</visible>
		<visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
		<include condition="!skin.hassetting(nofooterbar)">Footer</include>
	</control>
  </include>
</includes>
