<?xml version="1.0" encoding="UTF-8"?>
<includes>
  
  
  <include name="View_509_PanelSquare">
    <control type="group">
      <visible>Control.IsVisible(509)</visible>
      <include>animation_view_change</include>
      <control type="panel" id="509">
        <viewtype label="31436">Panel Square</viewtype>
        <posx>45</posx>
        <posy>175</posy>
        <width>1836</width>
        <height>780</height>
        <orientation>vertical</orientation>
        <onleft>9000</onleft>
        <onright>60</onright>
        <onup>509</onup>
        <ondown>509</ondown>
        <preloaditems>4</preloaditems>
        <pagecontrol>60</pagecontrol>
        <itemlayout height="261" width="260">
          <control type="image">
            <include>BigPanelSquareDimensions</include>
            <include>SquareThumbBG</include>
          </control>
          <control type="image">
            <include>BigPanelSquareDimensions</include>
            <include>SquareThumb</include>
          </control>
		  <control type="image">
				<posx>18</posx>
				<posy>51</posy>
				<width>236</width>
				<height>190</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture diffuse="home/home_matte2.png">home/home_overlay.png</texture>
				<visible>Skin.HasSetting(ShowLabelsSquare)</visible>
				<visible>!StringCompare(ListItem.Label,..)</visible>
			</control>
			<control type="label">
				<posx>25</posx>
				<posy>182</posy>
				<width>220</width>
				<height>60</height>
				<font>Reg22</font>
				<align>left</align>
				<info>ListItem.Label</info>
				<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
				<visible>Skin.HasSetting(ShowLabelsSquare)</visible>
				<visible>!StringCompare(ListItem.Label,..)</visible>
			</control>
			<control type="image">
				<!--Watched Overlay-->
				<right>5</right>
				<posy>5</posy>
				<width>60</width>
				<height>60</height>
				<texture>$VAR[WatchedImage]</texture>
				<visible>!Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
			<control type="label">
				<width>100</width>
				<centerright>24</centerright>
				<posy>-12</posy>
				<align>center</align>
				<label>$VAR[WatchedLabel]</label>
				<font>Light20</font>
				<textcolor>white</textcolor>
				<visible>!Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
        </itemlayout>
        <focusedlayout height="261" width="260">
		  <control type="image">
            <include>BigPanelSquareDimensions</include>
            <include>SquareThumbFO</include>
          </control>
          <control type="image">
            <include>BigPanelSquareDimensions</include>
            <include>SquareThumb</include>
          </control>
		  <control type="image">
				<posx>18</posx>
				<posy>51</posy>
				<width>236</width>
				<height>190</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture diffuse="home/home_matte2.png">home/home_overlay.png</texture>
				<visible>Skin.HasSetting(ShowLabelsSquare)</visible>
				<visible>!StringCompare(ListItem.Label,..)</visible>
			</control>
			<control type="label">
				<posx>25</posx>
				<posy>182</posy>
				<width>220</width>
				<height>60</height>
				<font>Reg22</font>
				<align>left</align>
				<scroll>true</scroll>
				<info>ListItem.Label</info>
				<textcolor>$INFO[Skin.String(ViewDetailsFocusColor)]</textcolor>
				<visible>Skin.HasSetting(ShowLabelsSquare)</visible>
				<visible>!StringCompare(ListItem.Label,..)</visible>
			</control>
		  <control type="image">
				<!--Watched Overlay-->
				<right>5</right>
				<posy>5</posy>
				<width>60</width>
				<height>60</height>
				<texture>$VAR[WatchedImage]</texture>
				<visible>!Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
				<animation effect="slide" end="-3,3" time="0" condition="skin.hastheme(classic)">Conditional</animation>
			</control>
			<control type="label">
				<width>100</width>
				<centerright>24</centerright>
				<posy>-12</posy>
				<align>center</align>
				<label>$VAR[WatchedLabel]</label>
				<font>Light20</font>
				<textcolor>white</textcolor>
				<visible>!Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
			
        </focusedlayout>
      
	  
	  </control>
      
	  <!--vertical Scollbar-->
		<control type="scrollbar" id="60">
			<visible>Control.IsVisible(509)</visible>
			<right>15</right>
			<posy>175</posy>
			<width>25</width>
			<height>770</height>
			<onup>60</onup>
			<ondown>60</ondown>
			<onleft>509</onleft>
			<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport)">Conditional</animation>
			<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport)]">Conditional</animation>
		</control>
	  
		
    </control>
	
	
  </include>
</includes>
