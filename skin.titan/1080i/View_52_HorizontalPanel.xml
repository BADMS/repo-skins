<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_52_HorizontalPanel">
	
		<!-- movie details -->
		<control type="group">
			<visible>Control.IsVisible(52) + Skin.HasSetting(PanelViewShowInfo)</visible>
			<include>MovieDetails</include>
		</control>
	
	
		<!-- panel no info -->
        <control type="group">
            <visible>Control.IsVisible(52)</visible>
            <include>animation_view_change</include>
			
			<control type="panel" id="52">
				<include condition="!skin.hastheme(classic)">view52PosModern</include>
                <posx>75</posx>
                <posy>580</posy>
                <width>1760</width>
                <height>400</height>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <onleft>52</onleft>
                <onright>52</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="Horizontal Panel">biglist</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>6</focusposition>
                <preloaditems>2</preloaditems>
				<orientation>horizontal</orientation>
                <preloaditems>2</preloaditems>
				<visible>container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)</visible>
                <itemlayout height="380" width="251" condition="skin.hastheme(classic)">
			   <control type="group">
				   <posx>-5</posx>
				  <control type="image">
					<include>BigPanelPosterDimensions</include>
					<include>PosterThumbBG</include>
				  </control>
				  <control type="image">
					<include>BigPanelPosterDimensions</include>
					<include>PosterThumb</include>
				  </control>
				  <include condition="!skin.hastheme(classic)">BigPanelWatchedImageModern</include>
				  <include condition="skin.hastheme(classic)">BigPanelWatchedImageClassic</include>
				</control>
			</itemlayout>
				<focusedlayout height="380" width="251"  condition="skin.hastheme(classic)">
				<control type="group">
				   <posx>-5</posx>
				   
				   <control type="image">
						<!--cdart image-->
						<width>240</width>
						<height>240</height>
						<posy>50</posy>
						<posx>15</posx>
						<texture background="true">$INFO[ListItem.Art(discart)]</texture>
						<aspectratio scalediffuse="false" align="center" aligny="center">keep</aspectratio>
						<animation effect="slide" start="0" end="0,-160" tween="cubic" easing="inout" time="1200" delay="800">Focus</animation>
						<animation effect="fade" start="0" end="100" delay="800" time="800" pulse="false">Focus</animation>
						<animation effect="rotate" end="-360" center="auto" time="20000" loop="true" reversible="false" condition="Skin.HasSetting(AnimateDiscArt)">Conditional</animation>
						<visible>Skin.HasSetting(View52_ShowCDart)</visible>
					</control>
				  <control type="image">
					<include>BigPanelPosterDimensions</include>
					<include>PosterThumbFO</include>
				  </control>
				  <control type="image">
					<include>BigPanelPosterDimensions</include>
					<include>PosterThumb</include>
				  </control>
				  <include condition="!skin.hastheme(classic)">BigPanelWatchedImageModern</include>
				  <include condition="skin.hastheme(classic)">BigPanelWatchedImageClassic</include>
			  </control>
			</focusedlayout>
				<itemlayout height="380" width="262" condition="!skin.hastheme(classic)">
			   <control type="group">
				   <posx>-5</posx>
				  <control type="image">
					<include>BigPanelPosterDimensions</include>
					<include>PosterThumbBG</include>
				  </control>
				  <control type="image">
					<include>BigPanelPosterDimensions</include>
					<include>PosterThumb</include>
				  </control>
				  <include condition="!skin.hastheme(classic)">BigPanelWatchedImageModern</include>
				  <include condition="skin.hastheme(classic)">BigPanelWatchedImageClassic</include>
				</control>
			</itemlayout>
				<focusedlayout height="380" width="262"  condition="!skin.hastheme(classic)">
				<control type="group">
				   <posx>-5</posx>
				   
				   <control type="image">
						<!--cdart image-->
						<width>240</width>
						<height>240</height>
						<posy>50</posy>
						<posx>15</posx>
						<texture background="true">$INFO[ListItem.Art(discart)]</texture>
						<aspectratio scalediffuse="false" align="center" aligny="center">keep</aspectratio>
						<animation effect="slide" start="0" end="0,-160" tween="cubic" easing="inout" time="1200" delay="800">Focus</animation>
						<animation effect="fade" start="0" end="100" delay="800" time="800" pulse="false">Focus</animation>
						<animation effect="rotate" end="-360" center="auto" time="20000" loop="true" reversible="false" condition="Skin.HasSetting(AnimateDiscArt)">Conditional</animation>
						<visible>Skin.HasSetting(View52_ShowCDart)</visible>
					</control>
				  <control type="image">
					<include>BigPanelPosterDimensions</include>
					<include>PosterThumbFO</include>
				  </control>
				  <control type="image">
					<include>BigPanelPosterDimensions</include>
					<include>PosterThumb</include>
				  </control>
				  <include condition="!skin.hastheme(classic)">BigPanelWatchedImageModern</include>
				  <include condition="skin.hastheme(classic)">BigPanelWatchedImageClassic</include>
			  </control>
			</focusedlayout>
        
		
		</control>
		
		
		</control>
		
        <control type="group">
            <visible>Control.IsVisible(52)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include condition="!skin.hassetting(nofooterbar)">Footer</include>
        </control>
    </include>
</includes>