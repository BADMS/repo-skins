<?xml version="1.0" encoding="utf-8"?>
<includes>

	<include name="View52_layout">
		<posx>55</posx>
                <bottom>100</bottom>
                <width>1810</width>
                <height>400</height>
                <onup>9000</onup>
                <ondown>60</ondown>
                <onleft>52</onleft>
                <onright>52</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="31445">bigwrap</viewtype>
                <scrolltime tween="quadratic">200</scrolltime>
                <focusposition>3</focusposition>
                <preloaditems>2</preloaditems>
				<orientation>horizontal</orientation>
                <preloaditems>2</preloaditems>
				<visible>!container.content(episodes)</visible>
				<visible>!Skin.HasSetting(ForcedViews.Enabled) | 
				[Container.Content(movies) + Skin.String(ForcedViews.movies,None)] | 
				[Container.Content(tvshows) + Skin.String(ForcedViews.tvshows,None)] | 
				[Container.Content(seasons) + Skin.String(ForcedViews.seasons,None)] | 
				[Container.Content(episodes) + Skin.String(ForcedViews.episodes,None)] | 
				[[Container.Content(sets) | StringCompare(Container.Folderpath,videodb://movies/sets/)] + Skin.String(ForcedViews.sets,52)] | 
				[Container.Content(movies) + Skin.String(ForcedViews.movies,52) + !substring(Container.FolderPath,videodb://movies/sets/,left)] | 
				[Container.Content(movies) + Skin.String(ForcedViews.setmovies,52) + substring(Container.FolderPath,setid=)] | 
				[Container.Content(tvshows) + Skin.String(ForcedViews.tvshows,52)] | 
				[Container.Content(seasons) + Skin.String(ForcedViews.seasons,52)] | 
				[Container.Content(episodes) + Skin.String(ForcedViews.episodes,52)] | 
				[!Container.Content(movies) + !Container.Content(tvshows) + !Container.Content(seasons) + !Container.Content(episodes) + !Container.Content(sets)]
				</visible>
                <itemlayout height="380" width="258" condition="skin.hastheme(classic)">
			   <control type="group">
				   <posx>-5</posx>
				  <control type="image">
					<include>BigPanelPosterDimensions</include>
					<include>PosterThumbBG</include>
				  </control>
				  <control type="image">
					<include>BigPanelPosterDimensions</include>
					<include>PosterThumb</include>
				  </control>
				  <include>BigPanelLabelOverlay</include>
				  <control type="group">
					<include>BigPanelPosterDimensions</include>
					<include condition="Skin.HasSetting(CaseOverlays)">PosterOverlay</include>
				  </control>
				  <include>BigPanelWatchedImage</include>
				  
				</control>
			</itemlayout>
			<focusedlayout height="380" width="258"  condition="skin.hastheme(classic)">
				<control type="group">
				   <posx>-5</posx>
				   <animation effect="zoom" center="auto" start="100" end="115" time="160" tween="quadratic">Focus</animation>
				   <animation effect="zoom" center="auto" start="115" end="100" time="160" tween="quadratic">Unfocus</animation>
				   <control type="image">
						<!--cdart image-->
						<width>240</width>
						<height>240</height>
						<posy>50</posy>
						<posx>15</posx>
						<texture background="true">$INFO[ListItem.Art(discart)]</texture>
						<aspectratio scalediffuse="false" align="center" aligny="center">keep</aspectratio>
						<animation effect="slide" start="0" end="0,-160" tween="cubic" easing="inout" time="1200" delay="800">Focus</animation>
						<animation effect="fade" start="0" end="100" delay="800" time="800" pulse="false">Focus</animation>
						<animation effect="rotate" end="-360" center="auto" time="20000" loop="true" reversible="false" condition="Skin.HasSetting(AnimateDiscArt)">Conditional</animation>
						<visible>Skin.HasSetting(View52_ShowCDart)</visible>
					</control>
				  <control type="image">
					<include>BigPanelPosterDimensions</include>
					<include>PosterThumbFO</include>
				  </control>
				  <control type="image">
					<include>BigPanelPosterDimensions</include>
					<include>PosterThumb</include>
				  </control>
				  <include>BigPanelLabelOverlayFocus</include>
				  <control type="group">
					<include>BigPanelPosterDimensions</include>
					<include condition="Skin.HasSetting(CaseOverlays)">PosterOverlay</include>
				  </control>
				  <include>BigPanelWatchedImage</include>
				  
			  </control>
			  
			</focusedlayout>
			<itemlayout height="380" width="258" condition="!skin.hastheme(classic)">
			   <control type="group">
				   <posx>-5</posx>
				  <control type="image">
					<include>BigPanelPosterDimensions</include>
					<include>PosterThumbBG</include>
				  </control>
				  <control type="image">
					<include>BigPanelPosterDimensions</include>
					<include>PosterThumb</include>
				  </control>
				  <include>BigPanelLabelOverlay</include>
				  <control type="group">
					<include>BigPanelPosterDimensions</include>
					<include condition="Skin.HasSetting(CaseOverlays)">PosterOverlay</include>
				  </control>
				  <include>BigPanelWatchedImage</include>
				  
				</control>
			</itemlayout>
			<focusedlayout height="380" width="258"  condition="!skin.hastheme(classic)">
				<control type="group">
				   <posx>-5</posx>
				   <animation effect="zoom" center="auto" start="100" end="115" time="160" tween="quadratic">Focus</animation>
				   <animation effect="zoom" center="auto" start="115" end="100" time="160" tween="quadratic">Unfocus</animation>
				   <control type="image">
						<!--cdart image-->
						<width>240</width>
						<height>240</height>
						<posy>50</posy>
						<posx>15</posx>
						<texture background="true">$INFO[ListItem.Art(discart)]</texture>
						<aspectratio scalediffuse="false" align="center" aligny="center">keep</aspectratio>
						<animation effect="slide" start="0" end="0,-160" tween="cubic" easing="inout" time="1200" delay="800">Focus</animation>
						<animation effect="fade" start="0" end="100" delay="800" time="800" pulse="false">Focus</animation>
						<animation effect="rotate" end="-360" center="auto" time="20000" loop="true" reversible="false" condition="Skin.HasSetting(AnimateDiscArt)">Conditional</animation>
						<visible>Skin.HasSetting(View52_ShowCDart)</visible>
					</control>
				  <control type="image">
					<include>BigPanelPosterDimensions</include>
					<include>PosterThumbFO</include>
				  </control>
				  <control type="image">
					<include>BigPanelPosterDimensions</include>
					<include>PosterThumb</include>
				  </control>
				  <include>BigPanelLabelOverlayFocus</include>
				  <control type="group">
					<include>BigPanelPosterDimensions</include>
					<include condition="Skin.HasSetting(CaseOverlays)">PosterOverlay</include>
				  </control>
				  <include>BigPanelWatchedImage</include>
				  
			  </control>
			  
			</focusedlayout>
			
	</include>

	<include name="View52_layout_fixed">
		<control type="fixedlist" id="52">
			<include>View52_layout</include>
		</control>
	</include>
	
	<include name="View52_layout_normal">
		<control type="panel" id="52">
			<include>View52_layout</include>
		</control>
	</include>
	
	
	
    <include name="View_52_HorizontalPanel">
		<!-- panel no info -->
        <control type="group">
            <visible>Control.IsVisible(52)</visible>
            <include>animation_view_change</include>
			
			<!-- movie details -->
			<control type="group">
				<visible>Skin.HasSetting(PanelViewShowInfo)</visible>
				<include>MovieDetails</include>
			</control>
			
			<!--horizontal Scrollbar-->
			<control type="group">
				<control type="scrollbar" id="60">
					<visible>Control.IsVisible(52)</visible>
					<left>70</left>
					<bottom>130</bottom>
					<width>1780</width>
					<height>15</height>
					<onup>52</onup>
					<onleft>60</onleft>
					<onright>60</onright>
					<orientation>horizontal</orientation>
					<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
					<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
				</control>
			</control>
			
			
			<!-- View 52 -->
			<include condition="Skin.HasSetting(View52_UseFixedLayout)">View52_layout_fixed</include>
			<include condition="!Skin.HasSetting(View52_UseFixedLayout)">View52_layout_normal</include>
			

			
		</control>
		
		

    </include>
</includes>