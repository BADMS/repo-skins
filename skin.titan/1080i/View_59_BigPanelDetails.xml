<?xml version="1.0" encoding="UTF-8"?>
<includes>
  
  <include name="View_59_BigPanelDetails">
	
    <control type="group">
      <visible>Control.IsVisible(59)</visible>
      <include>animation_window_open_close</include>
	  <include>animation_fade_visible_hidden</include>
      <control type="panel" id="59">
        <viewtype label="Big Panel details">Big Panel details</viewtype>
        <posx>778</posx>
        <posy>179</posy>
        <width>1136</width>
        <height>800</height>
        <orientation>vertical</orientation>
        <onleft>9000</onleft>
        <onright>60</onright>
        <onup>59</onup>
        <ondown>59</ondown>
        <preloaditems>4</preloaditems>
        <pagecontrol>60</pagecontrol>
		<visible>container.content(MusicVideos) | [Container.Content(tvshows)] | Container.Content(Movies) | container.content(seasons)</visible>
        <itemlayout height="400" width="275">
          <control type="image">
            <include>BigPanelPosterDimensions</include>
            <include>PosterThumbBG</include>
          </control>
          <control type="image">
            <include>BigPanelPosterDimensions</include>
            <include>PosterThumb</include>
          </control>
          <include condition="!skin.hastheme(classic)">BigPanelWatchedImageModern</include>
		  <include condition="skin.hastheme(classic)">BigPanelWatchedImageClassic</include>
        </itemlayout>
        <focusedlayout height="400" width="275">
          <control type="image">
            <include>BigPanelPosterDimensions</include>
            <include>PosterThumbFO</include>
          </control>
          <control type="image">
            <include>BigPanelPosterDimensions</include>
            <include>PosterThumb</include>
          </control>
          <include condition="!skin.hastheme(classic)">BigPanelWatchedImageModern</include>
		  <include condition="skin.hastheme(classic)">BigPanelWatchedImageClassic</include>
        </focusedlayout>
      </control>
      <control type="group">
        <visible>Control.IsVisible(59) + IntegerGreaterThan(Container(59).NumItems,0)</visible>
        <include>MovieDetailsLeft</include>
      </control>
	  <control type="scrollbar" id="60">
        <animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
        <animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
        <posx>20r</posx>
        <posy>360</posy>
        <width>36</width>
        <height>700</height>
        <texturesliderbackground>-</texturesliderbackground>
        <texturesliderbar>-</texturesliderbar>
        <texturesliderbarfocus>-</texturesliderbarfocus>
        <textureslidernib border="18">OSD/ScrollbarNibNF.png</textureslidernib>
        <textureslidernibfocus border="18">OSD/ScrollbarNibFO.png</textureslidernibfocus>
        <showonepage>false</showonepage>
        <orientation>vertical</orientation>
        <onleft>59</onleft>
        <onright>9000</onright>
      </control>
    </control>
	<!-- footer bar -->
	<control type="group">
		<include>animation_window_open_close</include>
		 <include>animation_fade_visible_hidden</include>
		<visible>Control.IsVisible(59)</visible>
		<visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
		<include condition="!skin.hassetting(nofooterbar)">Footer</include>
	</control>
  </include>
</includes>
