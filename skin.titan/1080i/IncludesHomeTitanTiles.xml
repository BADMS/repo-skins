<includes>
	
	<include name="HomeLayoutFixedFocus">
		<!-- home menu Widgets -->
		<include condition="!Skin.HasSetting(DisableAllWidgets) + !Skin.String(GadgetRows, 3)">HomeMenuWidget</include>
		
		<control type="wraplist" id="300">
			<visible>!Skin.String(GadgetRows, enhanced)</visible>
            <posx>38</posx>
            <width>1845</width>
            <include>normalHomePanelLayout</include>
        </control>
		<!-- touchscreen support -->
		<include condition="Skin.HasSetting(EnableTouchSupport)">TouchControlsHome</include>
	</include>
	
	<include name="HomeLayoutNormal">
	
		<!-- home menu Widgets -->
		<include condition="!Skin.HasSetting(DisableAllWidgets) + !Skin.String(GadgetRows, 3)">HomeMenuWidget</include>
		
		<control type="panel" id="300">
			<visible>!Skin.String(GadgetRows, enhanced)</visible>
            <posx>38</posx>
            <width>1845</width>
            <include>normalHomePanelLayout</include>
        </control>
		<!-- touchscreen support -->
		<include condition="Skin.HasSetting(EnableTouchSupport)">TouchControlsHome</include>
	</include>
	
	<include name="HomeLayoutOrientationHorizontal">
		<orientation>horizontal</orientation>
	</include>
	
	<include name="HomeLayoutOrientationVertical">
		<orientation>vertical</orientation>
	</include>
	
	<include name="normalHomePanelLayout">
		<include condition="Skin.String(GadgetRows, 1) + !Skin.HasSetting(UseSmallHomeTiles)">Gadget1Row</include>
		<include condition="Skin.String(GadgetRows, 2) + !Skin.HasSetting(UseSmallHomeTiles)">Gadget2Row</include>
		<include condition="!Skin.String(GadgetRows)">Gadget2Row</include>
		<include condition="Skin.String(GadgetRows, 3) + !Skin.HasSetting(UseSmallHomeTiles)">Gadget3Row</include>
		
		<include condition="Skin.String(GadgetRows, 1) + Skin.HasSetting(UseSmallHomeTiles)">Gadget1RowSmall</include>
		<include condition="Skin.String(GadgetRows, 2) + Skin.HasSetting(UseSmallHomeTiles)">Gadget2RowSmall</include>
		<include condition="Skin.String(GadgetRows, 3) + Skin.HasSetting(UseSmallHomeTiles)">Gadget3RowSmall</include>
		
		<animation type="Conditional" condition="[ControlGroup(77777).HasFocus | StringCompare(Window(Home).Property(ShowWidget),show)]">
			<effect type="slide" start="0,-0" end="0,800" time="400" tween="cubic" easing="inout" delay="0" />
		</animation>
		
		<animation type="Conditional" condition="SubString(Window(Home).Property(HomeLoaded),loaded)">
			<effect type="slide" start="0,1100" end="0,0" time="450" delay="600" tween="cubic" easing="inout" />
		</animation>

		<animation type="Conditional" condition="Control.IsVisible(4444) + Skin.String(SubmenuLayout, tiles)">
			<effect type="slide" start="0,0" end="0,-60" time="200" tween="cubic" easing="inout" delay="0" />
		</animation>
		
		<animation type="Conditional" condition="Skin.HasSetting(HideHomeTileIndicators)">
			<effect type="slide" start="0,0" end="0,30" time="200" tween="cubic" easing="inout" delay="0" />
		</animation>

		<animation type="Conditional" condition="[SubString(Window(Home).Property(submenu),show) | Control.HasFocus(4444)] + Skin.String(SubmenuLayout, subpage)">
			<effect type="slide" start="0,0" end="0,1000" time="0" delay="0" />
		</animation>

		<onup>$VAR[HomeButtonUpAction]</onup>
		<ondown>$VAR[HomeButtonDownAction]</ondown>
		<onleft></onleft>
		<onright></onright>
		
		<include condition="Skin.String(GadgetRows, 1) | Skin.String(GadgetRows, 2)">HomeLayoutOrientationHorizontal</include>
		<include condition="Skin.String(GadgetRows, 3)">HomeLayoutOrientationVertical</include>

		<pagecontrol>60</pagecontrol>

		<itemlayout width="612" height="265" condition="!Skin.HasSetting(UseSmallHomeTiles)">
			<control type="group">
			<posy>20</posy>
				<control type="image">
					<!--Panel Shadow-->
					<posx>0</posx>
					<posy>0</posy>
					<width>613</width>
					<height>261</height>
					<texture>home/home_shadow.png</texture>
					<visible>!Skin.HasSetting(NoShadowOnHomeMenuTiles)</visible>
				</control>
				<control type="image">
					<!--focus image-->
					<posx>11</posx>
					<posy>13</posy>
					<width>590</width>
					<height>240</height>
					<bordersize>-4</bordersize>
					<texture>home/home_matte2.png</texture>
					<colordiffuse>$INFO[Skin.String(HomeViewDetailsFocusColor)]</colordiffuse>
					<visible>StringCompare(Container(300).ListItem.Label, ListItem.Label)</visible>
				</control>
				<control type="image">
					<!--Panel Normal-->
					<posx>11</posx>
					<posy>13</posy>
					<width>590</width>
					<height>240</height>
					<texture background="true" diffuse="home/home_matte2.png" fallback="special://skin/extras/hometiles/addons.png">$INFO[ListItem.Icon]</texture>
					<aspectratio scalediffuse="false" align="center" aligny="top">scale</aspectratio>
					<fadetime>800</fadetime>
					<include>backgroundfade</include>
				</control>
				<control type="image">
					<!--Panel Ovelay-->
					<posx>11</posx>
					<posy>13</posy>
					<width>590</width>
					<height>240</height>
					<colordiffuse>ccFFFFFF</colordiffuse>
					<texture diffuse="home/home_matte2.png">home/home_overlay.png</texture>
					<visible>!Skin.HasSetting(NoTitleOnHomeMenuTiles) + !StringCompare(ListItem.Property(disableLabel), disable)</visible>
				</control>
				<control type="label">
					<!--Label-->
					<centerleft>315</centerleft>
					<posy>160</posy>
					<width>590</width>
					<height>100</height>
					<align>center</align>
					<info>ListItem.Label</info>
					<font>Reg45</font>
					<textcolor>aawhite</textcolor>
					<shadowcolor>black</shadowcolor>
					<visible>!Skin.HasSetting(NoTitleOnHomeMenuTiles) + !StringCompare(ListItem.Property(disableLabel), disable)</visible>
				</control>
				<control type="label">
					<!--Label Grey-->
					<centerleft>315</centerleft>
					<posy>160</posy>
					<width>590</width>
					<height>100</height>
					<align>center</align>
					<info>ListItem.Label</info>
					<font>Reg45</font>
					<textcolor>$INFO[Skin.String(HomeViewDetailsFocusColor)]</textcolor>
					<shadowcolor>black</shadowcolor>
					<visible>StringCompare(Container(300).ListItem.Label, ListItem.Label) + ![Skin.HasSetting(NoTitleOnHomeMenuTiles) | StringCompare(ListItem.Property(disableLabel), disable)]</visible>
				</control>
			</control>
		</itemlayout>
		<focusedlayout width="612" height="265" condition="!Skin.HasSetting(UseSmallHomeTiles)">
			<control type="group">
				<posy>20</posy>
				
				<!--widget Arrow UP-->
				<control type="group">
					<!-- show arrow up button if widget available -->
					<visible>!Skin.HasSetting(HideHomeTileIndicators) + !IsEmpty(Window(Home).Property(activewidget)) + [[Skin.String(GadgetRows, 2) + [StringCompare(Container(300).Position,0) | StringCompare(Container(300).Position,2) | StringCompare(Container(300).Position,4)]] | Skin.String(GadgetRows, 1)]</visible>
					<animation effect="fade" start="0" end="100" delay="1200" time="800" pulse="false">Focus</animation>
					<control type="image">
						<posx>236</posx>
						<posy>-19</posy>
						<width>149</width>
						<height>33</height>
						<texture border="5" colordiffuse="$INFO[Skin.String(GeneralPanelsColor)]">diffuse/panel.png</texture>
						<animation effect="fade" reversible="false" end="80" time="0" condition="true">Conditional</animation>
						<visible>!skin.hastheme(classic)</visible>
					</control>
					<control type="image">
						<posx>236</posx>
						<posy>-18</posy>
						<width>149</width>
						<height>28</height>
						<texture colordiffuse="$INFO[Skin.String(HomeViewDetailsFocusColor)]">home/home_arrow_up.png</texture>
						<aspectratio>keep</aspectratio>
						<visible>!skin.hastheme(classic)</visible>
					</control>
					<control type="image">
						<posx>236</posx>
						<posy>-16</posy>
						<width>149</width>
						<height>30</height>
						<texture colordiffuse="$INFO[Skin.String(HomeViewDetailsFocusColor)]">home/basichome_up.png</texture>
						<visible>skin.hastheme(classic)</visible>
					</control>
				</control>
				
				
				<!--widget Arrow DOWN-->
				<control type="group">
					<!-- show arrow down button if submenu available or widget at 2 rows of home tiles -->
					<visible>!Skin.HasSetting(HideHomeTileIndicators) + [[IntegerGreaterThan(Container(4444).NumItems,0) + Skin.String(GadgetRows, 1)] | [!IsEmpty(Window(Home).Property(activewidget)) + Skin.String(GadgetRows, 2) + [StringCompare(Container(300).Position,1) | StringCompare(Container(300).Position,3) | StringCompare(Container(300).Position,5)]]]</visible>
					<animation effect="fade" start="0" end="100" delay="1200" time="800" pulse="false">Focus</animation>
					<control type="image">
						<posx>236</posx>
						<posy>253</posy>
						<width>149</width>
						<height>33</height>
						<texture border="5" colordiffuse="$INFO[Skin.String(GeneralPanelsColor)]">diffuse/panel.png</texture>
						<animation effect="fade" reversible="false" end="80" time="0" condition="true">Conditional</animation>
						<visible>!skin.hastheme(classic)</visible>
					</control>
					<control type="image">
						<posx>236</posx>
						<posy>258</posy>
						<width>149</width>
						<height>28</height>
						<texture colordiffuse="$INFO[Skin.String(HomeViewDetailsFocusColor)]">home/home_arrow_down.png</texture>
						<aspectratio>keep</aspectratio>
						<visible>!skin.hastheme(classic)</visible>
					</control>
					<control type="image">
						<posx>236</posx>
						<posy>253</posy>
						<width>149</width>
						<height>30</height>
						<texture colordiffuse="$INFO[Skin.String(HomeViewDetailsFocusColor)]">home/basichome_down.png</texture>
						<visible>skin.hastheme(classic)</visible>
					</control>
				</control>
				
				<control type="image">
					<!--focus image-->
					<posx>11</posx>
					<posy>13</posy>
					<width>590</width>
					<height>240</height>
					<bordersize>-6</bordersize>
					<texture>home/home_matte2.png</texture>
					<colordiffuse>$INFO[Skin.String(HomeViewDetailsFocusColor)]</colordiffuse>
				</control>
				<control type="image">
					<!--Panel Normal-->
					<posx>11</posx>
					<posy>13</posy>
					<width>590</width>
					<height>240</height>
					<texture background="true" fallback="special://skin/extras/hometiles/addons.png" diffuse="home/home_matte2.png">$INFO[ListItem.Icon]</texture>
					<aspectratio scalediffuse="false" align="center" aligny="top">scale</aspectratio>
					<fadetime>800</fadetime>
					<include>backgroundfade</include>
				</control>
				<control type="image">
					<!--Panel Ovelay-->
				   <posx>11</posx>
					<posy>13</posy>
					<width>590</width>
					<height>240</height>
					<colordiffuse>ccFFFFFF</colordiffuse>
					<texture diffuse="home/home_matte2.png">home/home_overlay.png</texture>
					<visible>!Skin.HasSetting(NoTitleOnHomeMenuTiles) + !StringCompare(ListItem.Property(disableLabel), disable)</visible>
				</control>
				<control type="label">
					<!--Label Grey-->
					<centerleft>315</centerleft>
					<posy>160</posy>
					<width>590</width>
					<height>100</height>
					<align>center</align>
					<info>ListItem.Label</info>
					<font>Reg45</font>
					<textcolor>$INFO[Skin.String(HomeViewDetailsFocusColor)]</textcolor>
					<shadowcolor>black</shadowcolor>
					<visible>!Skin.HasSetting(NoTitleOnHomeMenuTiles) + !StringCompare(ListItem.Property(disableLabel), disable)</visible>
				</control>
				<control type="button">
					<left>150</left>
					<top>0</top>
					<width>1</width>
					<height>60</height>
					<font>Reg28</font>
					<textcolor>blue</textcolor>
					<align>center</align>
					<aligny>center</aligny>
					<label>-</label>
					<visible>false</visible>
					<onfocus condition="!Skin.HasSetting(DisableAllSubmenus)">SetProperty(menu,300,Home)</onfocus>
					<onfocus condition="Skin.HasSetting(UseSectionBackground)">SetProperty(SectionBackground,$INFO[Container(300).ListItem.Property(defaultID)],Home)</onfocus>
					<onfocus condition="Skin.HasSetting(UseSectionBackground) + !IsEmpty(Container(300).ListItem.Property(Background))">SetProperty(SectionBackgroundValue,$INFO[Container(300).ListItem.Property(Background)],Home)</onfocus>
					<onfocus condition="Skin.HasSetting(UseSectionBackground) + IsEmpty(Container(300).ListItem.Property(Background))">ClearProperty(SectionBackgroundValue,Home)</onfocus>	
					<onfocus condition="!Skin.HasSetting(DisableAllSubmenus)">SetProperty(submenupos,$INFO[Container(300).Position],Home)</onfocus>
					<onfocus condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.HasSetting(AutoShowSubmenu) + Skin.String(SubmenuLayout, vertical)">SetFocus(4444)</onfocus>
					<onfocus condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.HasSetting(AutoShowSubmenu) + !Skin.String(SubmenuLayout, vertical)">SetProperty(submenu,show,home)</onfocus>
				</control>
			</control>
		</focusedlayout>
		
		
		<itemlayout width="365" height="205" condition="Skin.HasSetting(UseSmallHomeTiles)">
			<control type="group">
			<posy>25</posy>
			<posx>20</posx>
			<include>EnhancedHomeMainLayout</include>
			</control>
		</itemlayout>
		<focusedlayout width="365" height="215" condition="Skin.HasSetting(UseSmallHomeTiles)">
			<control type="group">
				<posy>25</posy>
				<posx>20</posx>
				
				<!--widget Arrow UP-->
				<control type="group">
					<!-- show arrow up button if widget available -->
					<visible>!Skin.HasSetting(HideHomeTileIndicators) + !IsEmpty(Window(Home).Property(activewidget)) + [[Skin.String(GadgetRows, 2) + [StringCompare(Container(300).Position,0) | StringCompare(Container(300).Position,2) | StringCompare(Container(300).Position,4)]] | Skin.String(GadgetRows, 1)]</visible>
					<animation effect="fade" start="0" end="100" delay="1200" time="800" pulse="false">Focus</animation>
					<control type="image">
						<posx>94</posx>
						<posy>-28</posy>
						<width>149</width>
						<height>28</height>
						<texture colordiffuse="$INFO[Skin.String(GeneralPanelsColor)]">colors/color_white.png</texture>
						<animation effect="fade" reversible="false" end="80" time="0" condition="true">Conditional</animation>
						<visible>!skin.hastheme(classic)</visible>
					</control>
					<control type="image">
						<posx>94</posx>
						<posy>-28</posy>
						<width>149</width>
						<height>28</height>
						<texture colordiffuse="$INFO[Skin.String(HomeViewDetailsFocusColor)]">home/home_arrow_up.png</texture>
						<aspectratio>keep</aspectratio>
						<visible>!skin.hastheme(classic)</visible>
					</control>
					<control type="image">
						<posx>94</posx>
						<posy>-28</posy>
						<width>149</width>
						<height>30</height>
						<texture colordiffuse="$INFO[Skin.String(HomeViewDetailsFocusColor)]">home/basichome_up.png</texture>
						<visible>skin.hastheme(classic)</visible>
					</control>
				</control>
				
				
				<!--widget Arrow DOWN-->
				<control type="group">
					<!-- show arrow down button if submenu available or widget at 2 rows of home tiles -->
					<visible>!Skin.HasSetting(HideHomeTileIndicators) + [[IntegerGreaterThan(Container(4444).NumItems,0) + Skin.String(GadgetRows, 1)] | [!IsEmpty(Window(Home).Property(activewidget)) + Skin.String(GadgetRows, 2) + [StringCompare(Container(300).Position,1) | StringCompare(Container(300).Position,3) | StringCompare(Container(300).Position,5)]]]</visible>
					<animation effect="fade" start="0" end="100" delay="1200" time="800" pulse="false">Focus</animation>
					<control type="image">
						<posx>94</posx>
						<posy>178</posy>
						<width>149</width>
						<height>23</height>
						<texture colordiffuse="$INFO[Skin.String(GeneralPanelsColor)]">colors/color_white.png</texture>
						<animation effect="fade" reversible="false" end="80" time="0" condition="true">Conditional</animation>
						<visible>!skin.hastheme(classic)</visible>
					</control>
					<control type="image">
						<posx>94</posx>
						<posy>174</posy>
						<width>149</width>
						<height>28</height>
						<texture colordiffuse="$INFO[Skin.String(HomeViewDetailsFocusColor)]">home/home_arrow_down.png</texture>
						<aspectratio>keep</aspectratio>
						<visible>!skin.hastheme(classic)</visible>
					</control>
					<control type="image">
						<posx>94</posx>
						<posy>172</posy>
						<width>149</width>
						<height>30</height>
						<texture colordiffuse="$INFO[Skin.String(HomeViewDetailsFocusColor)]">home/basichome_down.png</texture>
						<visible>skin.hastheme(classic)</visible>
					</control>
				</control>
				
				<include>EnhancedHomeMainLayoutFocus</include>
			</control>
		</focusedlayout>
		<content>
			<include>skinshortcuts-mainmenu</include>
		</content>
	</include>
	
	<!-- Gadget Row sizes -->
    <include name="Gadget1Row">
        <height>325</height>
        <bottom>110</bottom>
		<focusposition>1</focusposition>
    </include>
    <include name="Gadget2Row">
        <height>605</height>
        <bottom>90</bottom>
    </include>
	<include name="Gadget3Row">
        <height>820</height>
        <bottom>125</bottom>
    </include>
	
	<include name="Gadget1RowSmall">
        <height>230</height>
        <posy>680</posy>
		<focusposition>2</focusposition>
    </include>
    <include name="Gadget2RowSmall">
        <height>440</height>
        <posy>490</posy>
    </include>
	<include name="Gadget3RowSmall">
		<orientation>vertical</orientation>
        <height>620</height>
        <posy>280</posy>
    </include>
	
</includes>