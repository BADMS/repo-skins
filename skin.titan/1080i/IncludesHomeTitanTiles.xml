<includes>
	
	<include name="HomeLayoutFixedFocus">
		<!-- home menu Widgets -->
		<include condition="!Skin.HasSetting(DisableAllWidgets) + !Skin.String(HomeLayout, 3)">HomeMenuWidget</include>
		
		<control type="wraplist" id="300">
			<visible>!Skin.String(HomeLayout, enhanced)</visible>
            <include>normalHomePanelLayout</include>
        </control>
		<!-- touchscreen support -->
		<include condition="Skin.HasSetting(EnableTouchSupport)">TouchControlsHome</include>
		
		<!-- Power button -->
		<include condition="!Skin.HasSetting(EnableTouchSupport) + !Skin.HasSetting(DisablePowerMenu)">PowerButton</include>
	</include>
	
	<include name="HomeLayoutNormal">
	
		<!-- home menu Widgets -->
		<include condition="!Skin.HasSetting(DisableAllWidgets) + !Skin.String(HomeLayout, 3)">HomeMenuWidget</include>
		
		<control type="panel" id="300">
			<visible>!Skin.String(HomeLayout, enhanced)</visible>
            <include>normalHomePanelLayout</include>
        </control>
		<!-- touchscreen support -->
		<include condition="Skin.HasSetting(EnableTouchSupport)">TouchControlsHome</include>
		
		<!-- Power button -->
		<include condition="!Skin.HasSetting(EnableTouchSupport) + !Skin.HasSetting(DisablePowerMenu)">PowerButton</include>
	</include>
	
	<include name="HomeLayoutOrientationHorizontal">
		<orientation>horizontal</orientation>
	</include>
	
	<include name="HomeLayoutOrientationVertical">
		<orientation>vertical</orientation>
	</include>
    
    <include name="HomeTileIndicators">
        <!--widget Arrow UP-->
        <control type="group">
            <!-- show arrow up button if widget available -->
            <visible>!IsEmpty(Container(300).ListItem.Property(widget)) + [[Skin.String(HomeLayout, 2) + [StringCompare(Container(300).Position,0) | StringCompare(Container(300).Position,2) | StringCompare(Container(300).Position,4)]] | Skin.String(HomeLayout, 1)]</visible>
            <animation effect="fade" start="0" end="100" delay="1200" time="800" pulse="false">Focus</animation>
            <control type="image">
                <left>35%</left>
                <posy>0</posy>
                <width>25%</width>
                <height>33</height>
                <texture border="5" colordiffuse="$INFO[Skin.String(GeneralPanelsColor)]">diffuse/panel.png</texture>
                <visible>!skin.hastheme(classic)</visible>
            </control>
            <control type="image">
                <left>35%</left>
                <posy>0</posy>
                <width>25%</width>
                <height>30</height>
                <texture colordiffuse="$VAR[ViewDetailsFocusColor]">home/home_arrow_up.png</texture>
                <aspectratio>keep</aspectratio>
                <visible>!skin.hastheme(classic)</visible>
            </control>
            <control type="image">
                <left>35%</left>
                <posy>0</posy>
                <width>25%</width>
                <height>33</height>
                <texture colordiffuse="$VAR[ViewDetailsFocusColor]">home/basichome_up.png</texture>
                <visible>skin.hastheme(classic)</visible>
            </control>
        </control>
        
        <!--widget Arrow DOWN-->
        <control type="group">
            <!-- show arrow down button if submenu available or widget at 2 rows of home tiles -->
            <visible>[[IntegerGreaterThan(Container(4444).NumItems,0) + Skin.String(HomeLayout, 1)] | [!IsEmpty(Container(300).ListItem.Property(widget)) + Skin.String(HomeLayout, 2) + [StringCompare(Container(300).Position,1) | StringCompare(Container(300).Position,3) | StringCompare(Container(300).Position,5)]]]</visible>
            <animation effect="fade" start="0" end="100" delay="1200" time="800" pulse="false">Focus</animation>
            <control type="image">
                <left>35%</left>
                <bottom>0</bottom>
                <width>25%</width>
                <height>33</height>
                <texture border="5" colordiffuse="$INFO[Skin.String(GeneralPanelsColor)]">diffuse/panel.png</texture>
                <visible>!skin.hastheme(classic)</visible>
            </control>
            <control type="image">
                <left>35%</left>
                <bottom>0</bottom>
                <width>25%</width>
                <height>30</height>
                <texture colordiffuse="$VAR[ViewDetailsFocusColor]">home/home_arrow_down.png</texture>
                <aspectratio>keep</aspectratio>
                <visible>!skin.hastheme(classic)</visible>
            </control>
            <control type="image">
                <left>35%</left>
                <bottom>0</bottom>
                <width>25%</width>
                <height>33</height>
                <texture colordiffuse="$VAR[ViewDetailsFocusColor]">home/basichome_down.png</texture>
                <visible>skin.hastheme(classic)</visible>
            </control>
        </control>
				
    </include>
	
	<include name="normalHomePanelLayout">
		<include condition="Skin.String(HomeLayout, 1) + !Skin.HasSetting(UseSmallHomeTiles)">TitanTiles_1Row</include>
		<include condition="Skin.String(HomeLayout, 2) + !Skin.HasSetting(UseSmallHomeTiles)">TitanTiles_2Row</include>
		<include condition="!Skin.String(HomeLayout)">TitanTiles_2Row</include>
		<include condition="Skin.String(HomeLayout, 3) + !Skin.HasSetting(UseSmallHomeTiles)">TitanTiles_3Row</include>
		
		<include condition="Skin.String(HomeLayout, 1) + Skin.HasSetting(UseSmallHomeTiles)">TitanTiles_1RowSmall</include>
		<include condition="Skin.String(HomeLayout, 2) + Skin.HasSetting(UseSmallHomeTiles)">TitanTiles_2RowSmall</include>
		<include condition="Skin.String(HomeLayout, 3) + Skin.HasSetting(UseSmallHomeTiles)">TitanTiles_3RowSmall</include>
		
        <posx>55</posx>
        <width>1836</width>
        
		<animation type="Conditional" condition="[ControlGroup(77777).HasFocus | StringCompare(Window(Home).Property(ShowWidget),show)]">
			<effect type="slide" start="0,-0" end="0,800" time="400" tween="cubic" easing="inout" delay="0" />
		</animation>

		<animation type="Conditional" condition="Control.IsVisible(4444) + Skin.String(SubmenuLayout, tiles)">
			<effect type="slide" start="0,0" end="0,-60" time="200" tween="cubic" easing="inout" delay="0" />
		</animation>
		
		<animation type="Conditional" condition="Skin.HasSetting(HideHomeTileIndicators)">
			<effect type="slide" start="0,0" end="0,30" time="200" tween="cubic" easing="inout" delay="0" />
		</animation>

		<animation type="Conditional" condition="[SubString(Window(Home).Property(submenu),show) | Control.HasFocus(4444)] + Skin.String(SubmenuLayout, subpage)">
			<effect type="slide" start="0,0" end="0,1000" time="0" delay="0" />
		</animation>

		<onup>$VAR[HomeButtonUpAction]</onup>
		<ondown>$VAR[HomeButtonDownAction]</ondown>
		<onleft></onleft>
		<onright></onright>
		
		<include condition="Skin.String(HomeLayout, 1) | Skin.String(HomeLayout, 2)">HomeLayoutOrientationHorizontal</include>
		<include condition="Skin.String(HomeLayout, 3)">HomeLayoutOrientationVertical</include>

		<pagecontrol>60</pagecontrol>

		<itemlayout width="612" height="290" condition="!Skin.HasSetting(UseSmallHomeTiles)">
			<control type="group">
                <width>590</width>
                <height>240</height>
                <posy>25</posy>
                <include>LandscapeLayout</include>
            </control>
		</itemlayout>
		<focusedlayout width="612" height="290" condition="!Skin.HasSetting(UseSmallHomeTiles)">
			
            <include condition="!Skin.HasSetting(HideHomeTileIndicators)">HomeTileIndicators</include>

            <control type="group">
                <width>590</width>
                <height>240</height>
                <posy>25</posy>
                <control type="button">
					<visible>false</visible>
					<onfocus condition="!Skin.HasSetting(DisableAllSubmenus)">SetProperty(submenupos,$INFO[Container(300).Position],Home)</onfocus>
					<onfocus condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.HasSetting(AutoShowSubmenu) + Skin.String(SubmenuLayout, vertical)">SetFocus(4444)</onfocus>
					<onfocus condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.HasSetting(AutoShowSubmenu) + !Skin.String(SubmenuLayout, vertical)">SetProperty(submenu,show,home)</onfocus>
				</control>
                <include>LandscapeLayoutFocus</include>
            </control>
   
		</focusedlayout>
		
		<itemlayout width="365" height="227" condition="Skin.HasSetting(UseSmallHomeTiles)">
			<control type="group">
                <width>337</width>
                <height>175</height>
                <posy>25</posy>
                <include>ThumbsViewLayout</include>
            </control>
		</itemlayout>
		<focusedlayout width="365" height="227" condition="Skin.HasSetting(UseSmallHomeTiles)">
			<include condition="!Skin.HasSetting(HideHomeTileIndicators)">HomeTileIndicators</include>
            <control type="group">
                <width>337</width>
                <height>175</height>
                <posy>25</posy>
                <control type="button">
					<visible>false</visible>
					<onfocus condition="!Skin.HasSetting(DisableAllSubmenus)">SetProperty(submenupos,$INFO[Container(300).Position],Home)</onfocus>
					<onfocus condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.HasSetting(AutoShowSubmenu) + Skin.String(SubmenuLayout, vertical)">SetFocus(4444)</onfocus>
					<onfocus condition="!Skin.HasSetting(DisableAllSubmenus) + Skin.HasSetting(AutoShowSubmenu) + !Skin.String(SubmenuLayout, vertical)">SetProperty(submenu,show,home)</onfocus>
				</control>
                <include>ThumbsViewLayoutFocus</include>
            </control>
		</focusedlayout>
		<content>
			<include>skinshortcuts-mainmenu</include>
		</content>
	</include>
	
	<!-- Gadget Row sizes -->
    <include name="TitanTiles_1Row">
        <height>325</height>
        <bottom>110</bottom>
		<focusposition>1</focusposition>
    </include>
    <include name="TitanTiles_2Row">
        <height>605</height>
        <bottom>90</bottom>
    </include>
	<include name="TitanTiles_3Row">
        <height>870</height>
        <bottom>90</bottom>
    </include>
	
	<include name="TitanTiles_1RowSmall">
        <height>227</height>
        <bottom>125</bottom>
		<focusposition>2</focusposition>
        <posx>60</posx>
        <width>1825</width>
    </include>
    <include name="TitanTiles_2RowSmall">
        <height>454</height>
        <bottom>125</bottom>
        <posx>60</posx>
        <width>1825</width>
    </include>
	<include name="TitanTiles_3RowSmall">
		<orientation>vertical</orientation>
        <height>681</height>
        <bottom>125</bottom>
        <posx>60</posx>
        <width>1825</width>
    </include>
	
</includes>