<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>

    <include name="View_507_FanArt">
	
	 <!--View 507-->
        <control type="group">
            <visible>Control.IsVisible(507)</visible>
			<visible>IntegerGreaterThan(Container(507).NumItems,0)</visible>
            <include>animation_view_change</include>
            
            <!-- ID="52" -->
            <control type="panel" id="507">
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>1080</height>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <onleft>507</onleft>
                <onright>507</onright>
                <viewtype label="FanArt">biglist</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>0</focusposition>
                <orientation>horizontal</orientation>
                <preloaditems>2</preloaditems>
				<visible>!container.content(episodes)</visible>
                <itemlayout height="1920" width="1080">
                </itemlayout>
                <focusedlayout height="1920" width="1080">
                </focusedlayout>
            </control>
			
			
			<control type="image">
				<!--fanart image-->
				<width>1920</width>
				<height>1080</height>
				<texture background="true" fallback="poster_default.png">$VAR[LargeFanArtImage]</texture>
				<aspectratio align="center" aligny="center">keep</aspectratio>
				<visible>Control.IsVisible(507)</visible>
				<fadetime>800</fadetime>
				<include>animation_fade_visible_hidden</include>
			</control>
			
			
        
			<!--Time & Weather-->
			<include>TimeInfo</include>
			<!--NowPlaying-->
			<include condition="Skin.HasTheme(classic)">NowPlayingMusicClassic</include>
			<include condition="Skin.HasTheme(classic)">NowPlayingVideoClassic</include>
			<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
			
			<!--Header-->
			<include>Header</include>
		
		</control>
        
	
	
        <!--Panel-->
        <control type="group">
            <visible>Control.IsVisible(507)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include>animation_view_change</include>
            
			
			<control type="image">
                <visible>Control.IsVisible(507) + !IsEmpty(ListItem.Label)</visible>
                <posx>8</posx>
                <posy>703</posy>
                <width>1902</width>
                <height>310</height>
                <texture>views/filemanager_panel1.png</texture>
				<visible>skin.hastheme(classic) + Skin.HasSetting(FanArtViewShowInfo)</visible>
            </control>
			<control type="image">
                <visible>Control.IsVisible(507) + !IsEmpty(ListItem.Label)</visible>
                <posx>8</posx>
                <posy>703</posy>
                <width>1902</width>
                <height>310</height>
                <texture>views/filemanager_panel1.png</texture>
				<visible>skin.hastheme(classic) + Skin.HasSetting(FanArtViewShowInfo)</visible>
            </control>
			<control type="image">
                <visible>Control.IsVisible(507) + !IsEmpty(ListItem.Label)</visible>
                <posx>-60</posx>
                <posy>728</posy>
                <width>2100</width>
                <height>280</height>
                <texture>views/filemanager_panel1.png</texture>
				<visible>!skin.hastheme(classic) + Skin.HasSetting(FanArtViewShowInfo)</visible>
            </control>
			
			<!--Footer-->
			<include condition="!skin.hassetting(nofooterbar)">Footer</include>
			
        </control>
        <!--Poster,Cover,Thumb-->
        <control type="group">
			
            <visible>Control.IsVisible(507)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include>animation_view_change</include>
        </control>
       <!--Info-->
        <control type="grouplist">
            <!--Regie, Duration... Movies, TV-Shows, Sesaons, Music-Videos-->
            <visible>Control.IsVisible(507)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <visible>Skin.HasSetting(FanArtViewShowInfo)</visible>
            <include>animation_view_change</include>
            <animation effect="slide" end="-40,0" time="0" condition="!skin.hastheme(classic)">Conditional</animation>
            <itemgap>0</itemgap>
            <onup>500</onup>
            <ondown>500</ondown>
            <onleft>100</onleft>
            <onright>noop</onright>
            <orientation>vertical</orientation>
            <posx>100</posx>
            <posy>770</posy>
            <control type="label">
                <posx>0</posx>
                <posy>0</posy>
                <width>1100</width>
                <height>40</height>
                <textcolor>white</textcolor>
                <label>[B]$INFO[ListItem.Title][/B]</label>
            </control>
            <control type="label">
                <posx>0</posx>
                <posy>0</posy>
                <width>1100</width>
                <height>40</height>
                <textcolor>mainblue</textcolor>
                <label>$INFO[ListItem.Genre] â€¢ $VAR[Details]</label>
                <visible>!IsEmpty(ListItem.Genre)</visible>
            </control>
			<control type="textbox">
                <posx>0</posx>
                <posy>0</posy>
                <width>1720</width>
                <height>125</height>
                <label>$VAR[Plots]</label>
                <textcolor>white</textcolor>
                <align>justify</align>
                <font>Light32</font>
				<visible>skin.hastheme(classic)</visible>
            </control>
			<control type="textbox">
                <posx>0</posx>
                <posy>0</posy>
                <width>1800</width>
                <height>125</height>
                <label>$VAR[Plots]</label>
                <textcolor>white</textcolor>
                <align>justify</align>
                <font>Light32</font>
				<visible>!skin.hastheme(classic)</visible>
            </control>
			<control type="label">
                <posx>0</posx>
                <posy>0</posy>
                <width>1100</width>
                <height>20</height>
                <label></label>
            </control>
        </control>
        
    </include>
</includes>