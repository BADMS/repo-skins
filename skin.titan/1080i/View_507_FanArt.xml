<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>

    <include name="View_507_FanArt">
	
	 <!--View 507-->
        <control type="group">
            <visible>Control.IsVisible(507)</visible>
            <include>animation_view_change</include>
            <include>animation_list</include>
            <!-- ID="52" -->
            <control type="panel" id="507">
                <posx>0</posx>
                <posy>0</posy>
                <width>1920</width>
                <height>1080</height>
                <onup>9000</onup>
                <ondown>9000</ondown>
                <onleft>507</onleft>
                <onright>507</onright>
                <viewtype label="FanArt">biglist</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>0</focusposition>
                <orientation>horizontal</orientation>
                <preloaditems>2</preloaditems>

                <itemlayout height="1920" width="1080">
					<control type="image">
						<!--fanart image-->
						<width>1920</width>
						<height>1080</height>
						<texture background="true">special://skin/extras/backgrounds/hover_my pictures.png</texture>
						<aspectratio align="center" aligny="center">stretch</aspectratio>
					</control>
                    <control type="image">
						<!--fanart image-->
						<width>1920</width>
						<height>1080</height>
						<texture background="true" fallback="poster_default.png">$VAR[LargeFanArtImage]</texture>
						<aspectratio align="center" aligny="center">keep</aspectratio>
					</control>
                </itemlayout>
                <focusedlayout height="1920" width="1080">
					<control type="image">
						<!--fanart image-->
						<width>1920</width>
						<height>1080</height>
						<texture background="true">special://skin/extras/backgrounds/hover_my pictures.png</texture>
						<aspectratio align="center" aligny="center">stretch</aspectratio>
					</control>
                    <control type="image">
						<!--fanart image-->
						<width>1920</width>
						<height>1080</height>
						<texture background="true" fallback="poster_default.png">$VAR[LargeFanArtImage]</texture>
						<aspectratio align="center" aligny="center">keep</aspectratio>
					</control>
                </focusedlayout>
            </control>
        
			<!--Time & Weather-->
			<include>TimeInfo</include>
			<!--NowPlaying-->
			<include condition="Skin.HasTheme(classic)">NowPlayingMusicClassic</include>
			<include condition="Skin.HasTheme(classic)">NowPlayingVideoClassic</include>
			<include condition="!Skin.HasTheme(classic)">NowPlayingModern</include>
			
			<!--Header-->
			<include>Header</include>
		
		</control>
        
	
	
        <!--Panel-->
        <control type="group">
            <visible>Control.IsVisible(507)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include>animation_view_change</include>
            <include>animation_list</include>
			
			<control type="image">
                <visible>Control.IsVisible(507) + !IsEmpty(ListItem.Label)</visible>
                <posx>8</posx>
                <posy>703</posy>
                <width>1902</width>
                <height>310</height>
                <texture>views/filemanager_panel1.png</texture>
				<visible>skin.hastheme(classic) + Skin.HasSetting(FanArtViewShowInfo)</visible>
            </control>
			<control type="image">
                <visible>Control.IsVisible(507) + !IsEmpty(ListItem.Label)</visible>
                <posx>-60</posx>
                <posy>728</posy>
                <width>2100</width>
                <height>280</height>
                <texture>views/filemanager_panel1.png</texture>
				<visible>!skin.hastheme(classic) + Skin.HasSetting(FanArtViewShowInfo)</visible>
            </control>
			
			<!--Footer-->
			<include condition="!skin.hassetting(nofooterbar)">Footer</include>
			
        </control>
        <!--Poster,Cover,Thumb-->
        <control type="group">
			
            <visible>Control.IsVisible(507)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <!--no hide at addons-->
            <animation effect="fade" start="0" end="100" tween="sine" easing="inout" time="1000" delay="400" reversible="false">WindowOpen</animation>
            <animation type="WindowClose" reversible="false">
                <effect type="slide" start="0" end="0" tween="cubic" easing="out" time="750" />
                <effect type="fade" start="100" end="0" tween="sine" easing="out" time="300" />
                <effect type="zoom" start="100" end="85" center="980,550" tween="sine" easing="out" time="750" />
            </animation>
            <include>animation_view_change</include>
        </control>
       <!--Info-->
        <control type="grouplist">
            <!--Regie, Duration... Movies, TV-Shows, Sesaons, Music-Videos-->
            <visible>Control.IsVisible(507)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <visible>Skin.HasSetting(FanArtViewShowInfo)</visible>
            <include>animation_view_change</include>
            <include>animation_list</include>
            <itemgap>0</itemgap>
            <onup>500</onup>
            <ondown>500</ondown>
            <onleft>100</onleft>
            <onright>noop</onright>
            <orientation>vertical</orientation>
            <posx>100</posx>
            <posy>770</posy>
            <control type="label">
                <posx>0</posx>
                <posy>0</posy>
                <width>1100</width>
                <height>40</height>
                <textcolor>mainblue</textcolor>
                <label>[COLOR=mainblue]$VAR[value_ground2_label][/COLOR][COLOR=white] $VAR[value_ground2_value][/COLOR]</label>
                <visible>!IsEmpty(Control.GetLabel(5302))</visible>
            </control>
            <control type="label">
                <posx>0</posx>
                <posy>0</posy>
                <width>1100</width>
                <height>40</height>
                <textcolor>mainblue</textcolor>
                <label>[COLOR=mainblue]$VAR[value_ground4_label][/COLOR][COLOR=white] $VAR[value_ground4_value][/COLOR]</label>
                <visible>!IsEmpty(Control.GetLabel(5304))</visible>
            </control>
			<control type="textbox">
                <posx>0</posx>
                <posy>0</posy>
                <width>1720</width>
                <height>125</height>
                <label>$INFO[ListItem.Plot]</label>
                <textcolor>white</textcolor>
                <align>justify</align>
                <font>Light32</font>
                <animation effect="fade" start="0" end="100" time="300" tween="sine" delay="300" easing="in">WindowOpen</animation>
                <animation effect="fade" start="100" end="0" time="300" tween="sine" delay="0" easing="in">WindowClose</animation>
                <animation effect="fade" start="0" end="100" time="300" tween="sine" delay="500" easing="in">Visible</animation>
                <animation effect="fade" start="100" end="0" time="300" tween="sine" delay="500" easing="out">Hidden</animation>
            </control>
			<control type="label">
                <posx>0</posx>
                <posy>0</posy>
                <width>1100</width>
                <height>20</height>
                <label></label>
            </control>
        </control>
        
        <control type="grouplist">
            <control type="label" id="5101">
                <include>HiddenButton</include>
                <label>$VAR[value_list_label_2]</label>
            </control>
            <control type="label" id="5201">
                <include>HiddenButton</include>
                <label>$VAR[value_ground1_label]</label>
            </control>
            <control type="label" id="5202">
                <include>HiddenButton</include>
                <label>$VAR[value_ground2_label]</label>
            </control>
            <control type="label" id="5203">
                <include>HiddenButton</include>
                <label>$VAR[value_ground3_label]</label>
            </control>
            <control type="label" id="5204">
                <include>HiddenButton</include>
                <label>$VAR[value_ground4_label]</label>
            </control>
            <control type="label" id="5301">
                <include>HiddenButton</include>
                <label>$VAR[value_ground1_value]</label>
            </control>
            <control type="label" id="5302">
                <include>HiddenButton</include>
                <label>$VAR[value_ground2_value]</label>
            </control>
            <control type="label" id="5303">
                <include>HiddenButton</include>
                <label>$VAR[value_ground3_value]</label>
            </control>
            <control type="label" id="5304">
                <include>HiddenButton</include>
                <label>$VAR[value_ground4_value]</label>
            </control>
        </control>
    </include>
</includes>