<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <include name="View_55_BannerList">
        <!--Panel-->
        <control type="group">
            <visible>Control.IsVisible(55)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include>animation_view_change</include>
            
			
			<!--Footer-->
			<include condition="!skin.hassetting(nofooterbar)">Footer</include>
        </control>
        <!--Poster,Cover,Thumb-->
        <control type="group">
            <visible>Control.IsVisible(55)</visible>
            <include>MovieDetailsLeft</include>
        </control>
        <!--View 55-->
        <control type="group">
            <visible>Control.IsVisible(55)</visible>
            <include>animation_view_change</include>
            
            <!-- ID="52" -->
            <control type="panel" id="55">
                <posx>1093</posx>
                <posy>175</posy>
                <width>800</width>
                <height>770</height>
                <onup>55</onup>
                <ondown>55</ondown>
                <onleft>9000</onleft>
                <onright>60</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="Banner list">bigwide</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>0</focusposition>
                <orientation>vertical</orientation>
                <preloaditems>4</preloaditems>
				<visible>container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)</visible>
                <!-- =======-->
                <!-- Movies -->
                <!-- ======= -->
                <itemlayout height="155" width="780">
                    <control type="group">
					<posx>10</posx>
					<posy>5</posy>
						<control type="image">
							<!--Banner-->
							<width>758</width>
							<height>140</height>
							<texture fallback="DefaultVideo.png">$VAR[BannerImage]</texture>
							<aspectratio align="center" aligny="center">stretch</aspectratio>
							<visible>!IsEmpty(ListItem.Art(banner)) | !IsEmpty(ListItem.Art(tvshow.banner))</visible>
						</control>
						<control type="image">
							<!--Banner fallback-->
							<width>758</width>
							<height>140</height>
							<texture fallback="DefaultVideo.png">$VAR[BannerImageFallback]</texture>
							<aspectratio align="center" aligny="center">scale</aspectratio>
							<visible>IsEmpty(ListItem.Art(banner)) + IsEmpty(ListItem.Art(tvshow.banner))</visible>
						</control>
						<control type="image">
							<left>16</left>
							<top>12</top>
							<width>720</width>
							<height>110</height>
							<aspectratio scalediffuse="false" align="left">keep</aspectratio>
							<texture background="true" diffuse="thumbs/banner_mask.png">$INFO[ListItem.Art(clearlogo)]</texture>
							<visible>IsEmpty(ListItem.Art(banner)) + IsEmpty(ListItem.Art(tvshow.banner))</visible>
						</control>
						<control type="label">
							<include condition="!SubString(System.BuildVersion,14,left)">BannerListLabelPosGotham</include>
							<include condition="SubString(System.BuildVersion,14,left)">BannerListLabelPosHelix</include>
							<top>8</top>
							<width>758</width>
							<height>105</height>
							<align>center</align>
							<label>$INFO[ListItem.Label]</label>
							<font>Bold40</font>
							<shadowcolor>black</shadowcolor>
							<visible>IsEmpty(ListItem.Art(banner)) + IsEmpty(ListItem.Art(tvshow.banner)) + IsEmpty(ListItem.Art(clearlogo))</visible>
						</control>
						<control type="image">
							<!--Watched Overlay-->
							<posx>663</posx>
							<posy>0</posy>
							<width>95</width>
							<height>95</height>
							<colordiffuse>ccFFFFFF</colordiffuse>
							<texture>$VAR[WatchedImageBanner]</texture>
							<visible>!Skin.HasSetting(HideWatchedOverlayBanner)</visible>
						</control>
						<control type="label">
							<!--watched label-->
							<include condition="!SubString(System.BuildVersion,14,left)">BannerListWatchedLabelPosGotham</include>
							<include condition="SubString(System.BuildVersion,14,left)">BannerListWatchedLabelPosHelix</include>
							<posy>0</posy>
							<width>50</width>
							<height>60</height>
							<font>Reg26</font>
							<align>center</align>
							<label>$VAR[WatchedLabel]</label>
							<textcolor>white</textcolor>
							<visible>!Skin.HasSetting(HideWatchedOverlayBanner)</visible>
						</control>
					</control>
                </itemlayout>
                <focusedlayout height="155" width="780">
				<control type="group">
					<animation type="focus">
						<effect type="zoom" start="100" end="103" center="auto,auto" time="150" />
					</animation>
					<animation type="unfocus">
						<effect type="zoom" start="103" end="100" center="auto,auto" time="150" />
					</animation>
					<posx>10</posx>
					<posy>5</posy>
					<control type="image">
                        <!--focus image-->
                        <width>758</width>
                        <height>140</height>
						<bordersize>-6</bordersize>
                        <texture>colors/color_white.png</texture>
                        <aspectratio align="center" aligny="center">stretch</aspectratio>
						<colordiffuse>$INFO[Skin.String(focuscolor)]</colordiffuse>
                    </control>
					<control type="image">
                        <!--Banner-->
                        <width>758</width>
                        <height>140</height>
                        <texture fallback="DefaultVideo.png">$VAR[BannerImage]</texture>
                        <aspectratio align="center" aligny="center">stretch</aspectratio>
						<visible>!IsEmpty(ListItem.Art(banner)) | !IsEmpty(ListItem.Art(tvshow.banner))</visible>
                    </control>
					<control type="image">
                        <!--Banner fallback-->
                        <width>758</width>
                        <height>140</height>
                        <texture fallback="DefaultVideo.png">$VAR[BannerImageFallback]</texture>
                        <aspectratio align="center" aligny="center">scale</aspectratio>
						<visible>IsEmpty(ListItem.Art(banner)) + IsEmpty(ListItem.Art(tvshow.banner))</visible>
                    </control>
					<control type="image">
						<left>16</left>
						<top>12</top>
						<width>720</width>
						<height>110</height>
						<aspectratio scalediffuse="false" align="left">keep</aspectratio>
						<texture background="true" diffuse="thumbs/banner_mask.png">$INFO[ListItem.Art(clearlogo)]</texture>
						<visible>IsEmpty(ListItem.Art(banner)) + IsEmpty(ListItem.Art(tvshow.banner))</visible>
					</control>
					<control type="label">
						<include condition="!SubString(System.BuildVersion,14,left)">BannerListLabelPosGotham</include>
						<include condition="SubString(System.BuildVersion,14,left)">HomeTileLabelPosHelix</include>
						<top>8</top>
						<width>758</width>
						<height>105</height>
						<align>center</align>
						<label>$INFO[ListItem.Label]</label>
						<font>Bold40</font>
						<shadowcolor>black</shadowcolor>
						<visible>IsEmpty(ListItem.Art(banner)) + IsEmpty(ListItem.Art(tvshow.banner)) + IsEmpty(ListItem.Art(clearlogo))</visible>
					</control>
                    <control type="image">
						<!--Watched Overlay-->
						<posx>663</posx>
						<posy>0</posy>
						<width>95</width>
						<height>95</height>
						<colordiffuse>ccFFFFFF</colordiffuse>
						<texture>$VAR[WatchedImageBanner]</texture>
						<visible>!Skin.HasSetting(HideWatchedOverlayBanner)</visible>
					</control>
					<control type="label">
						<!--watched label-->
						<include condition="!SubString(System.BuildVersion,14,left)">BannerListWatchedLabelPosGotham</include>
						<include condition="SubString(System.BuildVersion,14,left)">BannerListWatchedLabelPosHelix</include>
						<posy>0</posy>
						<width>50</width>
						<height>60</height>
						<font>Reg26</font>
						<align>center</align>
						<label>$VAR[WatchedLabel]</label>
						<textcolor>white</textcolor>
						<visible>!Skin.HasSetting(HideWatchedOverlayBanner)</visible>
					</control>
				</control>
                </focusedlayout>
            </control>
        </control>
       
		<!--vertical Scollbar-->
		<control type="group">
			<visible>Control.IsVisible(55)</visible>
			<visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
			<visible>IntegerGreaterThan(Container.NumItems,8)</visible>
			<control type="scrollbar" id="60">
				<visible>Control.IsVisible(55)</visible>
				<right>0</right>
				<posy>175</posy>
				<width>60</width>
				<height>770</height>
				<onup>60</onup>
				<ondown>60</ondown>
				<onleft>55</onleft>
				<texturesliderbackground border="0,14,0,14">scrollbar/ScrollBarV.png</texturesliderbackground>
				<texturesliderbar border="0,14,0,14">scrollbar/ScrollBarV_bar.png</texturesliderbar>
				<texturesliderbarfocus border="0,14,0,14" colordiffuse="mainblue">scrollbar/ScrollBarV_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>scrollbar/ScrollBarNib.png</textureslidernib>
				<textureslidernibfocus>scrollbar/ScrollBarNib.png</textureslidernibfocus>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport)">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport)]">Conditional</animation>
			</control>
			<control type="image">
				<!--Scrolling Letter Background-->
				<visible>Container.Scrolling</visible>
				<posx>1240</posx>
				<posy>460</posy>
				<width>100</width>
				<height>100</height>
				<texture>common/scrollbar-letter.png</texture>
				<animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
				<animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
			</control>
			<control type="label">
				<!--Scrolling Letter-->
				<visible>Container.Scrolling</visible>
				<posx>1240</posx>
				<posy>460</posy>
				<width>100</width>
				<height>100</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>Bold38</font>
				<textcolor>mainblue</textcolor>
				<label>$INFO[ListItem.SortLetter]</label>
				<animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
				<animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
			</control>
		</control>
    
	
		
	</include>
</includes>