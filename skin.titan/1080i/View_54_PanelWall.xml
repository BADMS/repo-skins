<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_54_PanelWall">
	
		<!-- panel no info -->
        <control type="group">
            <visible>Control.IsVisible(54)</visible>
            <include>animation_view_change</include>
            
			
			<control type="panel" id="54">
                <posx>60</posx>
                <posy>200</posy>
                <width>1840</width>
                <height>730</height>
                <onup>52</onup>
                <ondown>52</ondown>
                <onleft>9000</onleft>
                <onright>52</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="Panel Wall">wide</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>0</focusposition>
                <orientation>vertical</orientation>
                <preloaditems>2</preloaditems>
				<visible>container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)</visible>
                <!-- itemlayout movies -->
                <itemlayout height="245" width="182">
                    <control type="group">
						<posx>7</posx>
						<posy>7</posy>
						<control type="image">
							<include>SmallPanelPosterDimensions</include>
							<include>PosterThumbBG</include>
						  </control>
						  <control type="image">
							<include>SmallPanelPosterDimensions</include>
							<include>PosterThumb</include>
						  </control>
						  <include>SmallPosterViewWatchedImage</include>
					  </control>
                </itemlayout>
                <!-- focussed layout movies -->
                <focusedlayout height="245" width="182">
                    <control type="group">
						<posx>7</posx>
						<posy>7</posy>
						<!--Poster-->
						<animation type="focus">
							<effect type="zoom" start="100" end="130" center="auto" time="150" />
						</animation>
						<animation type="unfocus">
							<effect type="zoom" start="130" end="100" center="auto" time="150" />
						</animation>
					
						<control type="image">
						<include>SmallPanelPosterDimensions</include>
						<include>PosterThumbFO</include>
					  </control>
					  <control type="image">
						<include>SmallPanelPosterDimensions</include>
						<include>PosterThumb</include>
					  </control>
					  <include>SmallPosterViewWatchedImage</include>
				  </control>
                </focusedlayout>
			</control>
		</control>
		
        <control type="group">
            <visible>Control.IsVisible(54)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include condition="!skin.hassetting(nofooterbar)">Footer</include>
        </control>
    </include>
</includes>