<?xml version="1.0" encoding="UTF-8"?>
<includes>
  
  <include name="View_512_ThumbsDetails">
	
    <control type="group">
      <visible>Control.IsVisible(512)</visible>
      <include>animation_window_open_close</include>
	  <include>animation_fade_visible_hidden</include>
      <control type="panel" id="512">
        <viewtype label="Thumbs details">Thumbs details</viewtype>
        <posx>765</posx>
        <posy>179</posy>
        <width>1136</width>
        <height>800</height>
        <orientation>vertical</orientation>
        <onleft>9000</onleft>
        <onright>60</onright>
        <onup>512</onup>
        <ondown>512</ondown>
        <preloaditems>4</preloaditems>
        <pagecontrol>60</pagecontrol>
		<itemlayout height="266" width="366">
          <control type="group">
			  <control type="image">
				<include>BigPanelEpisodeDimensions</include>
				<include>EpisodeThumbBG</include>
			  </control>
			  <control type="image">
				<include>BigPanelEpisodeDimensions</include>
				<include>EpisodeThumb</include>
			  </control>
			<control type="image">
				<posx>18</posx>
				<posy>45</posy>
				<width>342</width>
				<height>195</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture diffuse="home/home_matte2.png">home/home_overlay.png</texture>
				<include>ShowTitleOverlay</include>
			</control>
			<control type="label">
				<include condition="!SubString(System.BuildVersion,14,left)">BigPanelLabelPosGotham</include>
				<include condition="SubString(System.BuildVersion,14,left)">BigPanelabelPosHelix</include>
				<posy>175</posy>
				<width>320</width>
				<height>60</height>
				<font>Reg25</font>
				<align>center</align>
				<info>ListItem.Label</info>
				<textcolor>darkgrey</textcolor>
				<include>ShowTitleOverlay</include>
			</control>
			<control type="image">
				<!--Watched Overlay-->
				<posx>315</posx>
				<posy>18</posy>
				<width>40</width>
				<height>40</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture>$VAR[WatchedImage]</texture>
				<visible>skin.hastheme(classic) + !Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
			<control type="image">
				<!--Watched Overlay-->
				<posx>301</posx>
				<posy>10</posy>
				<width>60</width>
				<height>60</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture>$VAR[WatchedImage]</texture>
				<visible>!skin.hastheme(classic) + !Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
			<control type="label">
				<!--watched label-->
				<width>50</width>
				<centerright>0</centerright>
				<posy>-4</posy>
				<align>center</align>
				<label>$VAR[WatchedLabel]</label>
				<font>Light20</font>
				<textcolor>white</textcolor>
				<visible>!Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
		</control>
        </itemlayout>
        <focusedlayout height="266" width="366">
          <control type="group">
			  <control type="image">
				<include>BigPanelEpisodeDimensions</include>
				<include>EpisodeThumbFO</include>
			  </control>
			  <control type="image">
				<include>BigPanelEpisodeDimensions</include>
				<include>EpisodeThumb</include>
			  </control>
			  <control type="image">
				<posx>18</posx>
				<posy>45</posy>
				<width>342</width>
				<height>195</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture diffuse="home/home_matte2.png">home/home_overlay.png</texture>
				<include>ShowTitleOverlay</include>
			</control>
			<control type="label">
				<include condition="!SubString(System.BuildVersion,14,left)">BigPanelLabelPosGotham</include>
				<include condition="SubString(System.BuildVersion,14,left)">BigPanelabelPosHelix</include>
				<posy>175</posy>
				<width>320</width>
				<height>60</height>
				<font>Reg25</font>
				<align>center</align>
				<info>ListItem.Label</info>
				<textcolor>$INFO[Skin.String(focuscolor)]</textcolor>
				<include>ShowTitleOverlay</include>
			</control>
			<control type="image">
				<!--Watched Overlay-->
				<posx>301</posx>
				<posy>10</posy>
				<width>60</width>
				<height>60</height>
				<texture>$VAR[WatchedImage]</texture>
				<visible>!skin.hastheme(classic) + !Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
			<control type="label">
				<!--watched label-->
				<width>50</width>
				<centerright>0</centerright>
				<posy>-4</posy>
				<align>center</align>
				<label>$VAR[WatchedLabel]</label>
				<font>Light20</font>
				<textcolor>white</textcolor>
				<visible>!Skin.HasSetting(HideWatchedOverlayBigPanel)</visible>
			</control>
		</control>
        </focusedlayout>
	  </control>
      <control type="group">
        <visible>Control.IsVisible(512) + IntegerGreaterThan(Container(512).NumItems,0)</visible>
        <include>MovieDetailsLeft</include>
      </control>
	  <control type="scrollbar" id="60">
        <animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
        <animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
        <posx>20r</posx>
        <posy>360</posy>
        <width>36</width>
        <height>700</height>
        <texturesliderbackground>-</texturesliderbackground>
        <texturesliderbar>-</texturesliderbar>
        <texturesliderbarfocus>-</texturesliderbarfocus>
        <textureslidernib border="18">OSD/ScrollbarNibNF.png</textureslidernib>
        <textureslidernibfocus border="18">OSD/ScrollbarNibFO.png</textureslidernibfocus>
        <showonepage>false</showonepage>
        <orientation>vertical</orientation>
        <onleft>59</onleft>
        <onright>9000</onright>
      </control>
    </control>
	<!-- footer bar -->
	<control type="group">
		<include>animation_window_open_close</include>
		 <include>animation_fade_visible_hidden</include>
		<visible>Control.IsVisible(512)</visible>
		<visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
		<include condition="!skin.hassetting(nofooterbar)">Footer</include>
	</control>
  </include>
</includes>
