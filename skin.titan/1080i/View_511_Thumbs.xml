<?xml version="1.0" encoding="UTF-8"?>
<includes>
  
  
  <include name="View_511_Thumbs">
    <control type="group">
      <visible>Control.IsVisible(511)</visible>
      <include>animation_window_open_close</include>
	  <include>animation_fade_visible_hidden</include>
      <control type="panel" id="511">
        <viewtype label="Thumbs">Thumbs</viewtype>
        <posx>47</posx>
        <posy>175</posy>
        <width>1836</width>
        <height>810</height>
        <orientation>vertical</orientation>
        <onleft>9000</onleft>
        <onright>60</onright>
        <onup>511</onup>
        <ondown>511</ondown>
        <preloaditems>4</preloaditems>
        <pagecontrol>60</pagecontrol>
        <itemlayout height="202" width="364">
          <control type="group">
			  <control type="image">
				<include>BigPanelEpisodeDimensions</include>
				<include>EpisodeThumbBG</include>
			  </control>
			  <control type="image">
				<include>BigPanelEpisodeDimensions</include>
				<include>EpisodeThumb</include>
			  </control>
			<control type="image">
				<posx>18</posx>
				<posy>10</posy>
				<width>325</width>
				<height>175</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture diffuse="home/home_matte2.png">home/home_overlay.png</texture>
				<include>ShowTitleOverlay</include>
			</control>
			<control type="label">
				<posx>30</posx>
				<posy>125</posy>
				<width>300</width>
				<height>60</height>
				<font>Reg25</font>
				<align>left</align>
				<info>ListItem.Label</info>
				<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
				<include>ShowTitleOverlay</include>
			</control>
			<control type="image">
				<!--Watched Overlay-->
				<right>30</right>
				<posy>17</posy>
				<width>40</width>
				<height>40</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture>$VAR[WatchedImage]</texture>
				<visible>skin.hastheme(classic) + !Skin.HasSetting(HideWatchedOverlayBigPanel) + StringCompare(ListItem.Overlay,OverlayWatched.png)</visible>
			</control>
			<control type="image">
				<!--Watched Overlay-->
				<right>21</right>
				<posy>10</posy>
				<width>60</width>
				<height>60</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture>$VAR[WatchedImage]</texture>
				<visible>!skin.hastheme(classic) + !Skin.HasSetting(HideWatchedOverlayBigPanel) + StringCompare(ListItem.Overlay,OverlayWatched.png)</visible>
			</control>
		</control>
        </itemlayout>
        <focusedlayout height="202" width="364">
          <control type="group">
			  <control type="image">
				<include>BigPanelEpisodeDimensions</include>
				<include>EpisodeThumbFO</include>
			  </control>
			  <control type="image">
				<include>BigPanelEpisodeDimensions</include>
				<include>EpisodeThumb</include>
			  </control>
			 <control type="image">
				<posx>18</posx>
				<posy>10</posy>
				<width>325</width>
				<height>175</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture diffuse="home/home_matte2.png">home/home_overlay.png</texture>
				<include>ShowTitleOverlay</include>
			</control>
			<control type="label">
				<posx>30</posx>
				<posy>125</posy>
				<width>300</width>
				<height>60</height>
				<font>Reg25</font>
				<align>left</align>
				<info>ListItem.Label</info>
				<textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
				<include>ShowTitleOverlay</include>
			</control>
			<control type="image">
				<!--Watched Overlay-->
				<right>30</right>
				<posy>17</posy>
				<width>40</width>
				<height>40</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture>$VAR[WatchedImage]</texture>
				<visible>skin.hastheme(classic) + !Skin.HasSetting(HideWatchedOverlayBigPanel) + StringCompare(ListItem.Overlay,OverlayWatched.png)</visible>
			</control>
			<control type="image">
				<!--Watched Overlay-->
				<right>21</right>
				<posy>10</posy>
				<width>60</width>
				<height>60</height>
				<colordiffuse>ccFFFFFF</colordiffuse>
				<texture>$VAR[WatchedImage]</texture>
				<visible>!skin.hastheme(classic) + !Skin.HasSetting(HideWatchedOverlayBigPanel) + StringCompare(ListItem.Overlay,OverlayWatched.png)</visible>
			</control>
		</control>
        </focusedlayout>
	  </control>
      
    </control>
	
	<!--vertical Scollbar-->
	<control type="group">
		<visible>Control.IsVisible(511)</visible>
		<visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
		<visible>IntegerGreaterThan(Container.NumItems,8)</visible>
		<control type="scrollbar" id="60">
			<visible>Control.IsVisible(511)</visible>
			<right>0</right>
			<posy>155</posy>
			<width>60</width>
			<height>800</height>
			<onup>60</onup>
			<ondown>60</ondown>
			<onleft>511</onleft>
			<texturesliderbackground border="0,14,0,14">scrollbar/ScrollBarV.png</texturesliderbackground>
			<texturesliderbar border="0,14,0,14">scrollbar/ScrollBarV_bar.png</texturesliderbar>
			<texturesliderbarfocus border="0,14,0,14" colordiffuse="mainblue">scrollbar/ScrollBarV_bar_focus.png</texturesliderbarfocus>
			<textureslidernib>scrollbar/ScrollBarNib.png</textureslidernib>
			<textureslidernibfocus>scrollbar/ScrollBarNib.png</textureslidernibfocus>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
			<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport)">Conditional</animation>
			<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport)]">Conditional</animation>
		</control>
		<control type="image">
			<!--Scrolling Letter Background-->
			<visible>Container.Scrolling + [StringCompare(Container.SortMethod,$LOCALIZE[551]) | StringCompare(Container.SortMethod,$LOCALIZE[561]) | StringCompare(Container.SortMethod,$LOCALIZE[558]) | StringCompare(Container.SortMethod,$LOCALIZE[557]) | StringCompare(Container.SortMethod,$LOCALIZE[556])]</visible>
			<posx>910</posx>
			<posy>460</posy>
			<width>100</width>
			<height>100</height>
			<texture>common/scrollbar-letter.png</texture>
			<animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
			<animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
		</control>
		<control type="label">
			<!--Scrolling Letter-->
			<visible>Container.Scrolling + [StringCompare(Container.SortMethod,$LOCALIZE[551]) | StringCompare(Container.SortMethod,$LOCALIZE[561]) | StringCompare(Container.SortMethod,$LOCALIZE[558]) | StringCompare(Container.SortMethod,$LOCALIZE[557]) | StringCompare(Container.SortMethod,$LOCALIZE[556])]</visible>
			<posx>910</posx>
			<posy>460</posy>
			<width>100</width>
			<height>100</height>
			<align>center</align>
			<aligny>center</aligny>
			<font>Bold38</font>
			<textcolor>mainblue</textcolor>
			<label>$INFO[ListItem.SortLetter]</label>
			<animation effect="fade" start="0" end="100" time="400" delay="30">Visible</animation>
			<animation effect="fade" start="100" end="0" time="400" delay="150">Hidden</animation>
		</control>
	</control>
    
	
	
	<!-- footer bar -->
	<control type="group">
		<include>animation_window_open_close</include>
		 <include>animation_fade_visible_hidden</include>
		<visible>Control.IsVisible(511)</visible>
		<visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
		<include condition="!skin.hassetting(nofooterbar)">Footer</include>
	</control>
  </include>
</includes>
