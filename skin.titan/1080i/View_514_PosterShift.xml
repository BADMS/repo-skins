<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="ShiftPosterThumbs">
        <control type="image">
			<posx>-12</posx>
			<posy>130</posy>
			<width>340</width>
			<height>490</height>
			<aspectratio scalediffuse="false">scale</aspectratio>
            <texture background="true">$VAR[PosterThumb]</texture>
			<bordertexture border="20">thumb_shadow.png</bordertexture>
			<bordersize>20</bordersize>
		</control>
        <control type="image">
            <posx>8</posx>
            <posy>601</posy>
            <width>300</width>
            <height>450</height>
            <aspectratio aligny="top" scalediffuse="false">scale</aspectratio>
            <texture background="true" flipy="true" diffuse="thumb_diffuse.png">$VAR[PosterThumb]</texture>
            <animation effect="fade" start="100" end="30" time="160">Focus</animation>
            <animation effect="fade" start="30" end="100" time="160">UnFocus</animation>
        </control>
		<control type="image">
			<!--Watched Overlay-->
			<right>7</right>
			<top>150</top>
			<width>80</width>
			<height>80</height>
			<colordiffuse>ccFFFFFF</colordiffuse>
			<texture>$VAR[WatchedImage]</texture>
			<visible>!Skin.HasSetting(HideWatchedOverlayLargePoster)</visible>
		</control>
		<control type="label">
			<!--watched label modern-->
			<centerright>5</centerright>
			<top>150</top>
			<width>60</width>
			<height>40</height>
			<align>center</align>
			<label>$VAR[WatchedLabel]</label>
			<font>Reg22</font>
			<textcolor>white</textcolor>
			<visible>!skin.hastheme(classic)</visible>
		</control>
		<control type="label">
			<!--watched label modern-->
			<centerright>15</centerright>
			<top>166</top>
			<width>60</width>
			<height>40</height>
			<align>center</align>
			<label>$VAR[WatchedLabel]</label>
			<font>Reg22</font>
			<textcolor>white</textcolor>
			<visible>skin.hastheme(classic)</visible>
		</control>
	</include>

	<include name="View_514_PosterShift">
	
		<!-- movie details -->
		<control type="group">
			<posy>1200</posy>
			<visible>Control.IsVisible(514)</visible>
			<include>MovieDetails</include>
			<animation type="Conditional" condition="StringCompare(Window(Home).Property(showinfopanel),show)">
				<effect type="slide" start="0,-0" end="0,-1200" time="800" tween="cubic" easing="inout" />
			</animation>
		</control>
        <control type="group">
			<animation type="Conditional" condition="StringCompare(Window(Home).Property(showinfopanel),show)">
                <effect type="slide" start="0,-0" end="0,140" time="800" tween="cubic" easing="inout" />
            </animation>
			<visible>Control.IsVisible(514) + !Window.IsActive(addoninformation)</visible>
            <control type="fixedlist" id="514">
                <posx>-120</posx>
                <posy>300</posy>
                <width>2100</width>
                <height>750</height>
				<onup condition="!StringCompare(Window(Home).Property(showinfopanel),show)">9000</onup>
				<onup condition="StringCompare(Window(Home).Property(showinfopanel),show)">SetProperty(showinfopanel, hide, Home)</onup>
				
				<ondown condition="!StringCompare(Window(Home).Property(showinfopanel),show)">SetProperty(showinfopanel, show, Home)</ondown>
				<ondown condition="StringCompare(Window(Home).Property(showinfopanel),show)">SetProperty(showinfopanel, hide, Home)</ondown>

                <orientation>horizontal</orientation>
                <viewtype label="Poster Shift">Poster Shift</viewtype>
                <pagecontrol>61</pagecontrol>
				<preloaditems>2</preloaditems>
				<scrolltime tween="quadratic">200</scrolltime>
                <focusposition>1</focusposition>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(musicvideos) | Container.Content(seasons) | Container.Content(genres) | Container.Content(sets)</visible>
				<itemlayout width="315" height="750">
					<include>ShiftPosterThumbs</include>
				</itemlayout>
                <focusedlayout width="315" height="750">
					<control type="group">
						<animation effect="zoom" center="auto" start="100" end="130" time="160" tween="quadratic">Focus</animation>
						<animation effect="zoom" center="auto" start="130" end="100" time="160" tween="quadratic">Unfocus</animation>
						<control type="image">
							<!--cdart image-->
							<width>290</width>
							<height>290</height>
							<posy>15</posy>
							<posx>15</posx>
							<texture background="true">$INFO[ListItem.Art(discart)]</texture>
							<aspectratio scalediffuse="false" align="center" aligny="center">keep</aspectratio>
							<animation effect="slide" start="0,200" end="0" tween="cubic" easing="inout" time="1200" delay="800">Focus</animation>
							<animation effect="fade" start="0" end="100" delay="800" time="800" pulse="false">Focus</animation>
							<animation effect="rotate" end="-360" center="auto" time="20000" loop="true" reversible="false" condition="Skin.HasSetting(AnimateDiscArt)">Conditional</animation>
							<visible>Skin.HasSetting(View58_ShowCDart) + !StringCompare(Window(Home).Property(showinfopanel),show)</visible>
						</control>
						
						<include>ShiftPosterThumbs</include>
					</control>
                </focusedlayout>
			</control>
			
		</control>
    
	<!-- footer bar -->
	<control type="group">
		<include>animation_window_open_close</include>
		<include>animation_fade_visible_hidden</include>
		<visible>Control.IsVisible(514) + !StringCompare(Window(Home).Property(showinfopanel),show)</visible>
		<visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
		<include condition="!skin.hassetting(nofooterbar)">Footer</include>
	</control>
	
	
	</include>

</includes>