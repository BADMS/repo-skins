			<animation effect="fade" reversible="false" end="40" time="0" condition="true">Conditional</animation>
		</control>
		<include>WatchedIndicatorNormal</include>
		
		<control type="image">
			<!--live tv icon-->
			<posy>10</posy>
			<left>0</left>
			<width>90</width>
			<height>95</height>
			<colordiffuse>ccFFFFFF</colordiffuse>
