<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
	<include name="View_504_BigList2">
	
		<control type="group">
			<defaultcontrol always="true">504</defaultcontrol>
			<visible>Control.IsVisible(504)</visible>
			<include>animation_view_change</include>
            <!-- Background Panel-->
			<control type="image">
				<left>50</left>
                <bottom>124</bottom>
				<width>810</width>
                <height>736</height>
				<texture border="15">diffuse/bgpanel.png</texture>
				<colordiffuse>$VAR[ViewDetailsPanelColor]</colordiffuse>
				<visible>!Skin.HasSetting(View504_HidePanel)</visible>
                <visible>IntegerGreaterThan(Container.NumItems,0)</visible>
                <animation effect="slide" end="505" time="0" condition="!Skin.HasSetting(View504_ShowInfoRight)">Conditional</animation>
			</control>
		
			<control type="panel" id="504">
				<animation effect="slide" end="505" time="0" condition="!Skin.HasSetting(View504_ShowInfoRight)">Conditional</animation>
				<bottom>124</bottom>
                <height>724</height>	
				<left>60</left>
				<width>800</width>
				<onup>504</onup>
				<ondown>504</ondown>
				<onleft>9000</onleft>
				<onright>60</onright>
				<viewtype label="31643">list</viewtype>
				<orientation>vertical</orientation>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="cubic" easing="out">600</scrolltime>
				<preloaditems>2</preloaditems>
				<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),504) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>

				<itemlayout width="800" height="103" condition="!Skin.HasSetting(View504_UseSlimList)">		
                    <control type="group">
                        <left>0</left>
                        <width>1160</width>
                        <include>BiglistLayout</include>
                    </control>
				</itemlayout>
				<focusedlayout width="800" height="103" condition="!Skin.HasSetting(View504_UseSlimList)">
                    <control type="group">
                        <left>0</left>
                        <width>1160</width>
                        <include>BigListFocusLayout</include>
                    </control>
				</focusedlayout>

				<itemlayout width="800" height="60" condition="Skin.HasSetting(View504_UseSlimList)">		
                    <control type="group">
                        <left>0</left>
                        <width>1160</width>
                        <include>BiglistSlimLayout</include>
                    </control>
				</itemlayout>
				<focusedlayout width="800" height="60" condition="Skin.HasSetting(View504_UseSlimList)">
                    <control type="group">
                        <left>0</left>
                        <width>1160</width>
                        <include>BigListSlimLayoutFocus</include>
                    </control>
				</focusedlayout>
			</control>
            
            <!-- info panel -->
            <include>MovieDetailsLeft_Small</include>
            
            
            <!--large poster-->
			<control type="group">
                <animation effect="slide" end="-505" time="0" condition="Skin.HasSetting(View504_ShowInfoRight)">Conditional</animation>
                <visible>IntegerGreaterThan(Container.NumItems,0)</visible>
                <right>50</right>
                <bottom>124</bottom>
                <height>736</height>
                <width>500</width>
                <control type="image">
                    <include>PosterThumbBG</include>
                  </control>
                  
                <control type="image">
					<!--cdart image-->
                    <width>500</width>
                    <height>500</height>
                    <top>118</top>
					<texture background="true" diffuse="diffuse/cdmask_big.png" fallback="defaultcovers/cd_big.png">$VAR[DiscArtImage]</texture>
					<aspectratio scalediffuse="false" align="center" aligny="center">scale</aspectratio>
					<animation effect="slide" start="0,0" end="-200,0" tween="cubic" easing="inout" time="1200" delay="600" condition="Skin.HasSetting(View504_ShowCDart)">Conditional</animation>
					<animation effect="fade" start="0" end="100" delay="600" time="800" pulse="false" condition="Skin.HasSetting(View504_ShowCDart)">Conditional</animation>
					<animation effect="rotate" end="-360" center="auto" time="20000" loop="true" reversible="false" condition="Skin.HasSetting(AnimateDiscArt)">Conditional</animation>
					<visible>Skin.HasSetting(View504_ShowCDart) + [!IsEmpty(ListItem.Thumb) + !Substring(ListItem.Thumb,Default,left)]</visible>
                    <visible>[!IsEmpty(ListItem.Art(poster)) | !IsEmpty(ListItem.Art(tvshow.poster))]</visible>
				</control>
                
                <control type="image">
					<!--cdart image music-->
                    <width>500</width>
                    <height>500</height>
                    <bottom>0</bottom>
					<texture background="true" diffuse="diffuse/cdmask_big.png" fallback="defaultcovers/cd_big.png">$VAR[DiscArtImage]</texture>
					<aspectratio scalediffuse="false" align="center" aligny="center">scale</aspectratio>
					<animation effect="slide" start="0,0" end="0,-200" tween="cubic" easing="inout" time="1200" delay="600" condition="Skin.HasSetting(View504_ShowCDart)">Conditional</animation>
					<animation effect="fade" start="0" end="100" delay="600" time="800" pulse="false" condition="Skin.HasSetting(View504_ShowCDart)">Conditional</animation>
					<animation effect="rotate" end="-360" center="auto" time="20000" loop="true" reversible="false" condition="Skin.HasSetting(AnimateDiscArt)">Conditional</animation>
					<visible>Skin.HasSetting(View504_ShowCDart) + [!IsEmpty(ListItem.Thumb) + !Substring(ListItem.Thumb,Default,left)]</visible>
                    <visible>[[Window.IsActive(musiclibrary) | Window.IsActive(MyMusicSongs.xml)] + !IsEmpty(ListItem.Album) + !IsEmpty(ListItem.Thumb)]</visible>
				</control>
                                
				<control type="image">
					<aspectratio align="center" aligny="center" scalediffuse="true">stretch</aspectratio>
					<texture background="true" diffuse="diffuse/poster.png" fallback="DefaultVideo.png">$VAR[PosterThumb]</texture>
					<bordersize>8</bordersize>
                    <visible>!IsEmpty(ListItem.Art(poster)) | !IsEmpty(ListItem.Art(tvshow.poster))</visible>
				</control>
                <control type="image">
					<aspectratio align="center" aligny="bottom" scalediffuse="true">keep</aspectratio>
					<texture background="true" diffuse="diffuse/poster.png" fallback="DefaultVideo.png">$VAR[PosterThumb]</texture>
					<bordersize>8</bordersize>
                    <visible>IsEmpty(ListItem.Art(poster)) + IsEmpty(ListItem.Art(tvshow.poster))</visible>
				</control>
                <control type="group">
                <right>8</right>
                <top>8</top>
                <include>WatchedIndicatorLarge</include>
                <visible>[!IsEmpty(ListItem.Art(poster)) | !IsEmpty(ListItem.Art(tvshow.poster))]</visible>
                </control>
			</control>
            
			<!--vertical Scollbar-->
			<control type="scrollbar" id="60">
				<visible>Control.IsVisible(504)</visible>
				<right>15</right>
				<bottom>124</bottom>
				<height>726</height>
				<onup>60</onup>
				<ondown>60</ondown>
				<onleft>5040</onleft>
				<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
			</control>
    

		</control>
		
	</include>

</includes>