<?xml version="1.0" encoding="UTF-8"?>
<includes>
  
  <include name="View_53_PanelDetails">
	
    <control type="group">
      <visible>Control.IsVisible(53)</visible>
      <include>animation_view_change</include>
      
	  <control type="group">
        <visible>Control.IsVisible(53) + IntegerGreaterThan(Container(53).NumItems,0)</visible>
        <include>MovieDetailsLeft</include>
      </control>
	  
	  <control type="panel" id="53">
                <posx>785</posx>
				<bottom>155</bottom>
				<width>1136</width>
				<height>730</height>
				<orientation>vertical</orientation>
                <onup>53</onup>
                <ondown>53</ondown>
                <onleft>9000</onleft>
                <onright>60</onright>
                <pagecontrol>60</pagecontrol>
                <viewtype label="31422">bigwrap</viewtype>
                <scrolltime tween="Cubic" easing="inout">500</scrolltime>
                <focusposition>6</focusposition>
                <preloaditems>2</preloaditems>
				<visible>!Skin.HasSetting(ForcedViews.Enabled) | 
				[Container.Content(movies) + Skin.String(ForcedViews.movies,None)] | 
				[Container.Content(tvshows) + Skin.String(ForcedViews.tvshows,None)] | 
				[Container.Content(seasons) + Skin.String(ForcedViews.seasons,None)] | 
				[Container.Content(episodes) + Skin.String(ForcedViews.episodes,None)] | 
				[[Container.Content(sets) | StringCompare(Container.Folderpath,videodb://movies/sets/)] + Skin.String(ForcedViews.sets,53)] | 
				[Container.Content(movies) + Skin.String(ForcedViews.movies,53) + !substring(Container.FolderPath,videodb://movies/sets/,left)] | 
				[Container.Content(movies) + Skin.String(ForcedViews.setmovies,53) + substring(Container.FolderPath,setid=)] | 
				[Container.Content(tvshows) + Skin.String(ForcedViews.tvshows,53)] | 
				[Container.Content(seasons) + Skin.String(ForcedViews.seasons,53)] | 
				[Container.Content(episodes) + Skin.String(ForcedViews.episodes,53)] | 
				[!Container.Content(movies) + !Container.Content(tvshows) + !Container.Content(seasons) + !Container.Content(episodes) + !Container.Content(sets)]
				</visible>
				<visible>!container.content(episodes)</visible>
               <!-- itemlayout movies -->
                <itemlayout height="245" width="182" condition="container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)">
                    <control type="group">
						<posx>7</posx>
						<posy>7</posy>
						<control type="image">
							<include>SmallPanelPosterDimensions</include>
							<include>PosterThumbBG</include>
						 </control>
						  <control type="image">
							<include>SmallPanelPosterDimensions</include>
							<include>PosterThumb</include>
						  </control>
						  <control type="group">
							<include>SmallPanelPosterDimensions</include>
							<include condition="Skin.HasSetting(CaseOverlays)">PosterOverlay</include>
					      </control>
						  <include>SmallPosterViewWatchedImage</include>
					  </control>
                </itemlayout>
                <!-- focussed layout movies -->
                <focusedlayout height="245" width="182" condition="container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)">
                    <control type="group">
						<posx>7</posx>
						<posy>7</posy>
						<!--Poster-->
						<control type="image">
						<include>SmallPanelPosterDimensions</include>
						<include>PosterThumbFO</include>
					  </control>
					  <control type="image">
						<include>SmallPanelPosterDimensions</include>
						<include>PosterThumb</include>
					  </control>
					  <control type="group">
							<include>SmallPanelPosterDimensions</include>
							<include condition="Skin.HasSetting(CaseOverlays)">PosterOverlay</include>
					      </control>
					  <include>SmallPosterViewWatchedImage</include>
				  </control>
				  
                </focusedlayout>
            </control>
      
		<!--vertical Scollbar-->
		<control type="scrollbar" id="60">
			<visible>Control.IsVisible(53)</visible>
			<right>15</right>
			<bottom>140</bottom>
			<height>770</height>
			<onup>60</onup>
			<ondown>60</ondown>
			<onleft>53</onleft>
			<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
			<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
		</control>
		
	  
    </control>
	
  </include>
</includes>
