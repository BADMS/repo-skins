                    <label2 fallback="161">$INFO[ListItem.Rating]</label2>
                    <enable>false</enable>
					<disabledcolor>$INFO[Skin.String(GeneralTextColor)]</disabledcolor>
                </control>
            </control>
            <control type="image">
                <posx>680</posx>
                <posy>486</posy>
