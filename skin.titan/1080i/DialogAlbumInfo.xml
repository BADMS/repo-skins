                <align>left</align>
				<height>100</height>
				<label>24017</label>
                <visible>Container.Content(Artists)</visible>
            </control>
			<!-- title -->
			<control type="label">
				<posx>700</posx>
				<posy>150</posy>
				<width>800</width>
				<font>Reg36</font>
				<align>left</align>
				
				<label>$INFO[ListItem.Album]</label>
