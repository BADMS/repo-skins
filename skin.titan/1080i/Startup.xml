<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
<!--Splash Screen-->
	<onload>XBMC.RunScript(script.titanskin.helpers,SETSKINVERSION)</onload>
	<include>defaultskinsettings</include>
	<onload condition="!Skin.HasSetting(DisableSplashScreen)">AlarmClock(loadhome,ReplaceWindow(Home),00:6,silent)</onload>
	<onload condition="Skin.HasSetting(DisableSplashScreen)">ReplaceWindow(Home)</onload>
	<controls>
	<!-- splash screen -->
	<control type="group" id="6666">
	<visible>!Skin.HasSetting(DisableSplashScreen)</visible>
	<include>DimensionsFullscreen</include>
		<!-- splashscreen background -->
        <control type="image">
            <include>DimensionsFullscreen</include>
			<include>backgroundfade</include>
            <texture background="true">$VAR[splashScreenImage]</texture>
            <fadetime>800</fadetime>
        </control>
		<control type="label">
            <posx>200</posx>
            <bottom>35</bottom>
            <width>520</width>
            <align>left</align>
            <font>Reg41</font>
            <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
            <label>20186</label>
        </control>
		<control type="multiimage">
			<animation effect="fade" start="0" end="100" time="0">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="500" delay="500">WindowClose</animation>
			<posx>80</posx>
			<bottom>15</bottom>
			<width>100</width>
			<height>100</height>
			<aspectratio>keep</aspectratio>
			<imagepath>special://skin/extras/busy_spinners/default</imagepath>
			<timeperimage>100</timeperimage>
			<colordiffuse>mainblue</colordiffuse>
			<fadetime>0</fadetime>
			<visible>!Skin.String(SpinnerTexturePath,None)</visible>
		</control>
		<control type="label">
            <posx>1840</posx>
            <bottom>35</bottom>
            <width>520</width>
            <align>right</align>
            <font>Reg41</font>
            <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
            <label>$INFO[Window(Home).Property(skinVersion)]</label>
        </control>
	</control>
	</controls>
</window>