<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol>-</defaultcontrol>
	<zorder>2</zorder>
    <!--Normal "1" over DialogVideoInfo.xml and DialogSelect.xml-->
    <controls>
        <!-- Default notification -->
        <control type="group">
            
			<animation type="WindowOpen" reversible="false">
				<effect type="slide" start="0,-400" end="0,0" tween="cubic" easing="out" time="500" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="slide" start="0,0" end="0,-400" tween="cubic" easing="out" time="500" />
			</animation>
			
            <visible>!Window.IsVisible(startup) + !Window.IsActive(DialogExtendedProgressBar.xml)</visible>
			
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>100%</width>
				<height>145</height>
				<texture border="5">diffuse/panel.png</texture>
				<animation effect="fade" end="80" time="0" reversible="false" condition="StringCompare(Skin.String(GeneralPanelsOpacity),80)">Conditional</animation>
					<animation effect="fade" end="60" time="0" reversible="false" condition="StringCompare(Skin.String(GeneralPanelsOpacity),60)">Conditional</animation>
					<animation effect="fade" end="40" time="0" reversible="false" condition="StringCompare(Skin.String(GeneralPanelsOpacity),40)">Conditional</animation>
					<animation effect="fade" end="20" time="0" reversible="false" condition="StringCompare(Skin.String(GeneralPanelsOpacity),20)">Conditional</animation>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
				<visible>!skin.hastheme(classic)</visible>
				<visible>![Skin.String(GadgetRows, simplever) + window.isactive(home)]</visible>
			</control>
            <control type="group">
				<posx>60</posx>
				<posy>40</posy>
				<animation effect="slide" time="0" start="0" end="410" reversible="false" condition="Skin.String(GadgetRows, simplever) + window.isactive(home)">Conditional</animation>
                <control type="image" id="400">
                    <description>Icon</description>
                    <posx>0</posx>
                    <posy>10</posy>
                    <width>64</width>
                    <height>64</height>
                    <aspectratio>keep</aspectratio>
                    <texture>DefaultIconInfo.png</texture>
                </control>
				<control type="image" id="403">
                    <description>Icon</description>
                    <posx>0</posx>
                    <posy>10</posy>
                    <width>64</width>
                    <height>64</height>
                    <aspectratio>keep</aspectratio>
                    <texture>DefaultIconInfo.png</texture>
					<visible>false</visible>
                </control>
				<control type="image" id="404">
                    <description>Icon</description>
                    <posx>0</posx>
                    <posy>10</posy>
                    <width>64</width>
                    <height>64</height>
                    <aspectratio>keep</aspectratio>
                    <texture>DefaultIconWarning.png</texture>
					<visible>false</visible>
                </control>
				<control type="image" id="405">
                    <description>Icon</description>
                    <posx>0</posx>
                    <posy>10</posy>
                    <width>64</width>
                    <height>64</height>
                    <aspectratio>keep</aspectratio>
                    <texture>DefaultIconError.png</texture>
					<visible>false</visible>
                </control>
				
				
				
                <control type="label" id="401">
                    <description>Line 1</description>
                    <posx>90</posx>
                    <posy>0</posy>
                    <width>1500</width>
                    <height>50</height>
                    <font>Bold38</font>
                    <shadowcolor>$INFO[Skin.String(ViewDetailsFocusShadowColor)]</shadowcolor>
					<textcolor>$INFO[Skin.String(ViewDetailsFocusColor)]</textcolor>
                    <scroll>false</scroll>
                </control>
                <control type="label" id="402">
                    <description>Line 2</description>
                    <posx>90</posx>
                    <posy>40</posy>
                    <width>1500</width>
                    <height>50</height>
                    <font>Reg30</font>
					<shadowcolor>black</shadowcolor>
                    <scroll>false</scroll>
                </control>
            </control>
			<!-- clock -->
			<control type="group">
			<visible>!skin.hastheme(classic)</visible>
			<visible>![Skin.String(GadgetRows, simplever) + window.isactive(home)]</visible>
            <animation type="Conditional" condition="Window.IsActive(DialogMuteBug.xml) | Window.IsActive(DialogVolumeBar.xml)">
                <effect type="slide" start="0,0" end="-120,0" time="400" tween="cubic" easing="inout" delay="0" />
            </animation>
            <control type="grouplist">
                <posx>1260</posx>
                <posy>10</posy>
                <width>600</width>
                <height>100</height>
                <align>right</align>
                <itemgap>4</itemgap>
                <orientation>horizontal</orientation>
                <usecontrolcoords>true</usecontrolcoords>
                <control type="label">
                    <!--Time-->
                    <width min="0" max="300">auto</width>
                    <height>100</height>
                    <info>System.Time(hh:mm)</info>
                    <font>Bold55</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
                <control type="label">
                    <!--AM-->
                    <visible>substring(system.time,AM,right)</visible>
                    <width min="0" max="150">auto</width>
                    <height>100</height>
                    <label>378</label>
                    <font>Bold55</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
                <control type="label">
                    <!--PM-->
                    <visible>substring(system.time,PM,right)</visible>
                    <width min="0" max="150">auto</width>
                    <height>100</height>
                    <label>379</label>
                    <font>Bold55</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
            </control>
            <control type="grouplist">
                <!--Date Grouplist Line 2-->
                <posx>1260</posx>
                <posy>85</posy>
                <width>600</width>
                <height>50</height>
                <align>right</align>
                <itemgap>4</itemgap>
                <orientation>horizontal</orientation>
                <usecontrolcoords>true</usecontrolcoords>
                <visible>!ControlGroup(400).HasFocus()</visible>
                <control type="label">
                    <!--Day-->
                    <width min="0" max="400">auto</width>
                    <height>50</height>
                    <info>System.Date(DDD)</info>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
                <control type="label">
                    <width min="0" max="400">auto</width>
                    <height>50</height>
                    <label>, </label>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
                <control type="label">
                    <!--Date-->
                    <width min="0" max="400">auto</width>
                    <height>50</height>
                    <info>System.Date(d)</info>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
                <control type="label">
                    <visible>SubString(System.Language,German)</visible>
                    <width min="0" max="400">auto</width>
                    <height>50</height>
                    <label>. </label>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
                <control type="label">
                    <label></label>
                    <visible>!SubString(System.Language,German)</visible>
                    <width min="0" max="400">auto</width>
                    <height>50</height>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
                <control type="label">
                    <!--Month-->
                    <width min="0" max="400">auto</width>
                    <height>50</height>
                    <info>System.Date(MMM)</info>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
            </control>
        </control>
    
			
        </control>
		
	</controls>
</window>