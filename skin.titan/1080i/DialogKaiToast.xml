<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window>
    <defaultcontrol>-</defaultcontrol>
	<zorder>2</zorder>
    <!--Normal "1" over DialogVideoInfo.xml and DialogSelect.xml-->
    <controls>
        <control type="image" id="400">
            <description>Icon</description>
            <posx>-20</posx>
            <posy>-20</posy>
            <width>1</width>
            <height>1</height>
            <texture>-</texture>
        </control>
        <control type="label" id="401">
            <description>Line 1</description>
            <font>-</font>
        </control>
        <control type="label" id="402">
            <description>Line 2</description>
            <font>-</font>
        </control>
        <!-- Default notification -->
        <control type="group">
            
			<animation type="WindowOpen" reversible="false">
				<effect type="slide" start="0,-400" end="0,0" tween="cubic" easing="out" time="750" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="slide" start="0,0" end="0,-400" tween="cubic" easing="out" time="750" />
			</animation>
			
            <visible>!Window.IsVisible(startup) + !Window.IsActive(DialogExtendedProgressBar.xml) + !Control.IsVisible(77777)</visible>
			<visible>IsEmpty(Window(Home).Property(activewidget))</visible>
            <control type="group">
				<posx>60</posx>
				<posy>40</posy>
				<control type="image">
					<posx>-120</posx>
					<posy>-60</posy>
					<width>2040</width>
					<height>180</height>
					<texture background="true">views/filemanager_panel1.png</texture>
					<visible>!skin.hastheme(classic)</visible>
				</control>
				<control type="group">
					<posx>-60</posx>
					<posy>-40</posy>
					<visible>!skin.hastheme(classic)</visible>
					<include>TimeInfo</include>
				</control>
                <control type="image">
                    <description>Icon</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>64</width>
                    <height>64</height>
                    <aspectratio>scale</aspectratio>
                    <texture>dialogs/kaitoast/info.png</texture>
                </control>
                <control type="label">
                    <description>Line 1</description>
                    <posx>90</posx>
                    <posy>0</posy>
                    <width>1500</width>
                    <height>50</height>
                    <label>$INFO[Control.GetLabel(401)]</label>
                    <font>Bold38</font>
                    <textcolor>ccmainblue</textcolor>
                    <scroll>false</scroll>
                </control>
                <control type="label">
                    <description>Line 2</description>
                    <posx>90</posx>
                    <posy>40</posy>
                    <width>1500</width>
                    <height>50</height>
                    <label>$INFO[Control.GetLabel(402)]</label>
                    <font>Reg30</font>
                    <textcolor>eewhite</textcolor>
                    <scroll>false</scroll>
                </control>
            </control>
			<!-- clock -->
			<control type="group">
            <include>animation_fade_visible_hidden</include>
            <animation type="Conditional" condition="Window.IsActive(DialogMuteBug.xml)">
                <effect type="slide" start="0,0" end="-100,0" time="400" tween="cubic" easing="inout" delay="0" />
            </animation>
            <control type="grouplist">
                <posx>1260</posx>
                <posy>10</posy>
                <width>600</width>
                <height>100</height>
                <align>right</align>
                <itemgap>4</itemgap>
                <orientation>horizontal</orientation>
                <usecontrolcoords>true</usecontrolcoords>
                <control type="label">
                    <!--Time-->
                    <width min="0" max="300">auto</width>
                    <height>100</height>
                    <info>System.Time(hh:mm)</info>
                    <font>Bold55</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
                <control type="label">
                    <!--AM-->
                    <visible>substring(system.time,AM,right)</visible>
                    <width min="0" max="150">auto</width>
                    <height>100</height>
                    <label>378</label>
                    <font>Bold55</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
                <control type="label">
                    <!--PM-->
                    <visible>substring(system.time,PM,right)</visible>
                    <width min="0" max="150">auto</width>
                    <height>100</height>
                    <label>379</label>
                    <font>Bold55</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
            </control>
            <control type="grouplist">
                <!--Date Grouplist Line 2-->
                <!--animation effect="slide" start="0" end="-130" time="200" condition="Weather.IsFetched" >Conditional</animation-->
                <posx>1260</posx>
                <posy>85</posy>
                <width>600</width>
                <height>50</height>
                <align>right</align>
                <itemgap>4</itemgap>
                <orientation>horizontal</orientation>
                <usecontrolcoords>true</usecontrolcoords>
                <visible>!ControlGroup(400).HasFocus()</visible>
                <control type="label">
                    <!--Day-->
                    <width min="0" max="400">auto</width>
                    <height>50</height>
                    <info>System.Date(DDD)</info>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
                <control type="label">
                    <width min="0" max="400">auto</width>
                    <height>50</height>
                    <label>, </label>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
                <control type="label">
                    <!--Date-->
                    <width min="0" max="400">auto</width>
                    <height>50</height>
                    <info>System.Date(d)</info>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
                <control type="label">
                    <visible>SubString(System.Language,German)</visible>
                    <width min="0" max="400">auto</width>
                    <height>50</height>
                    <label>. </label>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
                <control type="label">
                    <label></label>
                    <visible>!SubString(System.Language,German)</visible>
                    <width min="0" max="400">auto</width>
                    <height>50</height>
                    <font>Reg</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
                <control type="label">
                    <!--Month-->
                    <width min="0" max="400">auto</width>
                    <height>50</height>
                    <info>System.Date(MMM)</info>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
					<shadowcolor>$INFO[Skin.String(HeaderTextShadowColor)]</shadowcolor>
                </control>
            </control>
        </control>
    
			
        </control>
		
	</controls>
</window>