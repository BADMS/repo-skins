    <include name="View_516_SlimList">
	
		<control type="group">
			<include>animation_view_change</include>
			<defaultcontrol always="true">516</defaultcontrol>
			<visible>Control.IsVisible(516) + IntegerGreaterThan(Container.NumItems,0)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
			<height>795</height>
			<bottom>125</bottom>
			<!-- Background Panel-->
			<control type="image">
				<posx>50</posx>
				<width>1820</width>
				<texture border="15">diffuse/bgpanel.png</texture>
				<animation effect="fade" reversible="false" end="80" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),80)">Conditional</animation>
				<animation effect="fade" reversible="false" end="60" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),60)">Conditional</animation>
				<animation effect="fade" reversible="false" end="40" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),40)">Conditional</animation>
				<animation effect="fade" reversible="false" end="20" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),20)">Conditional</animation>
				<animation effect="fade" reversible="false" end="0" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),0)">Conditional</animation>
				<colordiffuse>$INFO[Skin.String(ViewDetailsPanelColor)]</colordiffuse>
				<visible>!Skin.HasSetting(View516_HidePanel)</visible>
			</control>
			
			<!-- Background Panel-->
			<control type="image">
				<posx>50</posx>
				<width>615</width>
				<texture border="5">diffuse/bgpanel.png</texture>
				<animation effect="fade" reversible="false" end="80" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),80)">Conditional</animation>
				<animation effect="fade" reversible="false" end="60" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),60)">Conditional</animation>
				<animation effect="fade" reversible="false" end="40" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),40)">Conditional</animation>
				<animation effect="fade" reversible="false" end="20" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),20)">Conditional</animation>
				<animation effect="fade" reversible="false" end="0" time="0" condition="StringCompare(Skin.String(ViewDetailsPanelOpacity),0)">Conditional</animation>
				<colordiffuse>$INFO[Skin.String(ViewDetailsPanelColor)]</colordiffuse>
				<visible>!Skin.HasSetting(View516_HidePanel)</visible>
				<visible>Skin.HasSetting(SlimListViewShowInfo)</visible>
			</control>

		
			<control type="panel" id="516">
					
				<posx>680</posx>
				<posy>5</posy>
				<width>1260</width>
				<height>780</height>
				<onup>516</onup>
				<ondown>516</ondown>
				<onleft>9000</onleft>
				<onright>60</onright>
				<viewtype label="31450">list</viewtype>
				<orientation>vertical</orientation>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="cubic" easing="out">600</scrolltime>
				<preloaditems>2</preloaditems>
				<visible>!Skin.HasSetting(ForcedViews.Enabled) | 
				[Container.Content(movies) + Skin.String(ForcedViews.movies,None)] | 
				[Container.Content(tvshows) + Skin.String(ForcedViews.tvshows,None)] | 
				[Container.Content(seasons) + Skin.String(ForcedViews.seasons,None)] | 
				[Container.Content(episodes) + Skin.String(ForcedViews.episodes,None)] | 
				[[Container.Content(sets) | StringCompare(Container.Folderpath,videodb://movies/sets/)] + Skin.String(ForcedViews.sets,516)] | 
				[Container.Content(movies) + Skin.String(ForcedViews.movies,516) + !substring(Container.FolderPath,videodb://movies/sets/,left)] | 
				[Container.Content(movies) + Skin.String(ForcedViews.setmovies,516) + substring(Container.FolderPath,setid=)] | 
				[Container.Content(tvshows) + Skin.String(ForcedViews.tvshows,516)] | 
				[Container.Content(seasons) + Skin.String(ForcedViews.seasons,516)] | 
				[Container.Content(episodes) + Skin.String(ForcedViews.episodes,516)] | 
				[!Container.Content(movies) + !Container.Content(tvshows) + !Container.Content(seasons) + !Container.Content(episodes) + !Container.Content(sets)]
				</visible>
				<animation type="Conditional" condition="Container.Scrolling" reversible="true">
					<effect type="fade" start="100" end="10" delay="2000" time="400" />
				</animation>

				<itemlayout width="1180" height="65">		
					<include>SlimListLayout</include>
				</itemlayout>
				<focusedlayout width="1180" height="65">
					<include>SlimListLayoutFocus</include>
				</focusedlayout>

			</control>
			
		
			<!--large poster-->
			<control type="group">
				<visible>!Skin.HasSetting(SlimListViewShowInfo)</visible>
				<control type="image">
					<left>37</left>
					<posy>-5</posy>
					<width>560</width>
					<height>825</height>
					<aspectratio align="left" aligny="top" scalediffuse="true">keep</aspectratio>
					<texture background="true" diffuse="diffuse/poster.png" fallback="DefaultVideo.png">$VAR[PosterThumb]</texture>
					<bordertexture border="20" colordiffuse="black">diffuse/poster_shadow.png</bordertexture>
					<bordersize>20</bordersize>
				</control>
			</control>

			
			<!--vertical Scollbar-->
			<control type="scrollbar" id="60">
				<visible>Control.IsVisible(516)</visible>
				<right>15</right>
				<posy>20</posy>
				<height>785</height>
				<onup>60</onup>
				<ondown>60</ondown>
				<onleft>516</onleft>
				<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Skin.HasSetting(EnableTouchSupport) | Container.Scrolling | Skin.HasSetting(alwaysShowScrollbars)]">Conditional</animation>
			</control>

		</control>
		
		<control type="group">
				<visible>Skin.HasSetting(SlimListViewShowInfo)</visible>
				<visible>Control.IsVisible(516) + IntegerGreaterThan(Container.NumItems,0)</visible>
				<include>MovieDetailsLeft</include>
			</control>
	</include>

</includes>