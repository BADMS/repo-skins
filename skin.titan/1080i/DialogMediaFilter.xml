<window>
	<defaultcontrol always="true">5</defaultcontrol>
	<controls>
	    <control type="group">
	        <include>animation_window_open_close</include>
            <control type="group">
                <visible>!Window.IsVisible(virtualkeyboard) + !Window.IsVisible(selectdialog)</visible>
				<!--Dialog Overlay-->
				<include condition="!skin.hastheme(classic)">GlobalBackground</include>
				<include condition="!skin.hastheme(classic)">DialogOverlay</include>
				<include condition="skin.hastheme(classic)">DialogOverlayExtra</include>
				
				<!--Header and footer-->
				<include>Header</include>
				<include>TimeInfo</include>
				<include condition="!skin.hassetting(nofooterbar)">Footer</include>
				
				<control type="image">
					<posx>445</posx>
					<posy>200</posy>
					<width>1030</width>
					<height>680</height>
					<texture border="39">dialogs/default/bg.png</texture>
				</control>
                <control type="image">
                	<posx>479</posx>
                	<posy>301</posy>
                	<width>962</width>
                	<height>481</height>
                	<texture border="5">dialogs/default/inner.png</texture>
                </control>
                
                <control type="label" id="2">
                    <description>Heading</description>
                    <posx>473</posx>
                    <posy>219</posy>
                    <width>974</width>
                    <include>DialogHeader</include>
                    <align>center</align>
                </control>
                
                <control type="grouplist" id="5">
                    <description>control area</description>
                    <posx>479</posx>
                    <posy>301</posy>
                    <width>962</width>
                    <height>480</height>
                    <itemgap>0</itemgap>
                    <pagecontrol>30</pagecontrol>
                    <onleft>8004</onleft>
                    <onright>30</onright>
                    <onup>8004</onup>
                    <ondown>8004</ondown>
                    <scrolltime tween="cubic" easing="out">500</scrolltime>
                </control>
                
                <control type="button" id="7">
                    <description>default</description>
					<include>DialogButtonAlt</include>
                    <height>60</height>
                    <textoffsetx>20</textoffsetx>
                    <align>left</align>
                </control>
                
                <control type="radiobutton" id="8">
                    <description>radioButton</description>
					<include>DialogButtonAlt</include>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <radioposx>852</radioposx>
                </control>
                
                <control type="spincontrolex" id="9">
                    <description>Directory Content</description>
                    <textoffsetx>20</textoffsetx>
                    <spinposx>16</spinposx>
					<align>left</align>
                </control>
                
                <control type="sliderex" id="13">
                    <description>Default Slider</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <height>60</height>
                    <textoffsetx>20</textoffsetx>
                    <pulseonselect>false</pulseonselect>
                </control>
                
                <control type="edit" id="12">
                    <description>default</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <height>60</height>
                    <textoffsetx>20</textoffsetx>
					<textoffsety>13</textoffsety>
                    <align>left</align>
                    <include>DialogButton</include>
					<texturefocus>common/button-fo.png</texturefocus>
					<texturenofocus>common/button-nf.png</texturenofocus>
                </control>
                
                <control type="image" id="31">
                    <animation effect="fade" start="0" end="100" time="0">Visible</animation>
                    <animation effect="fade" start="100" end="0" time="0">Hidden</animation>
                    <visible>Control.HasFocus(30)</visible>
                </control>
                <control type="scrollbar" id="30">
                    <posx>1427</posx>
                    <posy>342</posy>
                    <width>60</width>
                    <height>467</height>
                    <onleft>2</onleft>
                    <onright>8004</onright>
                    <showonepage>false</showonepage>
                    <orientation>vertical</orientation>
                    <animation effect="fade" start="75" end="0" time="300" tween="sine" easing="inout" condition="!Control.IsVisible(31)">Conditional</animation>
                </control>
                
                <control type="group" id="8004">
                    <posx>466</posx>
                    <posy>790</posy>
                    <control type="button" id="28">
						<posx>20</posx>
                        <description>Select</description>
                        <label>$LOCALIZE[186]</label>
                        <include>DialogButtonAlt</include>
						<width>300</width>
                        <onleft>27</onleft>
                        <onright>27 </onright>
                        <onup>5</onup>
                        <ondown>5</ondown>
                        <animation effect="fade" start="100" end="75" time="0" condition="!Control.IsEnabled(28)">Conditional</animation>
                    </control>
                    <control type="button" id="27">
                        <posx>670</posx>
						<width>300</width>
                        <description>Cancel</description>
                        <label>$LOCALIZE[192]</label>
                        <include>DialogButtonAlt</include>
                        <onleft>28</onleft>
                        <onright>28</onright>
                        <onup>5</onup>
                        <ondown>5</ondown>
                        <animation effect="fade" start="100" end="75" time="0" condition="!Control.IsEnabled(27)">Conditional</animation>
                    </control>
                </control>
            </control>
        </control>
	</controls>
</window>
