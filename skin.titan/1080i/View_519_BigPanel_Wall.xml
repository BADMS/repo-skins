<?xml version="1.0" encoding="UTF-8"?>
<includes>
  
  
  <include name="View_519_BigPanel_Wall">
    <control type="group">
      <visible>Control.IsVisible(519)</visible>
      <include>animation_view_change</include>
      <include>GlobalBackground</include>
	  <control type="panel" id="519">
        <viewtype label="31666">icons</viewtype>
        <posx>3</posx>
        <bottom>9</bottom>
        <height>1056</height>
        <width>1920</width>
        <orientation>vertical</orientation>
        <onleft>9000</onleft>
        <onright>60</onright>
        <onup>519</onup>
        <ondown>519</ondown>
        <preloaditems>4</preloaditems>
        <pagecontrol>60</pagecontrol>
		<visible>StringCompare(Window(Home).Property(SkinHelper.ForcedView),519) | IsEmpty(Window(Home).Property(SkinHelper.ForcedView))</visible>
        <visible>!Container.Content(episodes)</visible>
        <itemlayout height="352" width="240">
          <control type="group">
            <width>233</width>
            <height>342</height>
            <include>PosterPanelLayout</include>
          </control>
        </itemlayout>
        <focusedlayout height="252" width="240">
          <control type="group">
            <animation effect="zoom" center="auto" start="100" end="105" time="160" tween="quadratic">Focus</animation>
            <animation effect="zoom" center="auto" start="105" end="100" time="160" tween="quadratic">Unfocus</animation>
            <width>233</width>
            <height>342</height>
            <include>PosterPanelLayoutFocus</include>
          </control>
        </focusedlayout>
        </control>
      
		<!--vertical Scollbar-->
		<control type="scrollbar" id="60">
			<visible>Control.IsVisible(519)</visible>
			<right>15</right>
			<bottom>9</bottom>
            <height>1056</height>
			<onup>60</onup>
			<ondown>60</ondown>
			<onleft>519</onleft>
			<animation effect="fade" start="0" end="100" time="400" condition="Control.HasFocus(60) | Container.Scrolling">Conditional</animation>
			<animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | Container.Scrolling]">Conditional</animation>
		</control>
		
    </control>
	
	
	
  </include>

  </includes>
