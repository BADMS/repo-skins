<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window type="dialog" id="142">
    <defaultcontrol always="true">636</defaultcontrol>
    <controls>
		
		<!-- fake button for player controls while info is open -->
		<control type="button" id="636">
			<left>0</left>
			<top>0</top>
			<onup condition="player.hasvideo + !VideoPlayer.Content(livetv)">Action(BigStepForward)</onup>
			<ondown condition="player.hasvideo + !VideoPlayer.Content(livetv)">Action(BigStepBack)</ondown>
            <onup condition="player.hasvideo + VideoPlayer.Content(livetv)">Action(ChannelUp)</onup>
			<ondown condition="player.hasvideo + VideoPlayer.Content(livetv)">Action(ChannelDown)</ondown>
            <onup condition="!player.hasvideo">PlayerControl(Next)</onup>
			<ondown condition="!player.hasvideo">PlayerControl(Previous)</ondown>
			<onright>Action(StepForward)</onright>
			<onleft>Action(StepBack)</onleft>
			<oninfo>Back</oninfo>
			<onclick condition="player.hasvideo">ActivateWindow(videoosd)</onclick>
            <onclick condition="!player.hasvideo">ActivateWindow(musicosd)</onclick>
			<visible allowhiddenfocus="true">false</visible>
		</control>
        
        <!--OSD Panel-->
        <control type="group">
			<animation effect="slide" start="0,400" end="0,0" time="200" condition="!Window.IsActive(seekbar)">WindowOpen</animation>
            <animation effect="slide" start="0,0" end="0,400" time="200" condition="!Window.IsActive(seekbar)">WindowClose</animation>
			<animation effect="slide" start="0,400" end="0,0" time="200" condition="!Window.IsActive(seekbar)">VisibleChange</animation>
            <include condition="Skin.HasTheme(classic)">OSDPanelClassic</include>
			<include condition="!Skin.HasTheme(classic) + !Skin.HasSetting(UseSlimOSDPanel)">OSDPanelModern</include>
			<include condition="!Skin.HasTheme(classic) + Skin.HasSetting(UseSlimOSDPanel)">OSDPanelModernSlim</include>
            <!--Weather on Video Info and OSD-->
            <include condition="Skin.HasSetting(ShowWeatherVideoInfoOSD) + !Skin.HasSetting(UseSlimOSDPanel) + !Skin.HasTheme(classic)">WeatherInfoOSD</include>
			<include condition="Skin.HasSetting(ShowWeatherVideoInfoOSD) + Skin.HasSetting(UseSlimOSDPanel) + !Skin.HasTheme(classic)">WeatherInfoOSDSlim</include>
        </control>
       <!--Info Panel-->
        <control type="group">
			<animation effect="slide" start="0,-400" end="0,0" time="200" condition="!Window.IsActive(seekbar)">WindowOpen</animation>
			<animation effect="slide" start="0,-400" end="0,0" time="200" condition="!Window.IsActive(seekbar)">VisibleChange</animation>
			<include>OSDInfoPanel</include>
        </control>
        
        <!-- large forward and rewind labels -->
		<control type="label">
			<posx>0</posx>
			<posy>0</posy>
			<height>100%</height>
			<width>100%</width>
			<align>center</align>
			<aligny>center</aligny>
			<font>Bold120</font>
			<textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
			<label>$VAR[PlayerActionLabelLarge]</label>
			<animation effect="fade" start="0" end="100" tween="cubic" easing="out" delay="300" time="250" reversible="false" condition="!Window.IsActive(seekbar)">WindowOpen</animation>
			<animation effect="slide" start="100" end="0" tween="cubic" easing="out" delay="2000" time="250" reversible="false" condition="!Window.IsActive(seekbar)">WindowClose</animation>
			<visible>Skin.HasSetting(OSDLargeSeekingLabel) + !Window.IsActive(DialogSubtitles.xml)</visible>
		</control>
    </controls>
</window>