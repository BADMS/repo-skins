<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<includes>
    <!--Default-->
    <include name="View_51_Showcase">
	
		<!-- movie details -->
        <control type="group">
            <visible>Control.IsVisible(51) + Skin.HasSetting(ShowCaseViewShowInfo)</visible>
            <include>MovieDetails</include>
        </control>
		<!-- footer -->
        <control type="group">
            <visible>Control.IsVisible(51)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml)</visible>
            <include condition="!skin.hassetting(nofooterbar)">Footer</include>
        </control>
        <control type="group">
            <!-- Warplist ID="51"-->
            <visible>Control.IsVisible(51)</visible>
            <visible>!Window.IsActive(DialogVideoInfo.xml) + IntegerGreaterThan(Container.NumItems,1)</visible>
            
            <control type="wraplist" id="51">
                <!--Wraplist ID 51-->
                <posx>-52</posx>
                <width>1960</width>
                <height>800</height>
                <onleft>51</onleft>
                <onright>51</onright>
                <onup>9000</onup>
                <ondown>noop</ondown>
                <viewtype label="Showcase">bigwrap</viewtype>
                <pagecontrol>60</pagecontrol>
                <orientation>horizontal</orientation>
				<visible>container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)</visible>
                <scrolltime tween="cubic" easing="inout">450</scrolltime>
                <focusposition>3</focusposition>
                <itemlayout width="270" height="800" condition="container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)">
                </itemlayout>
                <focusedlayout width="270" height="800" condition="container.content(MusicVideos) | Container.Content(tvshows) | Container.Content(Movies) | container.content(seasons)">
                </focusedlayout>
            </control>
            <include>ShowcaseMovies</include>
            <!--Showcase-->
        </control>

    </include>
    <!--Includes-->
</includes>