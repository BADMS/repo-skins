<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="145">
    <defaultcontrol>11</defaultcontrol>
    <controls>
        <control type="group">
            <include>animation_window_open_close</include>
            <control type="group">
                <posx>0</posx>
                <posy>-70</posy>
                <control type="image">
                    <posx>-100</posx>
                    <posy>0</posy>
                    <width>2200</width>
                    <height>148</height>
                    <texture border="5">diffuse/panel.png</texture>
					<animation effect="fade" end="90" time="0" condition="true">Conditional</animation>
					<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
                    <aspectratio>stretch</aspectratio>
                </control>
				
				<!-- close dialog button -->
				<control type="button">
					<right>40</right>
					<posy>80</posy>
					<width>50</width>
					<height>50</height>
					<texturefocus colordiffuse="white">touchcontrols/icon_close.png</texturefocus>
					<texturenofocus colordiffuse="aawhite">touchcontrols/icon_close.png</texturenofocus>
					<onclick>back</onclick>
					<visible>Skin.HasSetting(EnableTouchSupport)</visible>
					<visible>!Window.IsActive(DialogSubtitles.xml)</visible>
				</control>
				
                <control type="label" id="10">
                    <description>Option Name</description>
                    <posx>100</posx>
                    <posy>80</posy>
                    <width>380</width>
                    <height>34</height>
                    <label>-</label>
                    <align>left</align>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
                    <scroll>false</scroll>
                </control>
                <control type="label" id="12">
                    <description>Slider Value</description>
                    <posx>1520</posx>
                    <posy>80</posy>
                    <label>-</label>
                    <width>330</width>
                    <height>40</height>
                    <align>left</align>
                    <font>Reg30</font>
                    <textcolor>$INFO[Skin.String(GeneralTextColor)]</textcolor>
                    <scroll>false</scroll>
                </control>
                <control type="slider" id="11">
                    <description>Slider</description>
                    <posx>500</posx>
                    <posy>86</posy>
                    <width>1000</width>
                    <height>35</height>
                    <onup>11</onup>
                    <ondown>11</ondown>
                    <onleft>11</onleft>
                    <onright>11</onright>
                </control>
            </control>
        </control>
    </controls>
</window>