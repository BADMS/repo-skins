<?xml version="1.0" encoding="utf-8"?>
<!--Titan-->
<window id="602">
    <defaultcontrol always="true">9000</defaultcontrol>
    <controls>
        <!--Dialog Overlay-->
		<control type="group">
			<visible>!Window.IsActive(VideoFullScreen.xml)</visible>
			<include>DialogOverlayExtra</include>
			<animation effect="fade" time="250" start="0" end="100" reversible="false">WindowOpen</animation>
        </control>
		
        <!--Dialog PVR Guid Info-->
        <control type="group">
            <visible>!Window.IsVisible(yesnodialog)</visible>
			<animation type="WindowOpen">
				<effect type="slide" start="1200" end="0" time="250" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="1200" time="250" tween="cubic" easing="inout" />
			</animation>
            <!--Panel-->
            <control type="image">
                <posx>640</posx>
                <posy>0</posy>
                <width>1340</width>
                <height>100%</height>
                <texture border="15">diffuse/bgpanel.png</texture>
				<animation effect="fade" end="90" time="0" condition="true">Conditional</animation>
				<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
            </control>
			<!-- close dialog -->
			<control type="button">
				<label></label>
				<width>60</width>
				<height>60</height>
				<right>60</right>
                <posy>40</posy>
				<font>-</font>
				<texturefocus colordiffuse="white">touchcontrols/icon_close.png</texturefocus>
				<texturenofocus colordiffuse="bbwhite">touchcontrols/icon_close.png</texturenofocus>
				<onclick>back</onclick>
				<visible>Skin.HasSetting(EnableTouchSupport)</visible>
			</control>
            <!--Header-->
            <control type="label">
                <description>Heading</description>
                <posx>700</posx>
                <posy>10</posy>
                <width>1200</width>
				<font>Bold45</font>
				<shadowcolor>black</shadowcolor>
                <label>19047</label>
                <align>left</align>
				<height>100</height>
            </control>
			<!-- program title -->
			<control type="label">
				<posx>700</posx>
				<posy>150</posy>
				<width>800</width>
				<font>Reg36</font>
				<align>left</align>
				<textcolor>FF1b1b1b</textcolor>
				<label>$INFO[ListItem.Title]</label>
			</control>
            <control type="group">
                <posx>680</posx>
                <posy>220</posy>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1200</width>
                    <height>241</height>
                    <texture border="5">dialogs/default/inner.png</texture>
                </control>
                <control type="button">
                    <description>Time</description>
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>1200</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <include condition="!Skin.HasTheme(classic)">DialogLabelAlt</include>
                    <include condition="Skin.HasTheme(classic)">DialogLabel</include>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[142]</label>
                    <label2>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ] ($INFO[ListItem.StartDate])</label2>
                    <enable>false</enable>
                </control>
                <control type="button">
                    <description>Duration</description>
                    <posx>0</posx>
                    <posy>59</posy>
                    <width>1200</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <include condition="!Skin.HasTheme(classic)">DialogLabelAlt</include>
                    <include condition="Skin.HasTheme(classic)">DialogLabel</include>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[180]:</label>
                    <label2>$VAR[ListItemDuration]</label2>
                    <enable>false</enable>
                </control>
                <control type="button">
                    <description>Channel</description>
                    <posx>0</posx>
                    <posy>118</posy>
                    <width>1200</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <include condition="!Skin.HasTheme(classic)">DialogLabelAlt</include>
                    <include condition="Skin.HasTheme(classic)">DialogLabel</include>
                    <texturenofocus>dialogs/default/separator.png</texturenofocus>
                    <label>$LOCALIZE[19148]:</label>
                    <label2>$INFO[ListItem.ChannelName]</label2>
                    <enable>false</enable>
                </control>
                <control type="button">
                    <description>Genre</description>
                    <posx>0</posx>
                    <posy>177</posy>
                    <width>1200</width>
                    <height>60</height>
                    <align>left</align>
                    <textoffsetx>20</textoffsetx>
                    <textwidth>540</textwidth>
                    <include condition="!Skin.HasTheme(classic)">DialogLabelAlt</include>
                    <include condition="Skin.HasTheme(classic)">DialogLabel</include>
                    <texturenofocus>-</texturenofocus>
                    <label>$LOCALIZE[135]:</label>
                    <label2 fallback="161">$INFO[ListItem.Genre]</label2>
                    <enable>false</enable>
                </control>
            </control>
            <control type="image">
                <posx>680</posx>
                <posy>486</posy>
                <width>1200</width>
                <height>430</height>
                <texture border="5">dialogs/default/inner.png</texture>
            </control>
            <control type="textbox" id="400">
                <description>Plot value</description>
                <posx>700</posx>
                <posy>506</posy>
                <width>1160</width>
                <height>380</height>
                <align>justify</align>
                <include condition="!Skin.HasTheme(classic)">DialogLabelAlt</include>
                <include condition="Skin.HasTheme(classic)">DialogLabel</include>
                <pagecontrol>60</pagecontrol>
                <label fallback="161">$INFO[ListItem.Plot]</label>
            </control>
            <!--Button Group-->
            <control type="grouplist" id="9000">
                <posx>680</posx>
                <posy>940</posy>
				<onleft>back</onleft>
				<orientation>horizontal</orientation>
				<itemgap>20</itemgap>
                <defaultcontrol>5</defaultcontrol>
                
				<control type="button" id="10">
                    <description>OK</description>
                    <include>DialogButtonOK</include>
                    <label>$LOCALIZE[186]</label>
                    <align>center</align>
					<font>Reg26</font>
					<onleft>back</onleft>
                </control>
            </control>
        </control>
    </controls>
</window>