                    <visible>!IntegerGreaterThan(Container(56).NumItems,7)</visible>
                    <posx>1260</posx>
                    <posy>937</posy>
                    <width>1440</width>
                    <height>73</height>
                    <texture border="3">list/bg_facade_nofocus_top.png</texture>
                </control>
                <control type="list" id="56">
                    <visible>Container.Content(tvshows)|[Container.Content(movies)+!Skin.HasSetting(plexbmc)]</visible>
                    <viewtype label="31094">Banner List</viewtype>
                    <posx>1260</posx>
                    <posy>426</posy>
                    <width>1440</width>
                    <height>584</height>
                    <onleft>6066</onleft>
                    <onright>60</onright>
                    <onup>56</onup>
                    <ondown>56</ondown>
                    <pagecontrol>60</pagecontrol>
                    <preloaditems>4</preloaditems>
                    <include>List_Layout</include>
                </control>
            </control>
            <control type="label">
                <include>FacadeNumItems</include>
                <label>$INFO[Container.NumItems] $LOCALIZE[31025]</label>
            </control>
            <control type="scrollbar" id="60">
                <animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
                <animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
                <posx>1899</posx>
                <posy>426</posy>
                <height>584</height>
                <include condition="Skin.HasSetting(WideLists)">SlideViewScroller</include>
                <include>VerticalScroller</include>
                <onleft>56</onleft>
                <onright>505050</onright>
