<?xml version="1.0" encoding="utf-8"?>
<window id="3001">
    <!-- The following property allows TvTunes to keep playing when this window is displayed -->
    <onload condition="!IsEmpty(ListItem.TvShowTitle)">SetProperty("TvTunesSupported", "TvShows")</onload>
    <onload condition="IsEmpty(ListItem.TvShowTitle)">SetProperty("TvTunesSupported", "Movies")</onload>
    <onload condition="Skin.HasSetting(ActivateTvTunes) + System.HasAddon(script.tvtunes)">XBMC.RunScript(script.tvtunes,backend=True)</onload>
    <defaultcontrol always="true">51</defaultcontrol>
    <allowoverlay>no</allowoverlay>
    <include>OpenClose</include>
    <controls>
        <include>Fanart_Art</include>
        <include>Player_Show</include>
        <include>Time</include>
        <control type="label">
            <include>WindowTitle</include>
            <label>$ADDON[script.videoextras 32001]</label>
        </control>
        <control type="label">
            <include>WindowTitleSub</include>
            <label>$INFO[ListItem.Title]</label>
        </control>
        <control type="group" description="COMMON">
            <posy>219</posy>
            <control type="image" description="Thumb">
                <posx>18</posx>
                <posy>411</posy>
                <width>440</width>
                <height>440</height>
                <aspectratio align="left" aligny="bottom" scalediffuse="false">keep</aspectratio>
                <include>SquareThumb</include>
                <include>ThumbBorder</include>
            </control>
        </control>
        <control type="group" description="Default View on the right">
            <control type="group">
                <posx>-780</posx>
                <control type="image">
                    <posx>1224</posx>
                    <posy>350</posy>
                    <width>2058</width>
                    <height>900</height>
                    <texture border="90">common/bg_tvguide.png</texture>
                </control>
                <control type="image">
                    <posx>1260</posx>
                    <posy>353</posy>
                    <width>1440</width>
                    <height>73</height>
                    <texture border="3">list/bg_facade_nofocus_top.png</texture>
                </control>
                <control type="image">
                    <visible>!IntegerGreaterThan(Container(50).NumItems,7)</visible>
                    <posx>1260</posx>
                    <posy>939</posy>
                    <width>1440</width>
                    <height>73</height>
                    <texture border="3">list/bg_facade_nofocus_top.png</texture>
                </control>
                <control type="list" id="51">
                    <posx>1260</posx>
                    <posy>426</posy>
                    <width>1440</width>
                    <height>584</height>
                    <pagecontrol>60</pagecontrol>
                    <onleft>9000</onleft>
                    <onright>60</onright>
                    <onup>50</onup>
                    <ondown>50</ondown>
                    <preloaditems>4</preloaditems>
                    <include>List_Layout</include>
                </control>
            </control>
            <control type="label">
                <include>FacadeNumItems</include>
                <label>$INFO[Container.NumItems] $LOCALIZE[31025]</label>
            </control>
            <control type="scrollbar" id="60">
                <animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
                <animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
                <posx>1899</posx>
                <posy>421</posy>
                <height>586</height>
                <include>VerticalScroller</include>
                <onleft>51</onleft>
                <onright>51</onright>
            </control>
        </control>
    </controls>
</window>
