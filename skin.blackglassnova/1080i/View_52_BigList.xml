<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="View_52_BigList">
        <control type="group">
            <visible>Control.IsVisible(52)</visible>
            <include>Icon_Fade</include>
            <control type="group">
                <!-- CLEAR ART -->
                <visible>Skin.HasSetting(EnableClearArt)</visible>
                <control type="image">
                    <posx>645r</posx>
                    <posy>10</posy>
                    <width>300</width>
                    <height>155</height>
                    <aspectratio align="right" aligny="bottom">keep</aspectratio>
                    <texture>$INFO[Skin.String(cdartPath)]$INFO[ListItem.Artist,,/logo.png]</texture>
                </control>
                <control type="image">
                    <posx>645r</posx>
                    <posy>10</posy>
                    <width>300</width>
                    <height>155</height>
                    <texture>$INFO[ListItem.Art(clearart)]</texture>
                    <aspectratio align="right" aligny="bottom">keep</aspectratio>
                </control>
            </control>
            <control type="group">
                <include>SlideViewUnknown</include>
                <include condition="Skin.HasSetting(SlideListToLeft)">SlideView</include>
                <control type="image">
                    <posx>1224</posx>
                    <posy>131</posy>
                    <width>1522</width>
                    <height>1160</height>
                    <include condition="!Skin.HasSetting(BlackGlassMode)">bg_tvguide</include>
                    <include condition="Skin.HasSetting(BlackGlassMode)">bg_tvguide_BG</include>
                </control>
                <control type="image">
                    <posx>1260</posx>
                    <posy>134</posy>
                    <width>1440</width>
                    <height>73</height>
                    <texture border="3">list/bg_facade_nofocus_top.png</texture>
                </control>
                <control type="image">
                    <visible>!IntegerGreaterThan(Container(52).NumItems,10)</visible>
                    <posx>1260</posx>
                    <posy>939</posy>
                    <width>1440</width>
                    <height>73</height>
                    <texture border="3">list/bg_facade_nofocus_top.png</texture>
                </control>
                <control type="list" id="52">
                    <viewtype label="31091">Large List</viewtype>
                    <posx>1260</posx>
                    <posy>207</posy>
                    <width>1440</width>
                    <height>803</height>
                    <pagecontrol>60</pagecontrol>
                    <onleft>6062</onleft>
                    <onright>60</onright>
                    <onup>52</onup>
                    <ondown>52</ondown>
                    <preloaditems>4</preloaditems>
                    <include>List_Layout</include>
                </control>
            </control>
            <control type="label">
                <include>FacadeNumItems</include>
                <label>$INFO[Container.NumItems] $LOCALIZE[31025]</label>
            </control>
            <control type="scrollbar" id="60">
                <animation effect="slide" start="0,0" end="-8,0" time="150">Focus</animation>
                <animation effect="slide" start="-8,0" end="0,0" time="300">UnFocus</animation>
                <posx>1899</posx>
                <posy>207</posy>
                <height>803</height>
                <include condition="Skin.HasSetting(SlideListToLeft)">SlideViewScroller</include>
                <include>VerticalScroller</include>
                <onleft>52</onleft>
                <onright>505050</onright>
            </control>
        </control>
    </include>
</includes>
