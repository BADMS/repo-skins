                    <include condition="Skin.HasSetting(BlackGlassMode)">bg_tvguide_BG</include>
                </control>
                <control type="image">
                    <posx>740</posx>
                    <posy>134</posy>
                    <width>1180</width>
                    <height>73</height>
                    <texture border="3">list/bg_facade_nofocus_top.png</texture>
                </control>
