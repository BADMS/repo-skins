<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <defaultcontrol always="true">9001</defaultcontrol>
    <include>OSDFade</include>
    <controls>
        <control type="group">
            <include condition="Skin.HasSetting(BlackGlassMode)+!Skin.HasSetting(DisableSlidingAnimations)">OpenCloseSlideRight</include>
            <control type="button" id="9001">
                <visible>Skin.HasSetting(WindowClosingIcon)</visible>
                <posx>1637</posx>
                <posy>479</posy>
                <height>50</height>
                <width>50</width>
                <texturenofocus>topbar/topbar_exit_nofocus.png</texturenofocus>
                <texturefocus>topbar/topbar_exit_focus.png</texturefocus>
                <onleft>Dialog.Close(10142)</onleft>
                <onright>Dialog.Close(10142)</onright>
                <onup>Dialog.Close(10142)</onup>
                <ondown>Dialog.Close(10142)</ondown>
                <onback>Dialog.Close(10142)</onback>
                <onclick>Dialog.Close(10142)</onclick>
                <label>-</label>
                <onfocus>noop</onfocus>
            </control>
            <control type="group">
                <!-- CLEAR ART / LOGO-->
                <control type="image">
                    <visible>Skin.HasSetting(EnableClearArt) | Skin.HasSetting(EnableClearLogo)</visible>
                    <posx>645r</posx>
                    <posy>283</posy>
                    <width>300</width>
                    <height>235</height>
                    <aspectratio align="right" aligny="bottom">keep</aspectratio>
                    <texture background="true">$VAR[VideoPlayerClearArtLogo]</texture>
                </control>
            </control>
            <control type="image">
                <posx>233</posx>
                <posy>483</posy>
                <width>1454</width>
                <height>515</height>
                <texture border="90">common/bg_dialog.png</texture>
            </control>
            <control type="image">
                <posx>636</posx>
                <posy>531</posy>
                <width>1006</width>
                <height>90</height>
                <texture border="3">list/bg_facade_nofocus_top.png</texture>
            </control>
            <control type="image">
                <posx>384</posx>
                <posy>539</posy>
                <height>408</height>
                <width>250</width>
                <texture>list/bg_strip_horizontal_left.png</texture>
                <colordiffuse>90ffffff</colordiffuse>
            </control>
            <control type="image">
                <posx>635</posx>
                <posy>539</posy>
                <width>2</width>
                <height>408</height>
                <texture>list/bg_facade_vertical.png</texture>
            </control>
            <control type="group">
                <!-- CDART -->
                <visible>!Skin.HasSetting(plexbmc)</visible>
                <visible>Skin.HasSetting(EnableCdArt)+!IsEmpty(VideoPlayer.Cover)</visible>
                <control type="image">
                    <posx>147</posx>
                    <posy>565</posy>
                    <width>356</width>
                    <height>356</height>
                    <texture background="true" diffuse="common/cdart_diffuse.png">$INFO[Player.Art(discart)]</texture>
                    <aspectratio align="center" aligny="center">keep</aspectratio>
                    <include>Animation_ViewsCDart</include>
                </control>
            </control>
            <control type="image">
                <posx>280</posx>
                <posy>538</posy>
                <width>355</width>
                <height>410</height>
                <texture fallback="defaultVideoBig.png">$INFO[VideoPlayer.Cover]</texture>
                <include>ThumbBorder</include>
                <aspectratio aligny="top" align="center">keep</aspectratio>
            </control>
            <control type="group">
                <posx>400</posx>
                <control type="label">
                    <posx>273</posx>
                    <posy>562</posy>
                    <height>36</height>
                    <width>930</width>
                    <font>InfoTitleFont</font>
                    <textcolor>MainColor</textcolor>
                    <label>$INFO[VideoPlayer.TVShowTitle]$INFO[VideoPlayer.Season,  •  $LOCALIZE[31973],.]$INFO[VideoPlayer.Episode,,  •  ]$INFO[VideoPlayer.ChannelNumber,,.]$INFO[VideoPlayer.ChannelName,,: ]$INFO[VideoPlayer.Artist,, - ]$INFO[VideoPlayer.Album,, - ]$INFO[VideoPlayer.Title]$VAR[ChapterLabel]</label>
                </control>
                <control type="textbox">
                    <posx>273</posx>
                    <posy>625</posy>
                    <width>930</width>
                    <height>210</height>
                    <align>justify</align>
                    <label>$INFO[VideoPlayer.Plot]</label>
                    <textcolor>AlternateBrightColor</textcolor>
                    <font>InfoPlotFont</font>
                    <pagecontrol>6060</pagecontrol>
                </control>
                <control type="scrollbar" id="6060">
                    <visible>Skin.HasSetting(ManualScroll)</visible>
                    <posx>1209</posx>
                    <posy>625</posy>
                    <height>210</height>
                    <include>VerticalScroller</include>
                    <onleft>9001</onleft>
                    <onright>9001</onright>
                </control>
                <control type="image">
                    <posx>236</posx>
                    <posy>760</posy>
                    <width>1006</width>
                    <height>90</height>
                    <texture border="3">list/bg_facade_nofocus_top.png</texture>
                </control>
                <control type="grouplist">
                    <posx>273</posx>
                    <posy>865</posy>
                    <width>1006</width>
                    <height>408</height>
                    <itemgap>4</itemgap>
                    <orientation>horizontal</orientation>
                    <align>left</align>
                    <aligny>center</aligny>
                    <include>CodecsVideoOSD</include>
                </control>
            </control>
        </control>
    </controls>
</window>
