<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Favorite List -->
	<include name="FavList">
		<control type="group">
			<top>120</top>
			<control type="image">
				<left>1276</left>
				<width>560</width>
				<height>840</height>
				<aspectratio align="center" aligny="top">keep</aspectratio>
				<texture background="true">$INFO[Container(450).ListItem.Icon]</texture>
				<fadetime>IconCrossfadeTime</fadetime>
			</control>
			<control type="list" id="450">
				<left>90</left>
				<width>1150</width>
				<height>840</height>
				<onleft>450</onleft>
				<onright condition="Control.IsVisible(60)">60</onright>
				<onright>450</onright>
				<onup>450</onup>
				<ondown>450</ondown>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="quadratic" easing="out">200</scrolltime>
				<itemlayout height="120" width="1150">
					<control type="image">
						<left>15</left>
						<top>8</top>
						<width>105</width>
						<height>105</height>
						<aspectratio>keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<colordiffuse>maintext</colordiffuse>
					</control>
					<control type="label">
						<left>135</left>
						<top>0</top>
						<width>960</width>
						<height>120</height>
						<font>font30</font>
						<textcolor>maintext</textcolor>
						<selectedcolor>$VAR[ColorHighlightVar]</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>100</left>
						<width>960</width>
						<height>120</height>
						<font>font15</font>
						<align>right</align>
						<textcolor>$VAR[ColorHighlightVar]</textcolor>
						<selectedcolor>$VAR[ColorHighlightVar]</selectedcolor>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>
				<focusedlayout height="120" width="1150">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>1150</width>
						<height>120</height>
						<texture>listselect_fo.png</texture>
						<colordiffuse>$VAR[ColorHighlightVar]</colordiffuse>
						<visible>Control.HasFocus(450)</visible>
						<include>VisibleFadeEffect</include>
					</control>
					<control type="image">
						<left>15</left>
						<top>8</top>
						<width>105</width>
						<height>105</height>
						<aspectratio>keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<left>135</left>
						<top>0</top>
						<width>960</width>
						<height>120</height>
						<font>font30</font>
						<textcolor>maintext</textcolor>
						<selectedcolor>$VAR[ColorHighlightVar]</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(450)">Conditional</animation>
					</control>
					<control type="label">
						<left>100</left>
						<width>960</width>
						<height>120</height>
						<font>font15</font>
						<align>right</align>
						<textcolor>maintext</textcolor>
						<selectedcolor>$VAR[ColorHighlightVar]</selectedcolor>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label2]</label>
						<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(450)">Conditional</animation>
					</control>
				</focusedlayout>
			</control>
		</control>
	</include>
	<!-- Favorite Panel -->
	<include name="FavPanel">
		<control type="group">
			<control type="group">
                <visible>IntegerGreaterThan(Container(450).NumItems,0)</visible>
                <animation effect="fade" time="320" delay="300">Visible</animation>
                <control type="image">
                	<visible>Control.HasFocus(450)</visible>
                    <left>194</left>
                    <top>134</top>
                    <width>392</width>
                    <height>392</height>
                    <animation effect="fade" time="320" delay="200">Visible</animation>
                    <animation effect="fade" time="200">Hidden</animation>
                    <texture colordiffuse="$VAR[ColorHighlightVar]">listselect_fo.png</texture>
                    <animation effect="slide" end="0,380" time="300" tween="cubic" easing="inout" condition="Container(450).Row(1)">Conditional</animation>
                    <animation effect="slide" end="380,0" time="300" tween="cubic" easing="inout" condition="Container(450).Column(3)">Conditional</animation>
                    <animation effect="slide" end="380,0" time="300" tween="cubic" easing="inout" condition="Container(450).Column(3) | Container(450).Column(2)">Conditional</animation>
                    <animation effect="slide" end="380,0" time="300" tween="cubic" easing="inout" condition="Container(450).Column(3) | Container(450).Column(2) | Container(450).Column(1)">Conditional</animation>
                </control>
            </control>
			<control type="panel" id="450">
				<left>200</left>
				<top>140</top>
				<width>1520</width>
				<height>760</height>
				<onleft>450</onleft>
				<onright condition="Control.IsVisible(60)">60</onright>
				<onright>450</onright>
				<onup>450</onup>
				<ondown>450</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<itemlayout height="380" width="380">
					<control type="image">
						<top>6</top>
						<left>6</left>
						<width>368</width>
						<height>368</height>
						<aspectratio aligny="top">scale</aspectratio>
						<texture fallback="DefaultFallbackFavourite.png" background="true">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<top>6</top>
						<left>6</left>
						<width>368</width>
						<height>368</height>
						<texture border="0,0,0,50">thumbs/diffuse_music.png</texture>
					</control>
					<control type="label">
						<top>331</top>
						<left>16</left>
						<width>348</width>
						<height>30</height>
						<align>center</align>
						<textcolor>maintext</textcolor>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="380" width="380">
					<control type="group">
						<include>PanelFocusedItemZoom</include>
						<control type="image">
							<top>6</top>
							<left>6</left>
							<width>368</width>
							<height>368</height>
							<aspectratio aligny="top">scale</aspectratio>
							<texture fallback="DefaultFallbackFavourite.png" background="true">$INFO[ListItem.Icon]</texture>
						</control>
						<control type="group">
							<animation center="auto" condition="Control.HasFocus(450)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
							<animation center="auto" condition="Control.HasFocus(450)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
							<control type="image">
								<top>6</top>
								<left>6</left>
								<width>368</width>
								<height>368</height>
								<texture border="0,0,0,50">thumbs/diffuse_music.png</texture>
							</control>
							<control type="label">
								<top>331</top>
								<left>16</left>
								<width>348</width>
								<height>30</height>
								<align>center</align>
								<textcolor>maintext</textcolor>
								<info>ListItem.Label</info>
							</control>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="group">
				<animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
				<control type="button">
					<top>900</top>
					<left>176</left>
					<width>1740</width>
					<height>90</height>
					<font>font16_title</font>
					<textcolor>maintext</textcolor>
					<label>[B]$INFO[ListItem.Label][/B]</label>
					<textoffsetx>30</textoffsetx>
					<texturenofocus>-</texturenofocus>
					<enable>no</enable>
					<disabledcolor>maintext</disabledcolor>
				</control>
			</control>
		</control>
	</include>
</includes>