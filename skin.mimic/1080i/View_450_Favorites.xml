<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Favorite List -->
	<include name="FavList">
		<control type="group">
			<top>145</top>
			<control type="image">
				<left>1276</left>
				<width>560</width>
				<height>840</height>
				<aspectratio aligny="bottom">keep</aspectratio>
				<texture background="true">$INFO[Container(450).ListItem.Icon]</texture>
				<fadetime>IconCrossfadeTime</fadetime>
			</control>
			<control type="list" id="450">
				<left>90</left>
				<width>1150</width>
				<height>840</height>
				<onleft>450</onleft>
				<onright condition="Control.IsVisible(60)">60</onright>
				<onright>450</onright>
				<onup>450</onup>
				<ondown>450</ondown>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="quadratic" easing="out">200</scrolltime>
				<itemlayout height="120" width="1150">
					<control type="image">
						<left>15</left>
						<top>8</top>
						<width>105</width>
						<height>105</height>
						<aspectratio>keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<fadetime>IconCrossfadeTime</fadetime>
						<colordiffuse>grey</colordiffuse>
					</control>
					<control type="label">
						<left>135</left>
						<top>0</top>
						<width>960</width>
						<height>120</height>
						<font>font30</font>
						<textcolor>grey</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="label">
						<left>100</left>
						<width>960</width>
						<height>120</height>
						<font>font15</font>
						<align>right</align>
						<textcolor>themecolor</textcolor>
						<selectedcolor>selected</selectedcolor>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>
				<focusedlayout height="120" width="1150">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>1150</width>
						<height>120</height>
						<texture>listselect_fo.png</texture>
						<colordiffuse>listselect</colordiffuse>
						<visible>Control.HasFocus(450)</visible>
						<include>VisibleFadeEffect</include>
					</control>
					<control type="image">
						<left>15</left>
						<top>8</top>
						<width>105</width>
						<height>105</height>
						<aspectratio>keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<fadetime>IconCrossfadeTime</fadetime>
					</control>
					<control type="label">
						<left>135</left>
						<top>0</top>
						<width>960</width>
						<height>120</height>
						<font>font30</font>
						<textcolor>white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(450)">Conditional</animation>
					</control>
					<control type="label">
						<left>100</left>
						<width>960</width>
						<height>120</height>
						<font>font15</font>
						<align>right</align>
						<textcolor>white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label2]</label>
						<animation effect="fade" start="100" end="70" time="300" tween="sine" easing="inout" condition="!Control.HasFocus(450)">Conditional</animation>
					</control>
				</focusedlayout>
			</control>
		</control>
	</include>
	<!-- Favorite Panel -->
	<include name="FavPanel">
		<control type="group">
			<control type="panel" id="450">
				<left>120</left>
				<top>143</top>
				<width>1680</width>
				<height>840</height>
				<onleft>450</onleft>
				<onright condition="Control.IsVisible(60)">60</onright>
				<onright>450</onright>
				<onup>450</onup>
				<ondown>450</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<itemlayout height="420" width="420">
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>420</width>
						<height>420</height>
						<texture>background.png</texture>
						<fadetime>400</fadetime>
						<colordiffuse>background</colordiffuse>
					</control>
					<control type="image">
						<visible>!IsEmpty(ListItem.Icon)</visible>
						<left>0</left>
						<top>0</top>
						<width>420</width>
						<height>420</height>
						<aspectratio aligny="top">scale</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<fadetime>400</fadetime>
						<colordiffuse>BAffffff</colordiffuse>
					</control>
					<control type="image">
						<top>370</top>
						<width>420</width>
						<height>50</height>
						<texture>black.png</texture>
						<colordiffuse>88ffffff</colordiffuse>
					</control>
					<control type="label">
						<top>370</top>
						<width>420</width>
						<height>40</height>
						<align>center</align>
						<textoffsetx>10</textoffsetx>
						<textcolor>grey</textcolor>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="420" width="420">
					<control type="group">
						<animation type="Focus" reversible="false">
							<effect type="zoom" start="95" end="100" time="200" tween="sine" easing="inout" center="auto" />
							<effect type="fade" start="80" end="100" time="200" tween="sine" easing="in" />
						</animation>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>420</width>
							<height>420</height>
							<texture>background.png</texture>
							<fadetime>400</fadetime>
							<colordiffuse>background</colordiffuse>
						</control>
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>420</width>
							<height>420</height>
							<aspectratio aligny="top">scale</aspectratio>
							<texture fallback="blank.png" background="true">$INFO[ListItem.Icon]</texture>
							<fadetime>400</fadetime>
							<bordertexture colordiffuse="themecolor" border="8">thumbs/thumbnail_focused.png</bordertexture>
							<bordersize>8</bordersize>
						</control>
						<control type="image">
							<left>8</left>
							<top>370</top>
							<width>404</width>
							<height>44</height>
							<texture>black.png</texture>
							<colordiffuse>88ffffff</colordiffuse>
						</control>
						<control type="label">
							<top>370</top>
							<width>420</width>
							<height>40</height>
							<align>center</align>
							<textoffsetx>10</textoffsetx>
							<info>ListItem.Label</info>
						</control>
					</control>
				</focusedlayout>
			</control>
		</control>
	</include>
</includes>