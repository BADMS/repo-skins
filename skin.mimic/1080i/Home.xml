					<height>45</height>
					<texture>background.png</texture>
					<colordiffuse>background</colordiffuse>
				</control>
				<control type="grouplist">
					<left>0</left>
					<top>0</top>
					<width>1905</width>
					<height>41</height>
					<align>right</align>
