<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>1</defaultcontrol>
	<visible>[Window.IsActive(videoosd) | Player.Paused | Player.Seeking | Player.DisplayAfterSeek | Player.Forwarding | Player.Rewinding] + VideoPlayer.IsFullscreen + ![Window.IsVisible(fullscreeninfo) | Window.IsVisible(musicosd) | Window.IsVisible(OSDVideoSettings) | Window.IsVisible(OSDAudioSettings) | Window.IsVisible(PVROSDGuide) | Window.IsVisible(PVROSDTeletext) | Window.IsVisible(PVROSDChannels) | Window.IsVisible(subtitlesearch)]</visible>
	<controls>
		<control type="group">
			<animation effect="slide" start="0,400" end="0,0" time="200">WindowOpen</animation>
			<animation effect="slide" start="0,400" end="0,0" time="200">VisibleChange</animation>
			<top>985</top>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>1920</width>
				<height>95</height>
				<texture>background.png</texture>
				<colordiffuse>background</colordiffuse>
			</control>
			<control type="progress">
				<left>30</left>
				<top>29</top>
				<width>1860</width>
				<height>37</height>
				<info>Player.ProgressCache</info>
			</control>
			<control type="progress">
				<left>30</left>
				<top>29</top>
				<width>1860</width>
				<height>37</height>
				<info>Player.Progress</info>
				<colordiffuse>background</colordiffuse>
			</control>
			<control type="label">
				<top>28</top>
				<left>45</left>
				<width>900</width>
				<height>35</height>
				<font>font14_title</font>
				<textcolor>grey</textcolor>
				<align>left</align>
				<aligny>center</aligny>
				<label>$INFO[Player.Time]</label>
			</control>
			<control type="label">
				<top>28</top>
				<left>975</left>
				<width>900</width>
				<height>35</height>
				<font>font14_title</font>
				<textcolor>grey</textcolor>
				<align>right</align>
				<aligny>center</aligny>
				<label>$INFO[Player.Duration]</label>
			</control>
			<control type="label">
				<top>28</top>
				<left>30</left>
				<width>1860</width>
				<height>35</height>
				<font>font14_title</font>
				<textcolor>grey</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>$VAR[SeekLabelVar]</label>
			</control>
		</control>
		<control type="group">
			<left>832</left>
			<top>412</top>
			<include>Animation_DialogPopup</include>
			<visible>Player.Paused + !Window.IsActive(subtitlesearch)</visible>
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>256</width>
				<height>256</height>
				<texture>osd/paused.png</texture>
				<colordiffuse>background</colordiffuse>
			</control>
		</control>
		<control type="grouplist">
			<animation effect="slide" start="0,400" end="0,0" time="200">WindowOpen</animation>
			<animation effect="slide" start="0,400" end="0,0" time="200">VisibleChange</animation>
			<left>900</left>
			<top>1007</top>
			<width>748</width>
			<height>150</height>
			<itemgap>10</itemgap>
			<orientation>horizontal</orientation>
			<include>VisibleFadeEffect</include>
			<visible>Player.Forwarding | Player.Rewinding</visible>
			<usecontrolcoords>true</usecontrolcoords>
			<control type="image">
				<top>4</top>
				<width>45</width>
				<height>43</height>
				<aspectratio>keep</aspectratio>
				<texture flipx="true">osd/ff.png</texture>
				<colordiffuse>FFe5e5e5</colordiffuse>
				<animation effect="fade" start="100" end="60" time="800" pulse="true" condition="true">Conditional</animation>
				<visible>Player.Rewinding</visible>
			</control>
			<control type="label">
				<top>6</top>
				<label>$VAR[VideoPlayerForwardRewindVar]</label>
				<width min="10" max="300">auto</width>
				<height>35</height>
				<aligny>center</aligny>
				<font>font14_title</font>
				<textcolor>grey</textcolor>
			</control>
			<control type="image">
				<top>4</top>
				<width>45</width>
				<height>43</height>
				<aspectratio>keep</aspectratio>
				<texture>osd/ff.png</texture>
				<colordiffuse>FFe5e5e5</colordiffuse>
				<animation effect="fade" start="100" end="60" time="800" pulse="true" condition="true">Conditional</animation>
				<visible>Player.Forwarding</visible>
			</control>
		</control>
	</controls>
</window>