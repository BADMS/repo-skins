<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- Video BannerInfo -->
	<include name="VideoBannerInfo">
		<control type="group">
			<visible>Control.IsVisible(506) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<control type="image">
				<visible>Control.HasFocus(506)</visible>
                <left>98</left>
                <top>62</top>
                <width>998</width>
                <height>195</height>
                <animation effect="fade" time="320" delay="200">Visible</animation>
                <animation effect="fade" time="50">Hidden</animation>
                <texture colordiffuse="$VAR[ColorHighlightVar]">listselect_fo.png</texture>
                <animation effect="slide" end="0,183" time="300" tween="cubic" easing="inout" condition="Container(506).Row(4)">Conditional</animation>
                <animation effect="slide" end="0,183" time="300" tween="cubic" easing="inout" condition="Container(506).Row(4) | Container(506).Row(3)">Conditional</animation>
                <animation effect="slide" end="0,183" time="300" tween="cubic" easing="inout" condition="Container(506).Row(4) | Container(506).Row(3) | Container(506).Row(2)">Conditional</animation>
                <animation effect="slide" end="0,183" time="300" tween="cubic" easing="inout" condition="Container(506).Row(4) | Container(506).Row(3) | Container(506).Row(2) | Container(506).Row(1)">Conditional</animation>
            </control>
            <control type="panel" id="506">
				<viewtype label="31085">icon</viewtype>
				<left>104</left>
				<top>68</top>
				<height>915</height>
				<width>980</width>
                <onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>60</onright>
				<onup>506</onup>
				<ondown>506</ondown>
				<orientation>vertical</orientation>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<pagecontrol>60</pagecontrol>
				<itemlayout width="991" height="183">
					<control type="image">
						<top>6</top>
						<left>6</left>
						<width>979</width>
						<height>171</height>
						<aspectratio align="center" aligny="center">scale</aspectratio>
						<texture background="true">$VAR[BannerThumb]</texture>
						<visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
					</control>
					<control type="image">
						<top>6</top>
						<left>6</left>
						<width>979</width>
						<height>171</height>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<visible>IsEmpty(ListItem.Art(banner)) + StringCompare(ListItem.Label,..)</visible>
					</control>
                    <control type="group">
						<visible>IsEmpty(ListItem.Art(banner))</visible>
						<control type="image">
							<top>6</top>
							<left>6</left>
							<width>979</width>
							<height>171</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
							<fadetime>300</fadetime>
						</control>
						<control type="image">
							<left>15</left>
							<width>450</width>
							<height>171</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							<fadetime>300</fadetime>
						</control>
					</control>
					<control type="image">
						<top>6</top>
						<left>6</left>
						<width>979</width>
						<height>171</height>
						<texture>thumbs/diffuse.png</texture>
					</control>
					<control type="image">
						<left>920</left>
						<top>6</top>
						<width>60</width>
						<height>60</height>
						<texture>$VAR[OverlayVar]</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout width="991" height="183">
                    <control type="group">
                        <include>PanelFocusedItemZoom</include>
						<control type="group">
							<visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
							<control type="image">
								<top>6</top>
								<left>6</left>
								<width>979</width>
								<height>171</height>
								<aspectratio align="center" aligny="center">scale</aspectratio>
								<texture background="true">$VAR[BannerThumb]</texture>
							</control>
						</control>
						<control type="group">
							<visible>IsEmpty(ListItem.Art(banner)) + StringCompare(ListItem.Label,..)</visible>
							<control type="image">
								<top>6</top>
								<left>6</left>
								<width>979</width>
								<height>171</height>
								<texture>background.png</texture>
								<colordiffuse>$VAR[ColorBackgroundVar]</colordiffuse>
							</control>
							<control type="image">
								<top>6</top>
								<left>6</left>
								<width>979</width>
								<height>171</height>
								<aspectratio align="center" aligny="center">keep</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
						</control>
                        <control type="group">
							<visible>IsEmpty(ListItem.Art(banner))</visible>
							<control type="image">
								<top>6</top>
								<left>6</left>
								<width>979</width>
								<height>171</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
							</control>
							<control type="image">
								<left>15</left>
								<width>450</width>
								<height>171</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							</control>
						</control>
						<control type="image">
							<animation center="auto" condition="Control.HasFocus(506)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
							<animation center="auto" condition="Control.HasFocus(506)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
							<top>6</top>
							<left>6</left>
							<width>979</width>
							<height>171</height>
							<texture>thumbs/diffuse.png</texture>
						</control>
                        <control type="image">
							<left>920</left>
							<top>6</top>
							<width>60</width>
							<height>60</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
						</control>
                    </control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>1906</left>
				<top>30</top>
				<width>14</width>
				<height>1035</height>
				<onright>506</onright>
				<onleft>506</onleft>
				<ondown>60</ondown>
				<onup>60</onup>
			</control>
			<control type="grouplist">
				<top>73</top>
				<left>1134</left>
				<itemgap>15</itemgap>
				<control type="multiimage">
					<width>685</width>
					<height>385</height>
					<aspectratio>scale</aspectratio>
					<imagepath background="true">$VAR[ExtraFanartVar]</imagepath>
					<visible>!IsEmpty(ListItem.Art(fanart))</visible>
				</control>
				<control type="label">
					<left>1110</left>
					<top>487</top>
					<width>685</width>
					<height>40</height>
					<font>font16_title</font>
					<textcolor>maintext</textcolor>
					<scroll>true</scroll>
					<label>[B]$VAR[FloorLabelVar][/B]</label>
				</control>
				<control type="label">
					<label>$INFO[ListItem.Genre]</label>
					<width>685</width>
					<height>40</height>
					<font>font14</font>
					<textcolor>maintext</textcolor>
					<visible>!IsEmpty(ListItem.Genre)</visible>
				</control>
				<control type="label">
					<label>$VAR[VideoSubLabelVar]</label>
					<width>685</width>
					<height>40</height>
					<font>font14</font>
					<textcolor>maintext</textcolor>
				</control>
				<control type="textbox">
					<label>$VAR[VideoPlotVar]</label>
					<top>654</top>
					<left>1125</left>
					<width>685</width>
					<height>345</height>
					<font>font14_textbox</font>
					<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(Enable.AutoScroll)</autoscroll>
					<include>ShowCaseInfoPanelButtonsValues</include>
				</control>
			</control>
		</control>
	</include>
</includes>