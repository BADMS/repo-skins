<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- BannerWall -->
	<include name="BannerWall">
		<control type="group">
			<visible>Control.IsVisible(58) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<control type="image">
				<visible>Control.HasFocus(58)</visible>
                <left>156</left>
                <top>104</top>
                <width>810</width>
                <height>170</height>
                <animation effect="fade" time="320" delay="200">Visible</animation>
                <animation effect="fade" time="50">Hidden</animation>
                <texture colordiffuse="$VAR[ColorHighlightVar]">listselect_fo.png</texture>
                <animation effect="slide" end="798,0" time="300" tween="cubic" easing="inout" condition="Container(58).Column(1)">Conditional</animation>
                <animation effect="slide" end="0,158" time="300" tween="cubic" easing="inout" condition="Container(58).Row(4)">Conditional</animation>
                <animation effect="slide" end="0,158" time="300" tween="cubic" easing="inout" condition="Container(58).Row(4) | Container(58).Row(3)">Conditional</animation>
                <animation effect="slide" end="0,158" time="300" tween="cubic" easing="inout" condition="Container(58).Row(4) | Container(58).Row(3) | Container(58).Row(2)">Conditional</animation>
                <animation effect="slide" end="0,158" time="300" tween="cubic" easing="inout" condition="Container(58).Row(4) | Container(58).Row(3) | Container(58).Row(2) | Container(58).Row(1)">Conditional</animation>
            </control>
			<control type="panel" id="58">
				<left>162</left>
				<top>110</top>
				<width>1596</width>
				<height>790</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>60</onright>
				<onup>58</onup>
				<ondown>58</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="31088">icons</viewtype>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<visible>Container.Content(tvshows) | Container.Content(movies)</visible>
				<itemlayout height="158" width="798">
					<control type="image">
						<top>6</top>
						<left>6</left>
						<width>786</width>
						<height>146</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$VAR[BannerThumb]</texture>
						<visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
					</control>
					<control type="image">
						<top>6</top>
						<left>6</left>
						<width>786</width>
						<height>146</height>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<visible>IsEmpty(ListItem.Art(banner)) + IsEmpty(ListItem.Art(fanart))</visible>
					</control>
					<control type="group">
						<visible>IsEmpty(ListItem.Art(banner))</visible>
						<control type="image">
							<top>6</top>
							<left>6</left>
							<width>786</width>
							<height>146</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
						</control>
						<control type="image">
							<top>5</top>
							<width>450</width>
							<height>145</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
						</control>
					</control>
					<control type="image">
						<top>6</top>
						<left>6</left>
						<width>786</width>
						<height>146</height>
						<texture>thumbs/diffuse.png</texture>
					</control>
					<control type="image">
						<top>6</top>
						<left>732</left>
						<width>60</width>
						<height>60</height>
						<texture>$VAR[OverlayVar]</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout height="158" width="798">
					<control type="group">
						<include>PanelFocusedItemZoom</include>
						<control type="group">
							<visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
							<control type="image">
								<top>6</top>
								<left>6</left>
								<width>786</width>
								<height>146</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$VAR[BannerThumb]</texture>
							</control>
						</control>
						<control type="group">
							<visible>IsEmpty(ListItem.Art(banner)) + IsEmpty(ListItem.Art(fanart))</visible>
							<control type="image">
								<top>6</top>
								<left>6</left>
								<width>786</width>
								<height>146</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
						</control>
						<control type="group">
							<visible>IsEmpty(ListItem.Art(banner))</visible>
							<control type="image">
								<top>6</top>
								<left>6</left>
								<width>786</width>
								<height>146</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
							</control>
							<control type="image">
								<top>6</top>
								<width>450</width>
								<height>146</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							</control>
						</control>
						<control type="image">
							<animation center="auto" condition="Control.HasFocus(58)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
							<animation center="auto" condition="Control.HasFocus(58)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
							<top>6</top>
							<left>6</left>
							<width>786</width>
							<height>146</height>
							<texture>thumbs/diffuse.png</texture>
						</control>
						<control type="image">
							<top>6</top>
							<left>732</left>
							<width>60</width>
							<height>60</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>1906</left>
				<top>30</top>
				<width>14</width>
				<height>1035</height>
				<onleft>50</onleft>
				<onright>SetProperty(MediaMenu,True,home)</onright>
				<onright>SetFocus(9050)</onright>
				<ondown>60</ondown>
				<onup>60</onup>
			</control>
		</control>
	</include>
</includes>