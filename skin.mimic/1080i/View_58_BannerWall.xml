<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<!-- BannerWall -->
	<include name="BannerWall">
		<control type="group">
			<visible>Control.IsVisible(58) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<control type="image">
				<visible>Control.HasFocus(58)</visible>
                <left>156</left>
                <top>104</top>
                <width>810</width>
                <height>170</height>
                <animation effect="fade" time="320" delay="200">Visible</animation>
                <animation effect="fade" time="50">Hidden</animation>
                <texture colordiffuse="$VAR[ColorHighlightVar]">listselect_fo.png</texture>
                <animation effect="slide" end="798,0" time="300" tween="cubic" easing="inout" condition="Container(58).Column(1)">Conditional</animation>
                <animation effect="slide" end="0,158" time="300" tween="cubic" easing="inout" condition="Container(58).Row(4)">Conditional</animation>
                <animation effect="slide" end="0,158" time="300" tween="cubic" easing="inout" condition="Container(58).Row(4) | Container(58).Row(3)">Conditional</animation>
                <animation effect="slide" end="0,158" time="300" tween="cubic" easing="inout" condition="Container(58).Row(4) | Container(58).Row(3) | Container(58).Row(2)">Conditional</animation>
                <animation effect="slide" end="0,158" time="300" tween="cubic" easing="inout" condition="Container(58).Row(4) | Container(58).Row(3) | Container(58).Row(2) | Container(58).Row(1)">Conditional</animation>
            </control>
			<control type="panel" id="58">
				<left>162</left>
				<top>110</top>
				<width>1596</width>
				<height>790</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>60</onright>
				<onup>58</onup>
				<ondown>58</ondown>
				<pagecontrol>60</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="31088">icons</viewtype>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<visible>Container.Content(tvshows) | Container.Content(movies)</visible>
				<itemlayout height="158" width="798">
					<control type="image">
						<top>6</top>
						<left>6</left>
						<width>786</width>
						<height>146</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$VAR[BannerThumb]</texture>
						<visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
					</control>
					<control type="image">
						<top>6</top>
						<left>6</left>
						<width>786</width>
						<height>146</height>
						<aspectratio align="center" aligny="center">keep</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<visible>IsEmpty(ListItem.Art(banner)) + IsEmpty(ListItem.Art(fanart))</visible>
					</control>
					<control type="group">
						<visible>IsEmpty(ListItem.Art(banner))</visible>
						<control type="image">
							<top>6</top>
							<left>6</left>
							<width>786</width>
							<height>146</height>
							<aspectratio>scale</aspectratio>
							<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
						</control>
						<control type="image">
							<top>5</top>
							<width>450</width>
							<height>145</height>
							<aspectratio>keep</aspectratio>
							<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
						</control>
					</control>
					<control type="image">
						<top>6</top>
						<left>6</left>
						<width>786</width>
						<height>146</height>
						<texture>thumbs/diffuse.png</texture>
					</control>
					<control type="image">
						<top>6</top>
						<left>732</left>
						<width>60</width>
						<height>60</height>
						<texture>$VAR[OverlayVar]</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
					</control>
				</itemlayout>
				<focusedlayout height="158" width="798">
					<control type="group">
						<include>PanelFocusedItemZoom</include>
						<control type="group">
							<visible>!IsEmpty(ListItem.Art(banner)) | IsEmpty(ListItem.Art(fanart))</visible>
							<control type="image">
								<top>6</top>
								<left>6</left>
								<width>786</width>
								<height>146</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$VAR[BannerThumb]</texture>
							</control>
						</control>
						<control type="group">
							<visible>IsEmpty(ListItem.Art(banner)) + IsEmpty(ListItem.Art(fanart))</visible>
							<control type="image">
								<top>6</top>
								<left>6</left>
								<width>786</width>
								<height>146</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
						</control>
						<control type="group">
							<visible>IsEmpty(ListItem.Art(banner))</visible>
							<control type="image">
								<top>6</top>
								<left>6</left>
								<width>786</width>
								<height>146</height>
								<aspectratio>scale</aspectratio>
								<texture background="true">$INFO[ListItem.Art(fanart)]</texture>
							</control>
							<control type="image">
								<top>6</top>
								<width>450</width>
								<height>146</height>
								<aspectratio>keep</aspectratio>
								<texture background="true">$INFO[ListItem.Art(clearlogo)]</texture>
							</control>
						</control>
						<control type="image">
							<animation center="auto" condition="Control.HasFocus(58)" easing="inout" effect="fade" end="0" start="100" time="300" tween="sine">Focus</animation>
							<animation center="auto" condition="Control.HasFocus(58)" easing="inout" effect="fade" end="100" start="0" time="300" tween="sine">UnFocus</animation>
							<top>6</top>
							<left>6</left>
							<width>786</width>
							<height>146</height>
							<texture>thumbs/diffuse.png</texture>
						</control>
						<control type="image">
							<top>6</top>
							<left>732</left>
							<width>60</width>
							<height>60</height>
							<texture>$VAR[OverlayVar]</texture>
							<aspectratio align="center" aligny="top">keep</aspectratio>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>1906</left>
				<top>30</top>
				<width>14</width>
				<height>1035</height>
				<onleft>50</onleft>
				<onright>SetProperty(MediaMenu,True,home)</onright>
				<onright>SetFocus(9050)</onright>
				<ondown>60</ondown>
				<onup>60</onup>
			</control>
			<control type="group">
				<!--<animation effect="slide" tween="cubic" time="400" start="0,806" end="0,0">VisibleChange</animation>-->
				<control type="group">
					<left>135</left>
					<top>915</top>
					<include>VisibleFadeEffect</include>
					<control type="label">
						<left>0</left>
						<top>0</top>
						<width>1150</width>
						<height>42</height>
						<align>left</align>
						<font>font16_title</font>
						<textcolor>$VAR[ColorTextVar]</textcolor>
						<scroll>true</scroll>
						<label>[B]$INFO[ListItem.Label][/B]</label>
						<textoffsetx>30</textoffsetx>
					</control>
					<control type="label">
						<left>0</left>
						<top>45</top>
						<width>1100</width>
						<height>30</height>
						<align>left</align>
						<font>font13_title</font>
						<textcolor>$VAR[ColorTextVar]</textcolor>
						<label>$VAR[FloorSubLabelVar]</label>
						<textoffsetx>30</textoffsetx>
					</control>
				</control>
				<control type="group">
					<left>1414</left>
					<top>905</top>
					<width>1840</width>
					<height>90</height>
					<orientation>horizontal</orientation>
					<include>VisibleFadeEffect</include>
					<visible>Container.Content(tvshows) | Container.Content(seasons)</visible>
					<control type="image" id="800013">
						<left>32</left>
						<width>198</width>
						<include>MediaFlagVars</include>
						<bordersize>2</bordersize>
						<texture>$INFO[ListItem.Studio,flags/studios/,.png]</texture>
						<visible>!IsEmpty(Control.GetLabel(800013))</visible>
					</control>
					<control type="label">
						<left>32</left>
						<width>198</width>
						<height>90</height>
						<align>center</align>
						<label>$INFO[ListItem.Studio]</label>
						<font>font10</font>
						<textcolor>$VAR[ColorTextVar]</textcolor>
						<wrapmultiline>true</wrapmultiline>
						<visible>IsEmpty(Control.GetLabel(800013))</visible>
					</control>
					<control type="image">
						<left>230</left>
						<include>MediaFlagVars</include>
						<texture fallback="flags/mpaa/NR.png">$VAR[RatingFlagVar]</texture>
					</control>
				</control>
				<control type="group">
					<left>1292</left>
					<top>905</top>
					<width>1840</width>
					<height>90</height>
					<include>VisibleFadeEffect</include>
					<visible>![Container.Content(tvshows) | Container.Content(seasons) | Container.Content(files)]</visible>
					<visible>!StringCompare(Container.SortMethod,$LOCALIZE[13409])</visible>
					<control type="image">
						<include>MediaFlagVars</include>
						<texture>$INFO[ListItem.VideoResolution,flags/resolution/,.png]</texture>
						<visible>!IsEmpty(ListItem.VideoResolution)</visible>
					</control>
					<control type="image">
						<left>160</left>
						<include>MediaFlagVars</include>
						<texture>$INFO[ListItem.AudioCodec,flags/audio/,.png]</texture>
						<visible>!IsEmpty(ListItem.AudioCodec)</visible>
					</control>
					<control type="image">
						<left>328</left>
						<include>MediaFlagVars</include>
						<texture>$VAR[SourceFlagVar,flags/video/,.png]</texture>
						<visible>!IsEmpty(ListItem.VideoCodec)</visible>
					</control>
				</control>
				<control type="group">
					<left>1430</left>
					<top>935</top>
					<width>500</width>
					<height>150</height>
					<include>VisibleFadeEffect</include>
					<visible>StringCompare(Container.SortMethod,$LOCALIZE[13409])</visible>
					<control type="image">
						<height>50</height>
						<colordiffuse>$VAR[ColorTextVar]</colordiffuse>
						<texture>imdb.png</texture>
						<aspectratio align="left" aligny="top">keep</aspectratio>
					</control>
					<control type="label">
						<left>15</left>
						<top>3</top>
						<width>200</width>
						<height>42</height>
						<font>font13</font>
						<textcolor>$VAR[ColorTextVar]</textcolor>
						<label>[B][UPPERCASE]$LOCALIZE[13409][/UPPERCASE] $INFO[ListItem.Top250,#][/B]</label>
						<align>left</align>
					</control>
				</control>
			</control>
		</control>
	</include>
</includes>