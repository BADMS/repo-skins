<window> 	
	<defaultcontrol always="true">10</defaultcontrol> 	

	<allowoverlay>no</allowoverlay> 	
	<controls> 	
		<control type="button" id="10"> 	
			<description>trigger</description> 	
			<onfocus>Skin.SetBool(Startup)</onfocus> 	
			<onfocus>SetFocus(11)</onfocus> 	
			<texturenofocus>-</texturenofocus> 	
			<texturefocus>-</texturefocus> 	
			<visible>!Skin.HasSetting(Use_Startup_Playlist)</visible> 	
		</control> 	
		<control type="button" id="10"> 	
			<description>trigger with startup Playlist</description> 	
			<onfocus>Skin.SetBool(Startup)</onfocus> 	
			<onfocus>XBMC.PlayMedia($INFO[Skin.String(Startup_Playlist_Path)])</onfocus> 	
			<onfocus>SetFocus(11)</onfocus> 	
			<texturenofocus>-</texturenofocus> 	
			<texturefocus>-</texturefocus> 	
			<visible>Skin.HasSetting(Use_Startup_Playlist)</visible> 	
		</control> 	
		<control type="button" id="11"> 	
			<description>Trigger Next Aired</description> 	
			<texturenofocus>-</texturenofocus> 	
			<texturefocus>-</texturefocus> 	
			<onfocus>RunScript(script.randomitems,limit=10&amp;albums=True&amp;alarm=60)</onfocus>
			<onfocus>RunScript(script.tv.show.next.aired,silent=True&amp;alarm=3600)</onfocus> 
			<onfocus>ReplaceWindow(Home)</onfocus>
		</control> 	
		<control type="image"> 	
			<description>Background image</description> 	
			<posx>0</posx> 	
			<posy>0</posy> 	
			<width>1280</width> 	
			<height>720</height> 	
			<texture background="true">default.png</texture> 	
			<animation effect="fade" end="50" time="4000">WindowClose</animation> 	
			<visible>!Skin.HasSetting(Wallpaper)</visible> 	
			<visible>!Skin.HasSetting(Default Wallpaper)</visible> 	
		</control> 	
		<control type="image"> 	
			<description>Background image</description> 	
			<posx>0</posx> 	
			<posy>0</posy> 	
			<width>1280</width> 	
			<height>720</height> 	
			<texture background="true">Left Curtain.png</texture> 	
			<animation effect="slide" end="-657,0" delay="50" tween="linear" time="4000">WindowClose</animation> 	
			<visible>!Skin.HasSetting(Wallpaper)</visible> 	
			<visible>!Skin.HasSetting(Default Wallpaper)</visible> 	
		</control> 	
		<control type="image"> 	
			<description>Background image</description> 	
			<posx>0</posx> 	
			<posy>0</posy> 	
			<width>1280</width> 	
			<height>720</height> 	
			<texture background="true">right Curtain.png</texture> 	
			<animation effect="slide" end="657,0" delay="50" tween="linear" time="4000">WindowClose</animation> 	
			<visible>!Skin.HasSetting(Wallpaper)</visible> 	
			<visible>!Skin.HasSetting(Default Wallpaper)</visible> 	
		</control> 	
		<control type="image"> 	
			<description>Background image</description> 	
			<posx>0</posx> 	
			<posy>0</posy> 	
			<width>1280</width> 	
			<height>720</height> 	
			<texture background="true">Dark Mask.png</texture> 	
			<animation effect="fade" end="50" time="3000">WindowClose</animation> 	
			<visible>!Skin.HasSetting(Wallpaper)</visible> 	
			<visible>!Skin.HasSetting(Default Wallpaper)</visible> 	
		</control> 	
	</controls> 	
</window> 	

