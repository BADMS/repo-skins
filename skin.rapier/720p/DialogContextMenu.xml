				</control>
			</control>			
			
			<control type="button">
				<left>284</left>
				<top>-24</top>
				<include>DialogCloseBtn</include>
			</control>
			
			<control type="button" id="1000">
				<description>Button Template</description>
				<left>32</left>
				<include>ContextMenuBtn</include>
				<include>DialogOpenCloseAnim</include>
			</control>
		</control>		
