				<preloaditems>2</preloaditems>
				<visible>Container.Content(TVShows) | Container.Content(Movies) | Container.Content(Episodes) | Container.Content(Seasons)</visible>
				<itemlayout condition="!Skin.HasSetting(enablebannernotlogo)  + ![Container.Content(Episodes) | Container.Content(Seasons)]" width="650" height="110">
