				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>35r</left>
				<top>95</top>
				<width>25</width>
				<height>550</height>
				<texturesliderbackground border="0,14,0,14">ScrollBarV.png</texturesliderbackground>
				<texturesliderbar border="0,14,0,14">ScrollBarV_bar.png</texturesliderbar>
				<texturesliderbarfocus border="0,14,0,14">ScrollBarV_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>ScrollBarNib.png</textureslidernib>
				<textureslidernibfocus>ScrollBarNib.png</textureslidernibfocus>
				<onleft>730</onleft>
				<onright>800</onright>
				<showonepage>true</showonepage>
				<orientation>vertical</orientation>
				<visible>Control.IsVisible(730)</visible>
			</control>
			<control type="group">
				<animation effect="fade" start="0" end="100" time="1600" delay="2000">Visible</animation>
				<animation effect="fade" start="100" end="0" time="0">Hidden</animation>
				<visible>!IsEmpty(ListItem.Title) + !Container.OnNext + !Container.OnPrevious</visible>
				<control type="image">
					<left>50</left>
					<top>100</top>
					<width>530</width>
					<height>375</height>
					<colordiffuse>AAFFFFFF</colordiffuse>
					<texture border="20">ContentPanel.png</texture>
				</control>
				<control type="textbox">
					<description>Description Value for Video</description>
					<left>70</left>
					<top>120</top>
					<width>490</width>
					<height>260</height>
					<font>font12</font>
					<align>justify</align>
					<textcolor>white</textcolor>
					<label>$VAR[VideoDescription]</label>
					<autoscroll delay="3000" time="1800" repeat="10000">!Skin.HasSetting(disableautoscroll)</autoscroll>
				</control>
				<control type="label">
					<left>70</left>
					<top>380</top>
					<width>490</width>
					<height>30</height>
					<font>font12</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<scroll>true</scroll>
					<align>left</align>
					<aligny>center</aligny>
					<label>$INFO[ListItem.LastPlayed, [B][COLOR=blue]$LOCALIZE[568]$LOCALIZE[31000][/COLOR][/B] ]</label>
				</control>
				<control type="grouplist">
					<description>Media Codec Flagging Images</description>
					<left>71</left>
					<top>432</top>
					<width>488</width>
					<align>center</align>
					<itemgap>2</itemgap>
					<orientation>horizontal</orientation>
					<include>VideoMPAAFlaggingConditions</include>
					<include>VideoSubTitleFlagging</include>
					<include>VideoCodecFlaggingConditions</include>
					<include>AudioCodecFlaggingConditions</include>
					<include>AudioChannelsFlaggingConditions</include>
					<include>AspectCodecFlaggingConditions</include>
					<visible>![Container.Content(TVShows) | Container.Content(Seasons)]</visible>
				</control>
				<control type="grouplist">
					<description>Media Genre Flagging</description>
					<left>70</left>
					<top>414</top>
					<width>490</width>
					<align>center</align>
					<itemgap>5</itemgap>
					<orientation>horizontal</orientation>
					<control type="image">
						<description>Rating image</description>
						<width>116</width>
						<height>54</height>
						<aspectratio>keep</aspectratio>
						<fadetime>IconCrossfadeTime</fadetime>
						<texture>$VAR[RatingMPAA,flagging/ratings/,.png]</texture>
						<visible>!IsEmpty(ListItem.Title)</visible>
					</control>
					<include>SmallVideoGenreFlagging</include>
					<visible>Container.Content(TVShows) | Container.Content(Seasons)</visible>
				</control>
			</control>
